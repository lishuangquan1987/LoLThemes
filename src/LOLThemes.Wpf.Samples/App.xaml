<Application
    x:Class="LOLThemes.Wpf.Samples.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:LOLThemes.Wpf.Samples"
    StartupUri="MainView.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!--  先加载基础资源：Colors 和 Sizes  -->
                <ResourceDictionary Source="pack://application:,,,/LOLThemes.Wpf;component/Themes/Colors.Dark.V2.xaml" />
                <ResourceDictionary Source="pack://application:,,,/LOLThemes.Wpf;component/Themes/Sizes.Medium.xaml" />
                <!--  再加载控件库的主题资源  -->
                <ResourceDictionary Source="pack://application:,,,/LOLThemes.Wpf;component/Themes/Generic.xaml" />
                <!--  ShowMeTheXAML AvalonEdit 样式  -->
                <ResourceDictionary Source="pack://application:,,,/ShowMeTheXAML.AvalonEdit;component/Themes/xamldisplayer.xaml" />
                <!--  XamlDisplay 自定义样式  -->
                <ResourceDictionary Source="Styles/XamlDisplayStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!--  枚举值相等性转换器（用于显示当前选中的菜单项）  -->
            <local:EnumEqualityConverter x:Key="EnumEqualityConverter" />
            <!--  布尔值到可见性转换器  -->
            <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />

