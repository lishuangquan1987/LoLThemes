<Window x:Class="LOLThemes.Wpf.Samples.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LOLThemes.Wpf.Samples"
        xmlns:vm="clr-namespace:LOLThemes.Wpf.Samples.ViewModels"
        xmlns:views="clr-namespace:LOLThemes.Wpf.Samples.Views"
        xmlns:helpers="clr-namespace:LOLThemes.Wpf.Helpers;assembly=LOLThemes.Wpf"
        xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
        mc:Ignorable="d"
        Title="LOL Themes - WPF 控件库示例" 
        Style="{DynamicResource LOLWindowStyle}"
        Height="800" Width="1400"
        WindowStartupLocation="CenterScreen"
        helpers:WindowHelper.EnableCustomChrome="True">
    <Window.Resources>
        <!-- 标题栏按钮模板 -->
        <ControlTemplate x:Key="HeaderButtonTemplate" TargetType="Button">
            <Border x:Name="border"
                    Background="Transparent"
                    SnapsToDevicePixels="True">
                <ContentPresenter x:Name="contentPresenter"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"/>
            </Border>
            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter TargetName="border" Property="Background" Value="{DynamicResource HoverGoldSemiBrush}"/>
                    <Setter TargetName="border" Property="BorderBrush" Value="{DynamicResource PrimaryGoldBrush}"/>
                    <Setter TargetName="border" Property="BorderThickness" Value="0.5"/>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
    </Window.Resources>
    
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>
    
    <!-- 自定义标题栏内容：尺寸切换按钮和主题切换按钮 -->
    <helpers:WindowHelper.CustomHeaderContent>
        <StackPanel Orientation="Horizontal" Margin="0,0,4,0">
            <!-- 尺寸切换按钮 -->
            <Button Width="40" 
                    Height="40"
                    ToolTip="{Binding SizeToolTip}"
                    Cursor="Hand"
                    Template="{StaticResource HeaderButtonTemplate}"
                    Command="{Binding ToggleSizeCommand}">
                <materialIcons:MaterialIcon Kind="{Binding SizeIcon}"
                                             Foreground="{DynamicResource TextPrimaryBrush}"
                                             Width="20"
                                             Height="20"/>
            </Button>
            
            <!-- 主题切换按钮 -->
            <Button Width="40" 
                    Height="40"
                    ToolTip="{Binding ThemeToolTip}"
                    Cursor="Hand"
                    Template="{StaticResource HeaderButtonTemplate}"
                    Command="{Binding ToggleThemeCommand}">
                <materialIcons:MaterialIcon Kind="{Binding ThemeIcon}"
                                             Foreground="{DynamicResource TextPrimaryBrush}"
                                             Width="20"
                                             Height="20"/>
            </Button>
        </StackPanel>
    </helpers:WindowHelper.CustomHeaderContent>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!-- 左侧导航栏 -->
        <Border Grid.Column="0" 
                Background="{DynamicResource BackgroundPanelBrush}"
                BorderBrush="{DynamicResource BorderDarkBrush}"
                BorderThickness="0,0,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- 标题 -->
                <Border Grid.Row="0" 
                        Background="{DynamicResource BackgroundMediumBrush}"
                        Padding="20"
                        BorderBrush="{DynamicResource BorderGoldBrush}"
                        BorderThickness="0,0,0,2">
                    <StackPanel>
                        <TextBlock Text="LOL THEMES" 
                                  FontSize="{DynamicResource FontSizeLarge}"
                                  FontWeight="{StaticResource FontWeightBold}"
                                  Foreground="{DynamicResource PrimaryGoldBrush}"
                                  HorizontalAlignment="Center"/>
                        <TextBlock Text="WPF 控件库" 
                                  FontSize="{DynamicResource FontSizeSmall}"
                                  Foreground="{DynamicResource TextSecondaryBrush}"
                                  HorizontalAlignment="Center"
                                  Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>
                
                <!-- 导航菜单 -->
                <ListBox Grid.Row="1"
                        ItemsSource="{Binding NavigationItems}"
                        SelectedValue="{Binding CurrentView}"
                        SelectedValuePath="ViewName"
                        Background="Transparent"
                        BorderThickness="0"
                        Padding="10">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListBoxItem">
                                        <Border x:Name="border"
                                                Background="Transparent"
                                                BorderBrush="{DynamicResource BorderGoldBrush}"
                                                BorderThickness="0"
                                                Margin="0,2"
                                                Padding="15,12"
                                                CornerRadius="0">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="{Binding Icon}"
                                                          FontSize="{StaticResource FontSizeMedium}"
                                                          Margin="0,0,10,0"
                                                          VerticalAlignment="Center"/>
                                                <TextBlock Text="{Binding Name}"
                                                          FontSize="{StaticResource FontSizeNormal}"
                                                          Foreground="{DynamicResource TextPrimaryBrush}"
                                                          VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="{DynamicResource BackgroundMediumBrush}"/>
                                                <Setter TargetName="border" Property="BorderThickness" Value="2,0,0,0"/>
                                            </Trigger>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="{DynamicResource BackgroundLightBrush}"/>
                                                <Setter TargetName="border" Property="BorderThickness" Value="3,0,0,0"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListBox.ItemContainerStyle>
                </ListBox>
            </Grid>
        </Border>
        
        <!-- 右侧内容区域 -->
        <Border Grid.Column="1" 
                Background="{DynamicResource BackgroundDarkBrush}">
            <ContentControl x:Name="ContentArea">
                <ContentControl.Style>
                    <Style TargetType="ContentControl">
                        <Setter Property="Content">
                            <Setter.Value>
                                <TextBlock Text="请从左侧菜单选择一个视图"
                                          FontSize="{StaticResource FontSizeLarge}"
                                          Foreground="{DynamicResource TextSecondaryBrush}"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding CurrentView}" Value="ControlShowcaseView">
                                <Setter Property="Content">
                                    <Setter.Value>
                                        <views:ControlShowcaseView/>
                                    </Setter.Value>
                                </Setter>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding CurrentView}" Value="Screenshot1View">
                                <Setter Property="Content">
                                    <Setter.Value>
                                        <views:Screenshot1View/>
                                    </Setter.Value>
                                </Setter>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding CurrentView}" Value="Screenshot2View">
                                <Setter Property="Content">
                                    <Setter.Value>
                                        <views:Screenshot2View/>
                                    </Setter.Value>
                                </Setter>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding CurrentView}" Value="Screenshot3View">
                                <Setter Property="Content">
                                    <Setter.Value>
                                        <views:Screenshot3View/>
                                    </Setter.Value>
                                </Setter>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding CurrentView}" Value="Screenshot4View">
                                <Setter Property="Content">
                                    <Setter.Value>
                                        <views:Screenshot4View/>
                                    </Setter.Value>
                                </Setter>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding CurrentView}" Value="Screenshot5View">
                                <Setter Property="Content">
                                    <Setter.Value>
                                        <views:Screenshot5View/>
                                    </Setter.Value>
                                </Setter>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding CurrentView}" Value="Screenshot6View">
                                <Setter Property="Content">
                                    <Setter.Value>
                                        <views:Screenshot6View/>
                                    </Setter.Value>
                                </Setter>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ContentControl.Style>
            </ContentControl>
        </Border>
    </Grid>
</Window>
