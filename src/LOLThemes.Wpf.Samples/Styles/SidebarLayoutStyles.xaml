<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:LOLThemes.Wpf.Controls;assembly=LOLThemes.Wpf"
                    xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF">

    <!--  合并基础资源  -->
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/LOLThemes.Wpf;component/Themes/Colors.xaml" />
        <ResourceDictionary Source="/LOLThemes.Wpf;component/Themes/Fonts.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <!--  渚ц竟鏍忓竷灞€鏍峰紡 - 绫讳技 MDIX 鏂囨。缃戠珯  -->
    <Style x:Key="SidebarLayoutStyle" TargetType="{x:Type Grid}">
        <Setter Property="Background" Value="{DynamicResource BackgroundDarkBrush}" />
    </Style>

    <!-- 浠ｇ爜棰勮鍖哄煙鏍峰紡  -->
    <Style x:Key="CodePreviewStyle" TargetType="{x:Type Border}">
        <Setter Property="Background" Value="{DynamicResource BackgroundPanelBrush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource BorderGoldBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="4" />
        <Setter Property="Padding" Value="0" />
        <Setter Property="Margin" Value="0" />
    </Style>

    <!-- 浠ｇ爜棰勮鏍囬鏍忔牱寮? -->
    <Style x:Key="CodePreviewHeaderStyle" TargetType="{x:Type Border}">
        <Setter Property="Background" Value="{DynamicResource BackgroundInputBrush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource BorderGoldBrush}" />
        <Setter Property="BorderThickness" Value="0,0,0,1" />
        <Setter Property="Padding" Value="10,8" />
        <Setter Property="CornerRadius" Value="4,4,0,0" />
    </Style>

</ResourceDictionary>

