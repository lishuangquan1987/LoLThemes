<UserControl x:Class="LOLThemes.Wpf.Samples.Views.ButtonShowcaseView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:smtx="clr-namespace:ShowMeTheXAML;assembly=ShowMeTheXAML"
             Background="{DynamicResource BackgroundDarkBrush}">
    
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Padding="30">
        <StackPanel>
            <!-- 标题 -->
            <Border Background="{DynamicResource BackgroundMediumBrush}"
                   BorderBrush="{DynamicResource BorderGoldBrush}"
                   BorderThickness="0,0,0,2"
                   Padding="20,15"
                   Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Button - 按钮" 
                          FontSize="{DynamicResource FontSizeLarge}"
                          FontWeight="{StaticResource FontWeightBold}"
                          Foreground="{DynamicResource PrimaryGoldBrush}"
                          Margin="0,0,0,8"/>
                    <TextBlock Text="按钮是用户界面中最常用的控件之一，用于触发操作。" 
                          FontSize="{StaticResource FontSizeNormal}"
                          Foreground="{DynamicResource TextSecondaryBrush}"/>
                </StackPanel>
            </Border>
            
            <!-- 基础用法 -->
            <Border Background="{DynamicResource BackgroundMediumBrush}"
                   BorderBrush="{DynamicResource BorderDarkBrush}"
                   BorderThickness="0.5"
                   Padding="20"
                   Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="基础用法" 
                          FontSize="{StaticResource FontSizeLarge}"
                          FontWeight="{StaticResource FontWeightBold}"
                          Foreground="{DynamicResource PrimaryGoldBrush}"
                          Margin="0,0,0,15"/>
                    
                    <smtx:XamlDisplay UniqueKey="ButtonBasic" Margin="0,0,0,0">
                <WrapPanel>
                    <Button Content="默认按钮" 
                           Style="{StaticResource LOLButtonStyle}"
                           Width="150" Height="40" Margin="0,0,15,0"/>
                    <Button Content="主要按钮" 
                           Style="{StaticResource LOLPrimaryButtonStyle}"
                           Width="150" Height="40" Margin="0,0,15,0"/>
                    <Button Content="次要按钮" 
                           Style="{StaticResource LOLSecondaryButtonStyle}"
                           Width="150" Height="40" Margin="0,0,15,0"/>
                    <Button Content="成功按钮" 
                           Style="{StaticResource LOLSuccessButtonStyle}"
                           Width="150" Height="40" Margin="0,0,15,0"/>
                    <Button Content="危险按钮" 
                           Style="{StaticResource LOLDangerButtonStyle}"
                           Width="150" Height="40"/>
                    </WrapPanel>
                    </smtx:XamlDisplay>
                </StackPanel>
            </Border>
            
            <!-- 不同尺寸 -->
            <Border Background="{DynamicResource BackgroundMediumBrush}"
                   BorderBrush="{DynamicResource BorderDarkBrush}"
                   BorderThickness="0.5"
                   Padding="20"
                   Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="不同尺寸" 
                          FontSize="{StaticResource FontSizeLarge}"
                          FontWeight="{StaticResource FontWeightBold}"
                          Foreground="{DynamicResource PrimaryGoldBrush}"
                          Margin="0,0,0,15"/>
                    
                    <smtx:XamlDisplay UniqueKey="ButtonSizes" Margin="0,0,0,0">
                <WrapPanel>
                    <Button Content="小按钮" 
                           Style="{StaticResource LOLButtonStyle}"
                           FontSize="{StaticResource FontSizeSmall}"
                           Width="100" Height="30" Margin="0,0,15,0"/>
                    <Button Content="中等按钮" 
                           Style="{StaticResource LOLButtonStyle}"
                           Width="150" Height="40" Margin="0,0,15,0"/>
                    <Button Content="大按钮" 
                           Style="{StaticResource LOLButtonStyle}"
                           FontSize="{StaticResource FontSizeLarge}"
                           Width="200" Height="50" Margin="0,0,15,0"/>
                    </WrapPanel>
                    </smtx:XamlDisplay>
                </StackPanel>
            </Border>
            
            <!-- 不同状态 -->
            <Border Background="{DynamicResource BackgroundMediumBrush}"
                   BorderBrush="{DynamicResource BorderDarkBrush}"
                   BorderThickness="0.5"
                   Padding="20"
                   Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="不同状态" 
                          FontSize="{StaticResource FontSizeLarge}"
                          FontWeight="{StaticResource FontWeightBold}"
                          Foreground="{DynamicResource PrimaryGoldBrush}"
                          Margin="0,0,0,15"/>
                    
                    <smtx:XamlDisplay UniqueKey="ButtonStates" Margin="0,0,0,0">
                <WrapPanel>
                    <Button Content="正常状态" 
                           Style="{StaticResource LOLButtonStyle}"
                           Width="150" Height="40" Margin="0,0,15,0"/>
                    <Button Content="禁用状态" 
                           Style="{StaticResource LOLButtonStyle}"
                           IsEnabled="False"
                           Width="150" Height="40"/>
                    </WrapPanel>
                    </smtx:XamlDisplay>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>

