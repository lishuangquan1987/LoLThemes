<UserControl x:Class="LOLThemes.Wpf.Samples.Views.CalendarShowcaseView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:smtx="clr-namespace:ShowMeTheXAML;assembly=ShowMeTheXAML"
             Background="{DynamicResource BackgroundDarkBrush}">
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Padding="30">
        <StackPanel>
            <Border Background="{DynamicResource BackgroundMediumBrush}"
                   BorderBrush="{DynamicResource BorderGoldBrush}"
                   BorderThickness="0,0,0,2"
                   Padding="20,15"
                   Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Calendar - 日历" 
                          FontSize="{DynamicResource FontSizeLarge}"
                          FontWeight="{StaticResource FontWeightBold}"
                          Foreground="{DynamicResource PrimaryGoldBrush}"
                          Margin="0,0,0,8"/>
                    <TextBlock Text="日历用于显示和选择日期。" 
                          FontSize="{StaticResource FontSizeNormal}"
                          Foreground="{DynamicResource TextSecondaryBrush}"/>
                </StackPanel>
            </Border>
            
            <Border Background="{DynamicResource BackgroundMediumBrush}"
                   BorderBrush="{DynamicResource BorderDarkBrush}"
                   BorderThickness="0.5"
                   Padding="20"
                   Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="基础用法" 
                          FontSize="{DynamicResource FontSizeLarge}"
                          FontWeight="{StaticResource FontWeightBold}"
                          Foreground="{DynamicResource PrimaryGoldBrush}"
                          Margin="0,0,0,15"/>
                    
                    <smtx:XamlDisplay UniqueKey="CalendarBasic" Margin="0,0,0,0">
                        <Calendar Width="300" HorizontalAlignment="Left"/>
                    </smtx:XamlDisplay>
                </StackPanel>
            </Border>
            
            <!-- 不同视图模式的日历 -->
            <Border Background="{DynamicResource BackgroundMediumBrush}"
                   BorderBrush="{DynamicResource BorderDarkBrush}"
                   BorderThickness="0.5"
                   Padding="20"
                   Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="不同视图模式的日历" 
                          FontSize="{DynamicResource FontSizeLarge}"
                          FontWeight="{StaticResource FontWeightBold}"
                          Foreground="{DynamicResource PrimaryGoldBrush}"
                          Margin="0,0,0,15"/>
                    
                    <smtx:XamlDisplay UniqueKey="CalendarViewModes" Margin="0,0,0,0">
                        <StackPanel HorizontalAlignment="Left">
                            <TextBlock Text="月视图" 
                                     Foreground="{DynamicResource TextPrimaryBrush}"
                                     Margin="0,0,0,10"/>
                            <Calendar Width="300" HorizontalAlignment="Left"
                                     DisplayMode="Month"
                                     Margin="0,0,0,20"/>
                            
                            <TextBlock Text="年视图" 
                                     Foreground="{DynamicResource TextPrimaryBrush}"
                                     Margin="0,0,0,10"/>
                            <Calendar Width="300" HorizontalAlignment="Left"
                                     DisplayMode="Year"
                                     Margin="0,0,0,20"/>
                            
                            <TextBlock Text="十年视图" 
                                     Foreground="{DynamicResource TextPrimaryBrush}"
                                     Margin="0,0,0,10"/>
                            <Calendar Width="300" HorizontalAlignment="Left"
                                     DisplayMode="Decade"/>
                        </StackPanel>
                    </smtx:XamlDisplay>
                </StackPanel>
            </Border>
            
            <!-- 带有日期选择范围的日历 -->
            <Border Background="{DynamicResource BackgroundMediumBrush}"
                   BorderBrush="{DynamicResource BorderDarkBrush}"
                   BorderThickness="0.5"
                   Padding="20"
                   Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="带有日期选择范围的日历" 
                          FontSize="{DynamicResource FontSizeLarge}"
                          FontWeight="{StaticResource FontWeightBold}"
                          Foreground="{DynamicResource PrimaryGoldBrush}"
                          Margin="0,0,0,15"/>
                    
                    <smtx:XamlDisplay UniqueKey="CalendarSelectionMode" Margin="0,0,0,0">
                        <StackPanel HorizontalAlignment="Left">
                            <TextBlock Text="多选模式" 
                                     Foreground="{DynamicResource TextPrimaryBrush}"
                                     Margin="0,0,0,10"/>
                            <Calendar Width="300" HorizontalAlignment="Left"
                                     SelectionMode="MultipleRange"
                                     Margin="0,0,0,20"/>
                        </StackPanel>
                    </smtx:XamlDisplay>
                </StackPanel>
            </Border>
            
            <!-- 带有日期标记的日历 -->
            <Border Background="{DynamicResource BackgroundMediumBrush}"
                   BorderBrush="{DynamicResource BorderDarkBrush}"
                   BorderThickness="0.5"
                   Padding="20"
                   Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="带有日期标记的日历" 
                          FontSize="{DynamicResource FontSizeLarge}"
                          FontWeight="{StaticResource FontWeightBold}"
                          Foreground="{DynamicResource PrimaryGoldBrush}"
                          Margin="0,0,0,15"/>
                    
                    <smtx:XamlDisplay UniqueKey="CalendarWithMarkedDates" Margin="0,0,0,0">
                        <StackPanel HorizontalAlignment="Left">
                            <Calendar Width="300" HorizontalAlignment="Left">
                                <Calendar.Resources>
                                    <Style TargetType="CalendarDayButton">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ElementName=calendar, Path=SelectedDate}" Value="">
                                                <Setter Property="Background" Value="Transparent"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Calendar.Resources>
                            </Calendar>
                            <TextBlock Text="注意：这里显示的是基础日历，您可以通过样式定制添加日期标记" 
                                     Foreground="{DynamicResource TextSecondaryBrush}"
                                     FontSize="{StaticResource FontSizeSmall}"
                                     Margin="0,10,0,0"/>
                        </StackPanel>
                    </smtx:XamlDisplay>
                </StackPanel>
            </Border>
            
            <!-- 带有自定义样式的日历 -->
            <Border Background="{DynamicResource BackgroundMediumBrush}"
                   BorderBrush="{DynamicResource BorderDarkBrush}"
                   BorderThickness="0.5"
                   Padding="20"
                   Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="带有自定义样式的日历" 
                          FontSize="{DynamicResource FontSizeLarge}"
                          FontWeight="{StaticResource FontWeightBold}"
                          Foreground="{DynamicResource PrimaryGoldBrush}"
                          Margin="0,0,0,15"/>
                    
                    <smtx:XamlDisplay UniqueKey="CalendarCustomStyle" Margin="0,0,0,0">
                        <StackPanel HorizontalAlignment="Left">
                            <Calendar Width="300" HorizontalAlignment="Left"
                                     Style="{StaticResource LOLCalendarStyle}"/>
                        </StackPanel>
                    </smtx:XamlDisplay>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>

