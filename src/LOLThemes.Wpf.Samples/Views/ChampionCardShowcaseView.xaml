<UserControl x:Class="LOLThemes.Wpf.Samples.Views.ChampionCardShowcaseView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:smtx="clr-namespace:ShowMeTheXAML;assembly=ShowMeTheXAML"
             xmlns:controls="clr-namespace:LOLThemes.Wpf.Controls;assembly=LOLThemes.Wpf"
             Background="{StaticResource BackgroundDarkBrush}">
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Padding="30">
        <StackPanel>
            <!-- 标题 -->
            <Border Background="{StaticResource BackgroundMediumBrush}"
                   BorderBrush="{StaticResource BorderGoldBrush}"
                   BorderThickness="0,0,0,2"
                   Padding="20,15"
                   Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="ChampionCard - 英雄卡片" 
                          FontSize="{StaticResource FontSizeXXLarge}"
                          FontWeight="{StaticResource FontWeightBold}"
                          Foreground="{StaticResource PrimaryGoldBrush}"
                          Margin="0,0,0,8"/>
                    <TextBlock Text="英雄卡片用于显示英雄联盟中的英雄信息，支持选中状态。" 
                          FontSize="{StaticResource FontSizeNormal}"
                          Foreground="{StaticResource TextSecondaryBrush}"/>
                </StackPanel>
            </Border>
            
            <!-- 基础用法 -->
            <Border Background="{StaticResource BackgroundMediumBrush}"
                   BorderBrush="{StaticResource BorderDarkBrush}"
                   BorderThickness="0.5"
                   Padding="20"
                   Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="基础用法" 
                          FontSize="{StaticResource FontSizeLarge}"
                          FontWeight="{StaticResource FontWeightBold}"
                          Foreground="{StaticResource PrimaryGoldBrush}"
                          Margin="0,0,0,15"/>
                    
                    <smtx:XamlDisplay UniqueKey="ChampionCardBasic" Margin="0,0,0,0">
                        <WrapPanel>
                            <controls:ChampionCard ChampionName="亚索"
                                                  Width="100" Height="120"
                                                  Margin="5"/>
                            <controls:ChampionCard ChampionName="劫"
                                                  Width="100" Height="120"
                                                  Margin="5"/>
                            <controls:ChampionCard ChampionName="阿卡丽"
                                                  Width="100" Height="120"
                                                  Margin="5"/>
                        </WrapPanel>
                    </smtx:XamlDisplay>
                </StackPanel>
            </Border>
            
            <!-- 选中状态 -->
            <Border Background="{StaticResource BackgroundMediumBrush}"
                   BorderBrush="{StaticResource BorderDarkBrush}"
                   BorderThickness="0.5"
                   Padding="20"
                   Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="选中状态" 
                          FontSize="{StaticResource FontSizeLarge}"
                          FontWeight="{StaticResource FontWeightBold}"
                          Foreground="{StaticResource PrimaryGoldBrush}"
                          Margin="0,0,0,15"/>
                    
                    <smtx:XamlDisplay UniqueKey="ChampionCardSelected" Margin="0,0,0,0">
                        <WrapPanel>
                            <controls:ChampionCard ChampionName="亚索"
                                                  IsSelected="True"
                                                  Width="100" Height="120"
                                                  Margin="5"/>
                            <controls:ChampionCard ChampionName="劫"
                                                  Width="100" Height="120"
                                                  Margin="5"/>
                        </WrapPanel>
                    </smtx:XamlDisplay>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
