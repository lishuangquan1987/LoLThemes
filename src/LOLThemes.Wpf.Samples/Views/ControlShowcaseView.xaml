<UserControl x:Class="LOLThemes.Wpf.Samples.Views.ControlShowcaseView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LOLThemes.Wpf.Samples.Views"
             xmlns:viewmodels="clr-namespace:LOLThemes.Wpf.Samples.ViewModels"
             xmlns:smtx="clr-namespace:ShowMeTheXAML;assembly=ShowMeTheXAML"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1150"
             Background="{DynamicResource BackgroundDarkBrush}">
    
    <UserControl.DataContext>
        <viewmodels:ControlShowcaseViewModel/>
    </UserControl.DataContext>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!-- 左侧导航栏 -->
        <Border Grid.Column="0"
               Background="{DynamicResource BackgroundMediumBrush}"
               BorderBrush="{DynamicResource BorderDarkBrush}"
               BorderThickness="0,0,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- 标题 -->
                <Border Grid.Row="0"
                       Background="{DynamicResource BackgroundDarkBrush}"
                       BorderBrush="{DynamicResource BorderGoldBrush}"
                       BorderThickness="0,0,0,1"
                       Padding="15,20">
                    <StackPanel>
                        <TextBlock Text="控件列表"
                                  FontSize="{StaticResource FontSizeLarge}"
                                  FontWeight="{StaticResource FontWeightBold}"
                                  Foreground="{DynamicResource PrimaryGoldBrush}"/>
                        <TextBlock Text="选择控件查看详情"
                                  FontSize="{StaticResource FontSizeSmall}"
                                  Foreground="{DynamicResource TextSecondaryBrush}"
                                  Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>
                
                <!-- 控件列表 -->
                <ListBox Grid.Row="1"
                        ItemsSource="{Binding ControlItems}"
                        SelectedValue="{Binding SelectedControl}"
                        SelectedValuePath="ViewName"
                        BorderThickness="0"
                        Background="Transparent"
                        ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Background="Transparent"
                                   Padding="15,12"
                                   Margin="5,2"
                                   SnapsToDevicePixels="True">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding Icon}"
                                              FontSize="20"
                                              Margin="0,0,10,0"
                                              VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding DisplayName}"
                                              FontSize="{StaticResource FontSizeNormal}"
                                              Foreground="{DynamicResource TextPrimaryBrush}"
                                              VerticalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListBoxItem">
                                        <Border x:Name="border"
                                               Background="{TemplateBinding Background}"
                                               BorderBrush="{TemplateBinding BorderBrush}"
                                               BorderThickness="0"
                                               SnapsToDevicePixels="True">
                                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                            VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                            Margin="{TemplateBinding Padding}"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background">
                                                    <Setter.Value>
                                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                            <GradientStop Color="{DynamicResource HoverGoldSemiColor}" Offset="0"/>
                                                            <GradientStop Color="#20C8AA6E" Offset="1"/>
                                                        </LinearGradientBrush>
                                                    </Setter.Value>
                                                </Setter>
                                            </Trigger>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter TargetName="border" Property="Background">
                                                    <Setter.Value>
                                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                            <GradientStop Color="#E6C8AA6E" Offset="0"/>
                                                            <GradientStop Color="#CCC8AA6E" Offset="1"/>
                                                        </LinearGradientBrush>
                                                    </Setter.Value>
                                                </Setter>
                                                <Setter TargetName="border" Property="BorderBrush" Value="{DynamicResource PrimaryGoldBrush}"/>
                                                <Setter TargetName="border" Property="BorderThickness" Value="0,0,3,0"/>
                                                <Setter Property="Foreground" Value="{DynamicResource BackgroundDarkBrush}"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListBox.ItemContainerStyle>
                </ListBox>
            </Grid>
        </Border>
        
        <!-- 分隔线 -->
        <Border Grid.Column="1"
               Background="{DynamicResource BorderDarkBrush}"/>
        
        <!-- 右侧内容区域 -->
        <ContentControl Grid.Column="2"
                       Content="{Binding SelectedControl, Mode=OneWay}"
                       Margin="20">
            <ContentControl.Resources>
                <!-- 控件详情页面模板 -->
                <DataTemplate x:Key="ButtonShowcaseViewTemplate">
                    <local:ButtonShowcaseView/>
                </DataTemplate>
                <DataTemplate x:Key="TextBoxShowcaseViewTemplate">
                    <local:TextBoxShowcaseView/>
                </DataTemplate>
                <DataTemplate x:Key="PasswordBoxShowcaseViewTemplate">
                    <local:PasswordBoxShowcaseView/>
                </DataTemplate>
                <DataTemplate x:Key="ComboBoxShowcaseViewTemplate">
                    <local:ComboBoxShowcaseView/>
                </DataTemplate>
                <DataTemplate x:Key="CheckBoxShowcaseViewTemplate">
                    <local:CheckBoxShowcaseView/>
                </DataTemplate>
                <DataTemplate x:Key="RadioButtonShowcaseViewTemplate">
                    <local:RadioButtonShowcaseView/>
                </DataTemplate>
                <DataTemplate x:Key="ToggleButtonShowcaseViewTemplate">
                    <local:ToggleButtonShowcaseView/>
                </DataTemplate>
                <DataTemplate x:Key="SliderShowcaseViewTemplate">
                    <local:SliderShowcaseView/>
                </DataTemplate>
                <DataTemplate x:Key="ProgressBarShowcaseViewTemplate">
                    <local:ProgressBarShowcaseView/>
                </DataTemplate>
                <DataTemplate x:Key="ListBoxShowcaseViewTemplate">
                    <local:ListBoxShowcaseView/>
                </DataTemplate>
                <DataTemplate x:Key="ListViewShowcaseViewTemplate">
                    <local:ListViewShowcaseView/>
                </DataTemplate>
                <DataTemplate x:Key="TabControlShowcaseViewTemplate">
                    <local:TabControlShowcaseView/>
                </DataTemplate>
                <DataTemplate x:Key="GroupBoxShowcaseViewTemplate">
                    <local:GroupBoxShowcaseView/>
                </DataTemplate>
                <DataTemplate x:Key="MenuShowcaseViewTemplate">
                    <local:MenuShowcaseView/>
                </DataTemplate>
                <DataTemplate x:Key="ToolTipShowcaseViewTemplate">
                    <local:ToolTipShowcaseView/>
                </DataTemplate>
                <DataTemplate x:Key="GlowButtonShowcaseViewTemplate">
                    <local:GlowButtonShowcaseView/>
                </DataTemplate>
                <DataTemplate x:Key="HexagonButtonShowcaseViewTemplate">
                    <local:HexagonButtonShowcaseView/>
                </DataTemplate>
                <DataTemplate x:Key="SkillButtonShowcaseViewTemplate">
                    <local:SkillButtonShowcaseView/>
                </DataTemplate>
                <DataTemplate x:Key="ChampionCardShowcaseViewTemplate">
                    <local:ChampionCardShowcaseView/>
                </DataTemplate>
                <DataTemplate x:Key="RankBadgeShowcaseViewTemplate">
                    <local:RankBadgeShowcaseView/>
                </DataTemplate>
                <DataTemplate x:Key="CurrencyDisplayShowcaseViewTemplate">
                    <local:CurrencyDisplayShowcaseView/>
                </DataTemplate>
                <DataTemplate x:Key="StatBarShowcaseViewTemplate">
                    <local:StatBarShowcaseView/>
                </DataTemplate>
                <DataTemplate x:Key="DataGridShowcaseViewTemplate">
                    <local:DataGridShowcaseView/>
                </DataTemplate>
                <DataTemplate x:Key="TreeViewShowcaseViewTemplate">
                    <local:TreeViewShowcaseView/>
                </DataTemplate>
                <DataTemplate x:Key="ExpanderShowcaseViewTemplate">
                    <local:ExpanderShowcaseView/>
                </DataTemplate>
                <DataTemplate x:Key="RichTextBoxShowcaseViewTemplate">
                    <local:RichTextBoxShowcaseView/>
                </DataTemplate>
                <DataTemplate x:Key="CalendarShowcaseViewTemplate">
                    <local:CalendarShowcaseView/>
                </DataTemplate>
                <DataTemplate x:Key="DatePickerShowcaseViewTemplate">
                    <local:DatePickerShowcaseView/>
                </DataTemplate>
                <DataTemplate x:Key="ContextMenuShowcaseViewTemplate">
                    <local:ContextMenuShowcaseView/>
                </DataTemplate>
                <DataTemplate x:Key="StatusBarShowcaseViewTemplate">
                    <local:StatusBarShowcaseView/>
                </DataTemplate>
                <DataTemplate x:Key="WindowShowcaseViewTemplate">
                    <local:WindowShowcaseView/>
                </DataTemplate>
            </ContentControl.Resources>
            <ContentControl.ContentTemplateSelector>
                <local:ControlShowcaseTemplateSelector/>
            </ContentControl.ContentTemplateSelector>
        </ContentControl>
    </Grid>
</UserControl>
