<UserControl x:Class="LOLThemes.Wpf.Samples.Views.DatePickerShowcaseView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:smtx="clr-namespace:ShowMeTheXAML;assembly=ShowMeTheXAML"
             Background="{DynamicResource BackgroundDarkBrush}">
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Padding="30">
        <StackPanel>
            <Border Background="{DynamicResource BackgroundMediumBrush}"
                   BorderBrush="{DynamicResource BorderGoldBrush}"
                   BorderThickness="0,0,0,2"
                   Padding="20,15"
                   Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="DatePicker - 日期选择器" 
                          FontSize="{DynamicResource FontSizeLarge}"
                          FontWeight="{StaticResource FontWeightBold}"
                          Foreground="{DynamicResource PrimaryGoldBrush}"
                          Margin="0,0,0,8"/>
                    <TextBlock Text="日期选择器用于选择日期。" 
                          FontSize="{StaticResource FontSizeNormal}"
                          Foreground="{DynamicResource TextSecondaryBrush}"/>
                </StackPanel>
            </Border>
            
            <Border Background="{DynamicResource BackgroundMediumBrush}"
                   BorderBrush="{DynamicResource BorderDarkBrush}"
                   BorderThickness="0.5"
                   Padding="20"
                   Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="基础用法" 
                          FontSize="{DynamicResource FontSizeLarge}"
                          FontWeight="{StaticResource FontWeightBold}"
                          Foreground="{DynamicResource PrimaryGoldBrush}"
                          Margin="0,0,0,15"/>
                    
                    <smtx:XamlDisplay UniqueKey="DatePickerBasic1" Margin="0,0,0,15">
                        <DatePicker Width="250" Height="36" HorizontalAlignment="Left"/>
                    </smtx:XamlDisplay>
                    
                    <smtx:XamlDisplay UniqueKey="DatePickerBasic2" Margin="0,0,0,0">
                        <DatePicker Width="250" Height="36" HorizontalAlignment="Left"/>
                    </smtx:XamlDisplay>
                </StackPanel>
            </Border>
            
            <!-- 带有占位符文本的日期选择器 -->
            <Border Background="{DynamicResource BackgroundMediumBrush}"
                   BorderBrush="{DynamicResource BorderDarkBrush}"
                   BorderThickness="0.5"
                   Padding="20"
                   Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="带有占位符文本的日期选择器" 
                          FontSize="{DynamicResource FontSizeLarge}"
                          FontWeight="{StaticResource FontWeightBold}"
                          Foreground="{DynamicResource PrimaryGoldBrush}"
                          Margin="0,0,0,15"/>
                    
                    <smtx:XamlDisplay UniqueKey="DatePickerWithPlaceholder" Margin="0,0,0,0">
                        <StackPanel Width="300" HorizontalAlignment="Left">
                            <DatePicker Width="250" Height="36"
                                      Margin="0,0,0,15">
                                <DatePicker.Resources>
                                    <Style TargetType="DatePickerTextBox">
                                        <Setter Property="Text" Value="请选择日期..."/>
                                        <Style.Triggers>
                                            <Trigger Property="Text" Value="">
                                                <Setter Property="Text" Value="请选择日期..."/>
                                                <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </DatePicker.Resources>
                            </DatePicker>
                        </StackPanel>
                    </smtx:XamlDisplay>
                </StackPanel>
            </Border>
            
            <!-- 带有日期限制的日期选择器 -->
            <Border Background="{DynamicResource BackgroundMediumBrush}"
                   BorderBrush="{DynamicResource BorderDarkBrush}"
                   BorderThickness="0.5"
                   Padding="20"
                   Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="带有日期限制的日期选择器" 
                          FontSize="{DynamicResource FontSizeLarge}"
                          FontWeight="{StaticResource FontWeightBold}"
                          Foreground="{DynamicResource PrimaryGoldBrush}"
                          Margin="0,0,0,15"/>
                    
                    <!-- 暂时移除使用不存在转换器的代码 -->
                    <TextBlock Text="日期选择器" 
                             Foreground="{DynamicResource TextPrimaryBrush}"
                             Margin="0,0,0,10"/>
                    
                    <smtx:XamlDisplay UniqueKey="DatePickerWithLimits1" Margin="0,0,0,15">
                        <DatePicker Width="250" Height="36" HorizontalAlignment="Left"/>
                    </smtx:XamlDisplay>
                    
                    <smtx:XamlDisplay UniqueKey="DatePickerWithLimits2" Margin="0,0,0,0">
                        <DatePicker Width="250" Height="36" HorizontalAlignment="Left"/>
                    </smtx:XamlDisplay>
                </StackPanel>
            </Border>
            
            <!-- 不同格式的日期显示 -->
            <Border Background="{DynamicResource BackgroundMediumBrush}"
                   BorderBrush="{DynamicResource BorderDarkBrush}"
                   BorderThickness="0.5"
                   Padding="20"
                   Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="不同格式的日期显示" 
                          FontSize="{DynamicResource FontSizeLarge}"
                          FontWeight="{StaticResource FontWeightBold}"
                          Foreground="{DynamicResource PrimaryGoldBrush}"
                          Margin="0,0,0,15"/>
                    
                    <smtx:XamlDisplay UniqueKey="DatePickerFormat1" Margin="0,0,0,15">
                        <DatePicker Width="250" Height="36" HorizontalAlignment="Left">
                            <DatePicker.Resources>
                                <Style TargetType="DatePickerTextBox">
                                    <Setter Property="Text" Value="{Binding Path=SelectedDate, StringFormat=yyyy-MM-dd}"/>
                                </Style>
                            </DatePicker.Resources>
                        </DatePicker>
                    </smtx:XamlDisplay>
                    
                    <smtx:XamlDisplay UniqueKey="DatePickerFormat2" Margin="0,0,0,15">
                        <DatePicker Width="250" Height="36" HorizontalAlignment="Left">
                            <DatePicker.Resources>
                                <Style TargetType="DatePickerTextBox">
                                    <Setter Property="Text" Value="{Binding Path=SelectedDate, StringFormat='MMMM dd, yyyy'}"/>
                                </Style>
                            </DatePicker.Resources>
                        </DatePicker>
                    </smtx:XamlDisplay>
                    
                    <smtx:XamlDisplay UniqueKey="DatePickerFormat3" Margin="0,0,0,0">
                        <DatePicker Width="250" Height="36" HorizontalAlignment="Left">
                            <DatePicker.Resources>
                                <Style TargetType="DatePickerTextBox">
                                    <Setter Property="Text" Value="{Binding Path=SelectedDate, StringFormat='ddd, MMM dd, yyyy'}"/>
                                </Style>
                            </DatePicker.Resources>
                        </DatePicker>
                    </smtx:XamlDisplay>
                </StackPanel>
            </Border>
            
            <!-- 带有自定义样式的日期选择器 -->
            <Border Background="{DynamicResource BackgroundMediumBrush}"
                   BorderBrush="{DynamicResource BorderDarkBrush}"
                   BorderThickness="0.5"
                   Padding="20"
                   Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="带有自定义样式的日期选择器" 
                          FontSize="{DynamicResource FontSizeLarge}"
                          FontWeight="{StaticResource FontWeightBold}"
                          Foreground="{DynamicResource PrimaryGoldBrush}"
                          Margin="0,0,0,15"/>
                    
                    <smtx:XamlDisplay UniqueKey="DatePickerCustomStyle" Margin="0,0,0,0">
                        <StackPanel Width="300" HorizontalAlignment="Left">
                            <DatePicker Width="250" Height="36"
                                      Style="{StaticResource LOLDatePickerStyle}"/>
                        </StackPanel>
                    </smtx:XamlDisplay>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>

