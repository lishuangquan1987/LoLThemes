<UserControl x:Class="LOLThemes.Wpf.Samples.Views.HexagonButtonShowcaseView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:smtx="clr-namespace:ShowMeTheXAML;assembly=ShowMeTheXAML"
             xmlns:controls="clr-namespace:LOLThemes.Wpf.Controls;assembly=LOLThemes.Wpf"
             Background="{StaticResource BackgroundDarkBrush}">
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Padding="30">
        <StackPanel>
            <!-- 标题 -->
            <Border Background="{StaticResource BackgroundMediumBrush}"
                   BorderBrush="{StaticResource BorderGoldBrush}"
                   BorderThickness="0,0,0,2"
                   Padding="20,15"
                   Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="HexagonButton - 六边形按钮" 
                          FontSize="{StaticResource FontSizeXXLarge}"
                          FontWeight="{StaticResource FontWeightBold}"
                          Foreground="{StaticResource PrimaryGoldBrush}"
                          Margin="0,0,0,8"/>
                    <TextBlock Text="六边形按钮具有独特的六边形外观，非常适合游戏风格的界面。" 
                          FontSize="{StaticResource FontSizeNormal}"
                          Foreground="{StaticResource TextSecondaryBrush}"/>
                </StackPanel>
            </Border>
            
            <!-- 基础用法 -->
            <Border Background="{StaticResource BackgroundMediumBrush}"
                   BorderBrush="{StaticResource BorderDarkBrush}"
                   BorderThickness="0.5"
                   Padding="20"
                   Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="基础用法" 
                          FontSize="{StaticResource FontSizeLarge}"
                          FontWeight="{StaticResource FontWeightBold}"
                          Foreground="{StaticResource PrimaryGoldBrush}"
                          Margin="0,0,0,15"/>
                    
                    <smtx:XamlDisplay UniqueKey="HexagonButtonBasic" Margin="0,0,0,0">
                        <WrapPanel>
                            <controls:HexagonButton Content="开始" 
                                                   Width="100" Height="100"
                                                   Margin="10"/>
                            <controls:HexagonButton Content="设置" 
                                                   Width="100" Height="100"
                                                   Margin="10"/>
                            <controls:HexagonButton Content="退出" 
                                                   Width="100" Height="100"
                                                   Margin="10"/>
                        </WrapPanel>
                    </smtx:XamlDisplay>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
