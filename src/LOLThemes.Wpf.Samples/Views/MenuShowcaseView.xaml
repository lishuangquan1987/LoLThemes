<UserControl x:Class="LOLThemes.Wpf.Samples.Views.MenuShowcaseView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:smtx="clr-namespace:ShowMeTheXAML;assembly=ShowMeTheXAML"
             Background="{StaticResource BackgroundDarkBrush}">
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Padding="30">
        <StackPanel>
            <!-- 标题 -->
            <Border Background="{StaticResource BackgroundMediumBrush}"
                   BorderBrush="{StaticResource BorderGoldBrush}"
                   BorderThickness="0,0,0,2"
                   Padding="20,15"
                   Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Menu - 菜单" 
                          FontSize="{StaticResource FontSizeXXLarge}"
                          FontWeight="{StaticResource FontWeightBold}"
                          Foreground="{StaticResource PrimaryGoldBrush}"
                          Margin="0,0,0,8"/>
                    <TextBlock Text="菜单用于提供应用程序的命令和选项。" 
                          FontSize="{StaticResource FontSizeNormal}"
                          Foreground="{StaticResource TextSecondaryBrush}"/>
                </StackPanel>
            </Border>
            
            <!-- 基础用法 -->
            <Border Background="{StaticResource BackgroundMediumBrush}"
                   BorderBrush="{StaticResource BorderDarkBrush}"
                   BorderThickness="0.5"
                   Padding="20"
                   Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="基础用法" 
                          FontSize="{StaticResource FontSizeLarge}"
                          FontWeight="{StaticResource FontWeightBold}"
                          Foreground="{StaticResource PrimaryGoldBrush}"
                          Margin="0,0,0,15"/>
                    
                    <smtx:XamlDisplay UniqueKey="MenuBasic" Margin="0,0,0,0">
                        <Menu Style="{StaticResource LOLMenuStyle}"
                            Background="{StaticResource BackgroundMediumBrush}">
                            <MenuItem Header="文件" Style="{StaticResource LOLMenuItemStyle}">
                                <MenuItem Header="新建"/>
                                <MenuItem Header="打开"/>
                                <MenuItem Header="保存"/>
                                <Separator/>
                                <MenuItem Header="退出"/>
                            </MenuItem>
                            <MenuItem Header="编辑" Style="{StaticResource LOLMenuItemStyle}">
                                <MenuItem Header="撤销"/>
                                <MenuItem Header="重做"/>
                                <Separator/>
                                <MenuItem Header="复制"/>
                                <MenuItem Header="粘贴"/>
                            </MenuItem>
                            <MenuItem Header="帮助" Style="{StaticResource LOLMenuItemStyle}">
                                <MenuItem Header="关于"/>
                            </MenuItem>
                        </Menu>
                    </smtx:XamlDisplay>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
