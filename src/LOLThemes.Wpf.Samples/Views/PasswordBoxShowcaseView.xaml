<UserControl x:Class="LOLThemes.Wpf.Samples.Views.PasswordBoxShowcaseView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:smtx="clr-namespace:ShowMeTheXAML;assembly=ShowMeTheXAML"
             Background="{StaticResource BackgroundDarkBrush}">
    
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Padding="20">
        <StackPanel>
            <TextBlock Text="PasswordBox - 密码框" 
                      FontSize="{StaticResource FontSizeXXLarge}"
                      FontWeight="{StaticResource FontWeightBold}"
                      Foreground="{StaticResource PrimaryGoldBrush}"
                      Margin="0,0,0,10"/>
            
            <TextBlock Text="密码框用于安全地输入密码，输入的字符会被隐藏显示。" 
                      FontSize="{StaticResource FontSizeNormal}"
                      Foreground="{StaticResource TextSecondaryBrush}"
                      Margin="0,0,0,30"/>
            
            <TextBlock Text="基础用法" 
                      FontSize="{StaticResource FontSizeLarge}"
                      FontWeight="{StaticResource FontWeightBold}"
                      Foreground="{StaticResource TextPrimaryBrush}"
                      Margin="0,0,0,15"/>
            
            <smtx:XamlDisplay UniqueKey="PasswordBoxBasic" Margin="0,0,0,30">
                <StackPanel>
                    <PasswordBox Style="{StaticResource LOLPasswordBoxStyle}"
                                Width="300" Height="40" 
                                HorizontalAlignment="Left"
                                Margin="0,0,0,15"/>
                    <PasswordBox Style="{StaticResource LOLPasswordBoxStyle}"
                                Password="password123"
                                Width="300" Height="40" 
                                HorizontalAlignment="Left"/>
                </StackPanel>
            </smtx:XamlDisplay>
        </StackPanel>
    </ScrollViewer>
</UserControl>

