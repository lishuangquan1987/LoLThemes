<UserControl x:Class="LOLThemes.Wpf.Samples.Views.ProgressBarShowcaseView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:smtx="clr-namespace:ShowMeTheXAML;assembly=ShowMeTheXAML"
             Background="{DynamicResource BackgroundDarkBrush}">
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Padding="30">
        <StackPanel>
            <!-- 标题 -->
            <Border Background="{DynamicResource BackgroundMediumBrush}"
                   BorderBrush="{DynamicResource BorderGoldBrush}"
                   BorderThickness="0,0,0,2"
                   Padding="20,15"
                   Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="ProgressBar - 进度条" 
                          FontSize="{DynamicResource FontSizeLarge}"
                          FontWeight="{StaticResource FontWeightBold}"
                          Foreground="{DynamicResource PrimaryGoldBrush}"
                          Margin="0,0,0,8"/>
                    <TextBlock Text="进度条用于显示操作的进度或完成百分比。" 
                          FontSize="{StaticResource FontSizeNormal}"
                          Foreground="{DynamicResource TextSecondaryBrush}"/>
                </StackPanel>
            </Border>
            
            <!-- 基础用法 -->
            <Border Background="{DynamicResource BackgroundMediumBrush}"
                   BorderBrush="{DynamicResource BorderDarkBrush}"
                   BorderThickness="0.5"
                   Padding="20"
                   Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="基础用法" 
                          FontSize="{DynamicResource FontSizeLarge}"
                          FontWeight="{StaticResource FontWeightBold}"
                          Foreground="{DynamicResource PrimaryGoldBrush}"
                          Margin="0,0,0,15"/>
                    
                    <StackPanel>
                        <TextBlock Text="进度: 25%" 
                                 Foreground="{DynamicResource TextPrimaryBrush}"
                                 Margin="0,0,0,10"/>
                        <smtx:XamlDisplay Margin="0,0,0,20" UniqueKey="ProgressBarBasic25">
                            <ProgressBar
                                       Value="25" Maximum="100"
                                       Width="300" Height="20"
                                       HorizontalAlignment="Left"/>
                        </smtx:XamlDisplay>
                        
                        <TextBlock Text="进度: 50%" 
                                 Foreground="{DynamicResource TextPrimaryBrush}"
                                 Margin="0,0,0,10"/>
                        <smtx:XamlDisplay Margin="0,0,0,20" UniqueKey="ProgressBarBasic50">
                            <ProgressBar
                                       Value="50" Maximum="100"
                                       Width="300" Height="20"
                                       HorizontalAlignment="Left"/>
                        </smtx:XamlDisplay>
                        
                        <TextBlock Text="进度: 75%" 
                                 Foreground="{DynamicResource TextPrimaryBrush}"
                                 Margin="0,0,0,10"/>
                        <smtx:XamlDisplay Margin="0,0,0,0" UniqueKey="ProgressBarBasic75">
                            <ProgressBar
                                       Value="75" Maximum="100"
                                       Width="300" Height="20"
                                       HorizontalAlignment="Left"/>
                        </smtx:XamlDisplay>
                    </StackPanel>
                </StackPanel>
            </Border>
            
            <!-- 不确定进度 -->
            <Border Background="{DynamicResource BackgroundMediumBrush}"
                   BorderBrush="{DynamicResource BorderDarkBrush}"
                   BorderThickness="0.5"
                   Padding="20"
                   Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="不确定进度" 
                          FontSize="{DynamicResource FontSizeLarge}"
                          FontWeight="{StaticResource FontWeightBold}"
                          Foreground="{DynamicResource PrimaryGoldBrush}"
                          Margin="0,0,0,15"/>
                    
                    <StackPanel>
                        <TextBlock Text="加载中..." 
                                 Foreground="{DynamicResource TextPrimaryBrush}"
                                 Margin="0,0,0,10"/>
                        <smtx:XamlDisplay Margin="0,0,0,0" UniqueKey="ProgressBarIndeterminate">
                            <ProgressBar
                                       IsIndeterminate="True"
                                       Width="300" Height="20"
                                       HorizontalAlignment="Left"/>
                        </smtx:XamlDisplay>
                    </StackPanel>
                </StackPanel>
            </Border>
            
            <!-- 不同颜色的进度条 -->
            <Border Background="{DynamicResource BackgroundMediumBrush}"
                   BorderBrush="{DynamicResource BorderDarkBrush}"
                   BorderThickness="0.5"
                   Padding="20"
                   Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="不同颜色的进度条" 
                          FontSize="{DynamicResource FontSizeLarge}"
                          FontWeight="{StaticResource FontWeightBold}"
                          Foreground="{DynamicResource PrimaryGoldBrush}"
                          Margin="0,0,0,15"/>
                    
                    <StackPanel>
                        <TextBlock Text="金色进度条" 
                                 Foreground="{DynamicResource TextPrimaryBrush}"
                                 Margin="0,0,0,10"/>
                        <smtx:XamlDisplay Margin="0,0,0,20" UniqueKey="ProgressBarColorGold">
                            <ProgressBar
                                       Value="75" Maximum="100"
                                       Width="300" Height="20"
                                       HorizontalAlignment="Left"
                                       Foreground="{DynamicResource PrimaryGoldBrush}"/>
                        </smtx:XamlDisplay>
                        
                        <TextBlock Text="绿色进度条" 
                                 Foreground="{DynamicResource TextPrimaryBrush}"
                                 Margin="0,0,0,10"/>
                        <smtx:XamlDisplay Margin="0,0,0,20" UniqueKey="ProgressBarColorGreen">
                            <ProgressBar
                                       Value="40" Maximum="100"
                                       Width="300" Height="20"
                                       HorizontalAlignment="Left"
                                       Foreground="{DynamicResource SuccessGreenBrush}"/>
                        </smtx:XamlDisplay>
                        
                        <TextBlock Text="红色进度条" 
                                 Foreground="{DynamicResource TextPrimaryBrush}"
                                 Margin="0,0,0,10"/>
                        <smtx:XamlDisplay Margin="0,0,0,0" UniqueKey="ProgressBarColorRed">
                            <ProgressBar
                                       Value="85" Maximum="100"
                                       Width="300" Height="20"
                                       HorizontalAlignment="Left"
                                       Foreground="{DynamicResource ErrorRedBrush}"/>
                        </smtx:XamlDisplay>
                    </StackPanel>
                </StackPanel>
            </Border>
            
            <!-- 不同高度的进度条 -->
            <Border Background="{DynamicResource BackgroundMediumBrush}"
                   BorderBrush="{DynamicResource BorderDarkBrush}"
                   BorderThickness="0.5"
                   Padding="20"
                   Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="不同高度的进度条" 
                          FontSize="{DynamicResource FontSizeLarge}"
                          FontWeight="{StaticResource FontWeightBold}"
                          Foreground="{DynamicResource PrimaryGoldBrush}"
                          Margin="0,0,0,15"/>
                    
                    <StackPanel>
                        <TextBlock Text="细进度条" 
                                 Foreground="{DynamicResource TextPrimaryBrush}"
                                 Margin="0,0,0,10"/>
                        <smtx:XamlDisplay Margin="0,0,0,20" UniqueKey="ProgressBarHeightThin">
                            <ProgressBar
                                       Value="60" Maximum="100"
                                       Width="300" Height="8"
                                       HorizontalAlignment="Left"/>
                        </smtx:XamlDisplay>
                        
                        <TextBlock Text="中进度条" 
                                 Foreground="{DynamicResource TextPrimaryBrush}"
                                 Margin="0,0,0,10"/>
                        <smtx:XamlDisplay Margin="0,0,0,20" UniqueKey="ProgressBarHeightMedium">
                            <ProgressBar
                                       Value="60" Maximum="100"
                                       Width="300" Height="20"
                                       HorizontalAlignment="Left"/>
                        </smtx:XamlDisplay>
                        
                        <TextBlock Text="粗进度条" 
                                 Foreground="{DynamicResource TextPrimaryBrush}"
                                 Margin="0,0,0,10"/>
                        <smtx:XamlDisplay Margin="0,0,0,0" UniqueKey="ProgressBarHeightThick">
                            <ProgressBar
                                       Value="60" Maximum="100"
                                       Width="300" Height="40"
                                       HorizontalAlignment="Left"/>
                        </smtx:XamlDisplay>
                    </StackPanel>
                </StackPanel>
            </Border>
            
            <!-- 垂直进度条 -->
            <Border Background="{DynamicResource BackgroundMediumBrush}"
                   BorderBrush="{DynamicResource BorderDarkBrush}"
                   BorderThickness="0.5"
                   Padding="20"
                   Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="垂直进度条" 
                          FontSize="{DynamicResource FontSizeLarge}"
                          FontWeight="{StaticResource FontWeightBold}"
                          Foreground="{DynamicResource PrimaryGoldBrush}"
                          Margin="0,0,0,15"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" Orientation="Vertical">
                            <smtx:XamlDisplay Margin="0,0,10,0" UniqueKey="ProgressBarVerticalDefault">
                                <ProgressBar
                                           Value="65" Maximum="100"
                                           Width="20" Height="200"
                                           Orientation="Vertical"
                                           HorizontalAlignment="Left"/>
                            </smtx:XamlDisplay>
                        </StackPanel>
                        <StackPanel Grid.Column="1" Orientation="Vertical">
                            <smtx:XamlDisplay Margin="0,0,10,0" UniqueKey="ProgressBarVerticalGreen">
                                <ProgressBar
                                           Value="35" Maximum="100"
                                           Width="20" Height="200"
                                           Orientation="Vertical"
                                           HorizontalAlignment="Left"
                                           Foreground="{DynamicResource SuccessGreenBrush}"/>
                            </smtx:XamlDisplay>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
