<UserControl x:Class="LOLThemes.Wpf.Samples.Views.ProgressBarShowcaseView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:smtx="clr-namespace:ShowMeTheXAML;assembly=ShowMeTheXAML"
             Background="{DynamicResource BackgroundDarkBrush}">
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Padding="30">
        <StackPanel>
            <!-- 标题 -->
            <Border Background="{DynamicResource BackgroundMediumBrush}"
                   BorderBrush="{DynamicResource BorderGoldBrush}"
                   BorderThickness="0,0,0,2"
                   Padding="20,15"
                   Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="ProgressBar - 进度条" 
                          FontSize="{DynamicResource FontSizeLarge}"
                          FontWeight="{StaticResource FontWeightBold}"
                          Foreground="{DynamicResource PrimaryGoldBrush}"
                          Margin="0,0,0,8"/>
                    <TextBlock Text="进度条用于显示操作的进度或完成百分比。" 
                          FontSize="{StaticResource FontSizeNormal}"
                          Foreground="{DynamicResource TextSecondaryBrush}"/>
                </StackPanel>
            </Border>
            
            <!-- 基础用法 -->
            <Border Background="{DynamicResource BackgroundMediumBrush}"
                   BorderBrush="{DynamicResource BorderDarkBrush}"
                   BorderThickness="0.5"
                   Padding="20"
                   Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="基础用法" 
                          FontSize="{DynamicResource FontSizeLarge}"
                          FontWeight="{StaticResource FontWeightBold}"
                          Foreground="{DynamicResource PrimaryGoldBrush}"
                          Margin="0,0,0,15"/>
                    
                    <smtx:XamlDisplay UniqueKey="ProgressBarBasic" Margin="0,0,0,0">
                        <StackPanel>
                            <TextBlock Text="进度: 25%" 
                                     Foreground="{DynamicResource TextPrimaryBrush}"
                                     Margin="0,0,0,10"/>
                            <ProgressBar
                                       Value="25" Maximum="100"
                                       Width="300" Height="20"
                                       HorizontalAlignment="Left"
                                       Margin="0,0,0,20"/>
                            
                            <TextBlock Text="进度: 50%" 
                                     Foreground="{DynamicResource TextPrimaryBrush}"
                                     Margin="0,0,0,10"/>
                            <ProgressBar
                                       Value="50" Maximum="100"
                                       Width="300" Height="20"
                                       HorizontalAlignment="Left"
                                       Margin="0,0,0,20"/>
                            
                            <TextBlock Text="进度: 75%" 
                                     Foreground="{DynamicResource TextPrimaryBrush}"
                                     Margin="0,0,0,10"/>
                            <ProgressBar
                                       Value="75" Maximum="100"
                                       Width="300" Height="20"
                                       HorizontalAlignment="Left"/>
                        </StackPanel>
                    </smtx:XamlDisplay>
                </StackPanel>
            </Border>
            
            <!-- 不确定进度 -->
            <Border Background="{DynamicResource BackgroundMediumBrush}"
                   BorderBrush="{DynamicResource BorderDarkBrush}"
                   BorderThickness="0.5"
                   Padding="20"
                   Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="不确定进度" 
                          FontSize="{DynamicResource FontSizeLarge}"
                          FontWeight="{StaticResource FontWeightBold}"
                          Foreground="{DynamicResource PrimaryGoldBrush}"
                          Margin="0,0,0,15"/>
                    
                    <smtx:XamlDisplay UniqueKey="ProgressBarIndeterminate" Margin="0,0,0,0">
                        <StackPanel>
                            <TextBlock Text="加载中..." 
                                     Foreground="{DynamicResource TextPrimaryBrush}"
                                     Margin="0,0,0,10"/>
                            <ProgressBar
                                       IsIndeterminate="True"
                                       Width="300" Height="20"
                                       HorizontalAlignment="Left"/>
                        </StackPanel>
                    </smtx:XamlDisplay>
                </StackPanel>
            </Border>
            
            <!-- 不同颜色的进度条 -->
            <Border Background="{DynamicResource BackgroundMediumBrush}"
                   BorderBrush="{DynamicResource BorderDarkBrush}"
                   BorderThickness="0.5"
                   Padding="20"
                   Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="不同颜色的进度条" 
                          FontSize="{DynamicResource FontSizeLarge}"
                          FontWeight="{StaticResource FontWeightBold}"
                          Foreground="{DynamicResource PrimaryGoldBrush}"
                          Margin="0,0,0,15"/>
                    
                    <smtx:XamlDisplay UniqueKey="ProgressBarColors" Margin="0,0,0,0">
                        <StackPanel>
                            <TextBlock Text="金色进度条" 
                                     Foreground="{DynamicResource TextPrimaryBrush}"
                                     Margin="0,0,0,10"/>
                            <ProgressBar
                                       Value="75" Maximum="100"
                                       Width="300" Height="20"
                                       HorizontalAlignment="Left"
                                       Margin="0,0,0,20"
                                       Foreground="{DynamicResource PrimaryGoldBrush}"/>
                            
                            <TextBlock Text="绿色进度条" 
                                     Foreground="{DynamicResource TextPrimaryBrush}"
                                     Margin="0,0,0,10"/>
                            <ProgressBar
                                       Value="40" Maximum="100"
                                       Width="300" Height="20"
                                       HorizontalAlignment="Left"
                                       Margin="0,0,0,20"
                                       Foreground="{DynamicResource SuccessGreenBrush}"/>
                            
                            <TextBlock Text="红色进度条" 
                                     Foreground="{DynamicResource TextPrimaryBrush}"
                                     Margin="0,0,0,10"/>
                            <ProgressBar
                                       Value="85" Maximum="100"
                                       Width="300" Height="20"
                                       HorizontalAlignment="Left"
                                       Margin="0,0,0,20"
                                       Foreground="{DynamicResource ErrorRedBrush}"/>
                        </StackPanel>
                    </smtx:XamlDisplay>
                </StackPanel>
            </Border>
            
            <!-- 不同高度的进度条 -->
            <Border Background="{DynamicResource BackgroundMediumBrush}"
                   BorderBrush="{DynamicResource BorderDarkBrush}"
                   BorderThickness="0.5"
                   Padding="20"
                   Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="不同高度的进度条" 
                          FontSize="{DynamicResource FontSizeLarge}"
                          FontWeight="{StaticResource FontWeightBold}"
                          Foreground="{DynamicResource PrimaryGoldBrush}"
                          Margin="0,0,0,15"/>
                    
                    <smtx:XamlDisplay UniqueKey="ProgressBarHeights" Margin="0,0,0,0">
                        <StackPanel>
                            <TextBlock Text="细进度条" 
                                     Foreground="{DynamicResource TextPrimaryBrush}"
                                     Margin="0,0,0,10"/>
                            <ProgressBar
                                       Value="60" Maximum="100"
                                       Width="300" Height="8"
                                       HorizontalAlignment="Left"
                                       Margin="0,0,0,20"/>
                            
                            <TextBlock Text="中进度条" 
                                     Foreground="{DynamicResource TextPrimaryBrush}"
                                     Margin="0,0,0,10"/>
                            <ProgressBar
                                       Value="60" Maximum="100"
                                       Width="300" Height="20"
                                       HorizontalAlignment="Left"
                                       Margin="0,0,0,20"/>
                            
                            <TextBlock Text="粗进度条" 
                                     Foreground="{DynamicResource TextPrimaryBrush}"
                                     Margin="0,0,0,10"/>
                            <ProgressBar
                                       Value="60" Maximum="100"
                                       Width="300" Height="40"
                                       HorizontalAlignment="Left"
                                       Margin="0,0,0,20"/>
                        </StackPanel>
                    </smtx:XamlDisplay>
                </StackPanel>
            </Border>
            
            <!-- 垂直进度条 -->
            <Border Background="{DynamicResource BackgroundMediumBrush}"
                   BorderBrush="{DynamicResource BorderDarkBrush}"
                   BorderThickness="0.5"
                   Padding="20"
                   Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="垂直进度条" 
                          FontSize="{DynamicResource FontSizeLarge}"
                          FontWeight="{StaticResource FontWeightBold}"
                          Foreground="{DynamicResource PrimaryGoldBrush}"
                          Margin="0,0,0,15"/>
                    
                    <smtx:XamlDisplay UniqueKey="ProgressBarVertical" Margin="0,0,0,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Orientation="Vertical">
                                <ProgressBar
                                           Value="65" Maximum="100"
                                           Width="20" Height="200"
                                           Orientation="Vertical"
                                           HorizontalAlignment="Left"
                                           Margin="0,0,10,0"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1" Orientation="Vertical">
                                <ProgressBar
                                           Value="35" Maximum="100"
                                           Width="20" Height="200"
                                           Orientation="Vertical"
                                           HorizontalAlignment="Left"
                                           Margin="0,0,10,0"
                                           Foreground="{DynamicResource SuccessGreenBrush}"/>
                            </StackPanel>
                        </Grid>
                    </smtx:XamlDisplay>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
