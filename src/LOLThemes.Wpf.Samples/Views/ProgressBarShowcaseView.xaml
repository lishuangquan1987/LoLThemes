<UserControl x:Class="LOLThemes.Wpf.Samples.Views.ProgressBarShowcaseView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:smtx="clr-namespace:ShowMeTheXAML;assembly=ShowMeTheXAML"
             Background="{StaticResource BackgroundDarkBrush}">
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Padding="30">
        <StackPanel>
            <!-- 标题 -->
            <Border Background="{StaticResource BackgroundMediumBrush}"
                   BorderBrush="{StaticResource BorderGoldBrush}"
                   BorderThickness="0,0,0,2"
                   Padding="20,15"
                   Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="ProgressBar - 进度条" 
                          FontSize="{StaticResource FontSizeXXLarge}"
                          FontWeight="{StaticResource FontWeightBold}"
                          Foreground="{StaticResource PrimaryGoldBrush}"
                          Margin="0,0,0,8"/>
                    <TextBlock Text="进度条用于显示操作的进度或完成百分比。" 
                          FontSize="{StaticResource FontSizeNormal}"
                          Foreground="{StaticResource TextSecondaryBrush}"/>
                </StackPanel>
            </Border>
            
            <!-- 基础用法 -->
            <Border Background="{StaticResource BackgroundMediumBrush}"
                   BorderBrush="{StaticResource BorderDarkBrush}"
                   BorderThickness="0.5"
                   Padding="20"
                   Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="基础用法" 
                          FontSize="{StaticResource FontSizeLarge}"
                          FontWeight="{StaticResource FontWeightBold}"
                          Foreground="{StaticResource PrimaryGoldBrush}"
                          Margin="0,0,0,15"/>
                    
                    <smtx:XamlDisplay UniqueKey="ProgressBarBasic" Margin="0,0,0,0">
                        <StackPanel>
                            <TextBlock Text="进度: 25%" 
                                     Foreground="{StaticResource TextPrimaryBrush}"
                                     Margin="0,0,0,10"/>
                            <ProgressBar Style="{StaticResource LOLProgressBarStyle}"
                                       Value="25" Maximum="100"
                                       Width="300" Height="20"
                                       HorizontalAlignment="Left"
                                       Margin="0,0,0,20"/>
                            
                            <TextBlock Text="进度: 50%" 
                                     Foreground="{StaticResource TextPrimaryBrush}"
                                     Margin="0,0,0,10"/>
                            <ProgressBar Style="{StaticResource LOLProgressBarStyle}"
                                       Value="50" Maximum="100"
                                       Width="300" Height="20"
                                       HorizontalAlignment="Left"
                                       Margin="0,0,0,20"/>
                            
                            <TextBlock Text="进度: 75%" 
                                     Foreground="{StaticResource TextPrimaryBrush}"
                                     Margin="0,0,0,10"/>
                            <ProgressBar Style="{StaticResource LOLProgressBarStyle}"
                                       Value="75" Maximum="100"
                                       Width="300" Height="20"
                                       HorizontalAlignment="Left"/>
                        </StackPanel>
                    </smtx:XamlDisplay>
                </StackPanel>
            </Border>
            
            <!-- 不确定进度 -->
            <Border Background="{StaticResource BackgroundMediumBrush}"
                   BorderBrush="{StaticResource BorderDarkBrush}"
                   BorderThickness="0.5"
                   Padding="20"
                   Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="不确定进度" 
                          FontSize="{StaticResource FontSizeLarge}"
                          FontWeight="{StaticResource FontWeightBold}"
                          Foreground="{StaticResource PrimaryGoldBrush}"
                          Margin="0,0,0,15"/>
                    
                    <smtx:XamlDisplay UniqueKey="ProgressBarIndeterminate" Margin="0,0,0,0">
                        <StackPanel>
                            <TextBlock Text="加载中..." 
                                     Foreground="{StaticResource TextPrimaryBrush}"
                                     Margin="0,0,0,10"/>
                            <ProgressBar Style="{StaticResource LOLProgressBarStyle}"
                                       IsIndeterminate="True"
                                       Width="300" Height="20"
                                       HorizontalAlignment="Left"/>
                        </StackPanel>
                    </smtx:XamlDisplay>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
