<UserControl x:Class="LOLThemes.Wpf.Samples.Views.RadioButtonShowcaseView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:smtx="clr-namespace:ShowMeTheXAML;assembly=ShowMeTheXAML"
             Background="{DynamicResource BackgroundDarkBrush}">
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Padding="30">
        <StackPanel>
            <!-- 标题 -->
            <Border Background="{DynamicResource BackgroundMediumBrush}"
                   BorderBrush="{DynamicResource BorderGoldBrush}"
                   BorderThickness="0,0,0,2"
                   Padding="20,15"
                   Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="RadioButton - 单选按钮" 
                          FontSize="{DynamicResource FontSizeLarge}"
                          FontWeight="{StaticResource FontWeightBold}"
                          Foreground="{DynamicResource PrimaryGoldBrush}"
                          Margin="0,0,0,8"/>
                    <TextBlock Text="单选按钮用于从一组互斥的选项中选择一个选项。" 
                          FontSize="{StaticResource FontSizeNormal}"
                          Foreground="{DynamicResource TextSecondaryBrush}"/>
                </StackPanel>
            </Border>
            
            <!-- 基础用法 -->
            <Border Background="{DynamicResource BackgroundMediumBrush}"
                   BorderBrush="{DynamicResource BorderDarkBrush}"
                   BorderThickness="0.5"
                   Padding="20"
                   Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="基础用法" 
                          FontSize="{DynamicResource FontSizeLarge}"
                          FontWeight="{StaticResource FontWeightBold}"
                          Foreground="{DynamicResource PrimaryGoldBrush}"
                          Margin="0,0,0,15"/>
                    
                    <smtx:XamlDisplay UniqueKey="RadioButtonBasic" Margin="0,0,0,0">
                        <StackPanel>
                            <RadioButton Content="选项 1" 
                                       GroupName="Group1"
                                       Margin="0,0,0,10"/>
                            <RadioButton Content="选项 2" 
                                       GroupName="Group1"
                                       IsChecked="True"
                                       Margin="0,0,0,10"/>
                            <RadioButton Content="选项 3" 
                                       GroupName="Group1"
                                       Margin="0,0,0,10"/>
                        </StackPanel>
                    </smtx:XamlDisplay>
                </StackPanel>
            </Border>
            
            <!-- 不同状态 -->
            <Border Background="{DynamicResource BackgroundMediumBrush}"
                   BorderBrush="{DynamicResource BorderDarkBrush}"
                   BorderThickness="0.5"
                   Padding="20"
                   Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="不同状态" 
                          FontSize="{DynamicResource FontSizeLarge}"
                          FontWeight="{StaticResource FontWeightBold}"
                          Foreground="{DynamicResource PrimaryGoldBrush}"
                          Margin="0,0,0,15"/>
                    
                    <smtx:XamlDisplay UniqueKey="RadioButtonStates" Margin="0,0,0,0">
                        <StackPanel>
                            <RadioButton Content="未选中" 
                                       GroupName="Group2"
                                       Margin="0,0,0,10"/>
                            <RadioButton Content="已选中" 
                                       GroupName="Group2"
                                       IsChecked="True"
                                       Margin="0,0,0,10"/>
                            <RadioButton Content="禁用状态" 
                                       GroupName="Group2"
                                       IsEnabled="False"
                                       Margin="0,0,0,10"/>
                        </StackPanel>
                    </smtx:XamlDisplay>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
