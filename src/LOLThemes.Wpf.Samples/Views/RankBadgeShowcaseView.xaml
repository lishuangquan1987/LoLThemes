<UserControl x:Class="LOLThemes.Wpf.Samples.Views.RankBadgeShowcaseView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:smtx="clr-namespace:ShowMeTheXAML;assembly=ShowMeTheXAML"
             xmlns:controls="clr-namespace:LOLThemes.Wpf.Controls;assembly=LOLThemes.Wpf"
             Background="{DynamicResource BackgroundDarkBrush}">
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Padding="30">
        <StackPanel>
            <!-- 标题 -->
            <Border Background="{DynamicResource BackgroundMediumBrush}"
                   BorderBrush="{DynamicResource BorderGoldBrush}"
                   BorderThickness="0,0,0,2"
                   Padding="20,15"
                   Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="RankBadge - 段位徽章" 
                          FontSize="{DynamicResource FontSizeLarge}"
                          FontWeight="{StaticResource FontWeightBold}"
                          Foreground="{DynamicResource PrimaryGoldBrush}"
                          Margin="0,0,0,8"/>
                    <TextBlock Text="段位徽章用于显示玩家的排位段位，支持多种段位类型。" 
                          FontSize="{StaticResource FontSizeNormal}"
                          Foreground="{DynamicResource TextSecondaryBrush}"/>
                </StackPanel>
            </Border>
            
            <!-- 基础用法 -->
            <Border Background="{DynamicResource BackgroundMediumBrush}"
                   BorderBrush="{DynamicResource BorderDarkBrush}"
                   BorderThickness="0.5"
                   Padding="20"
                   Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="不同段位" 
                          FontSize="{DynamicResource FontSizeLarge}"
                          FontWeight="{StaticResource FontWeightBold}"
                          Foreground="{DynamicResource PrimaryGoldBrush}"
                          Margin="0,0,0,15"/>
                    
                    <smtx:XamlDisplay UniqueKey="RankBadgeIron" Margin="0,0,0,15">
                        <StackPanel>
                            <controls:RankBadge RankType="Iron" RankText="黑铁"/>
                            <TextBlock Text="黑铁" 
                                     Foreground="{DynamicResource TextPrimaryBrush}"
                                     HorizontalAlignment="Center"
                                     Margin="0,5,0,0"/>
                        </StackPanel>
                    </smtx:XamlDisplay>
                    
                    <smtx:XamlDisplay UniqueKey="RankBadgeBronze" Margin="0,0,0,15">
                        <StackPanel>
                            <controls:RankBadge RankType="Bronze" RankText="青铜"/>
                            <TextBlock Text="青铜" 
                                     Foreground="{DynamicResource TextPrimaryBrush}"
                                     HorizontalAlignment="Center"
                                     Margin="0,5,0,0"/>
                        </StackPanel>
                    </smtx:XamlDisplay>
                    
                    <smtx:XamlDisplay UniqueKey="RankBadgeSilver" Margin="0,0,0,15">
                        <StackPanel>
                            <controls:RankBadge RankType="Silver" RankText="白银"/>
                            <TextBlock Text="白银" 
                                     Foreground="{DynamicResource TextPrimaryBrush}"
                                     HorizontalAlignment="Center"
                                     Margin="0,5,0,0"/>
                        </StackPanel>
                    </smtx:XamlDisplay>
                    
                    <smtx:XamlDisplay UniqueKey="RankBadgeGold" Margin="0,0,0,15">
                        <StackPanel>
                            <controls:RankBadge RankType="Gold" RankText="黄金"/>
                            <TextBlock Text="黄金" 
                                     Foreground="{DynamicResource TextPrimaryBrush}"
                                     HorizontalAlignment="Center"
                                     Margin="0,5,0,0"/>
                        </StackPanel>
                    </smtx:XamlDisplay>
                    
                    <smtx:XamlDisplay UniqueKey="RankBadgePlatinum" Margin="0,0,0,15">
                        <StackPanel>
                            <controls:RankBadge RankType="Platinum" RankText="白金"/>
                            <TextBlock Text="白金" 
                                     Foreground="{DynamicResource TextPrimaryBrush}"
                                     HorizontalAlignment="Center"
                                     Margin="0,5,0,0"/>
                        </StackPanel>
                    </smtx:XamlDisplay>
                    
                    <smtx:XamlDisplay UniqueKey="RankBadgeDiamond" Margin="0,0,0,15">
                        <StackPanel>
                            <controls:RankBadge RankType="Diamond" RankText="钻石"/>
                            <TextBlock Text="钻石" 
                                     Foreground="{DynamicResource TextPrimaryBrush}"
                                     HorizontalAlignment="Center"
                                     Margin="0,5,0,0"/>
                        </StackPanel>
                    </smtx:XamlDisplay>
                    
                    <smtx:XamlDisplay UniqueKey="RankBadgeMaster" Margin="0,0,0,15">
                        <StackPanel>
                            <controls:RankBadge RankType="Master" RankText="大师"/>
                            <TextBlock Text="大师" 
                                     Foreground="{DynamicResource TextPrimaryBrush}"
                                     HorizontalAlignment="Center"
                                     Margin="0,5,0,0"/>
                        </StackPanel>
                    </smtx:XamlDisplay>
                    
                    <smtx:XamlDisplay UniqueKey="RankBadgeChallenger" Margin="0,0,0,0">
                        <StackPanel>
                            <controls:RankBadge RankType="Challenger" RankText="王者"/>
                            <TextBlock Text="王者" 
                                     Foreground="{DynamicResource TextPrimaryBrush}"
                                     HorizontalAlignment="Center"
                                     Margin="0,5,0,0"/>
                        </StackPanel>
                    </smtx:XamlDisplay>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
