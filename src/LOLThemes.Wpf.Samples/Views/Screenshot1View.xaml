<UserControl x:Class="LOLThemes.Wpf.Samples.Views.Screenshot1View"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:LOLThemes.Wpf.Controls;assembly=LOLThemes.Wpf"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1150"
             Background="{DynamicResource BackgroundDarkBrush}">
    
    <Grid>
        <!-- 主容器 -->
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- 顶部导航栏 -->
            <Border Grid.Row="0" 
                   Background="{DynamicResource BackgroundMediumBrush}"
                   BorderBrush="{DynamicResource BorderGoldBrush}"
                   BorderThickness="0,0,0,2"
                   Padding="20,15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- 左侧标题 -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <TextBlock Text="⚔" 
                                  FontSize="{StaticResource FontSizeXLarge}"
                                  Foreground="{DynamicResource PrimaryGoldBrush}"
                                  VerticalAlignment="Center"
                                  Margin="0,0,15,0"/>
                        <TextBlock Text="英雄选择" 
                                  FontSize="{StaticResource FontSizeLarge}"
                                  FontWeight="{StaticResource FontWeightBold}"
                                  Foreground="{DynamicResource TextPrimaryBrush}"
                                  VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <!-- 中间搜索框 -->
                    <TextBox Grid.Column="1"
                            Tag="搜索英雄..."
                            Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                            Width="300"
                            Height="35"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"/>
                    
                    <!-- 右侧用户信息 -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                        <TextBlock Text="召唤师" 
                                  FontSize="{StaticResource FontSizeNormal}"
                                  Foreground="{DynamicResource TextSecondaryBrush}"
                                  VerticalAlignment="Center"
                                  Margin="0,0,10,0"/>
                        <Border Background="{DynamicResource PrimaryGoldBrush}"
                               Width="35" Height="35"
                               CornerRadius="17.5">
                            <TextBlock Text="S" 
                                      FontSize="{StaticResource FontSizeMedium}"
                                      FontWeight="{StaticResource FontWeightBold}"
                                      Foreground="{DynamicResource BackgroundDarkBrush}"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                        </Border>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- 主内容区域 -->
            <Grid Grid.Row="1" Margin="0,20,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="250"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="300"/>
                </Grid.ColumnDefinitions>
                
                <!-- 左侧过滤器面板 -->
                <Border Grid.Column="0"
                       Background="{DynamicResource BackgroundMediumBrush}"
                       BorderBrush="{DynamicResource BorderDarkBrush}"
                       BorderThickness="1"
                       Padding="20"
                       Margin="0,0,10,0">
                    <StackPanel>
                        <TextBlock Text="位置" 
                                  FontSize="{StaticResource FontSizeMedium}"
                                  FontWeight="{StaticResource FontWeightBold}"
                                  Foreground="{DynamicResource PrimaryGoldBrush}"
                                  Margin="0,0,0,15"/>
                        
                        <Button Content="上单" 
                               Style="{StaticResource LOLSecondaryButtonStyle}"
                               Height="40"
                               Margin="0,0,0,10"/>
                        <Button Content="打野" 
                               Style="{StaticResource LOLSecondaryButtonStyle}"
                               Height="40"
                               Margin="0,0,0,10"/>
                        <Button Content="中单" 
                               Style="{StaticResource LOLPrimaryButtonStyle}"
                               Height="40"
                               Margin="0,0,0,10"/>
                        <Button Content="ADC" 
                               Style="{StaticResource LOLSecondaryButtonStyle}"
                               Height="40"
                               Margin="0,0,0,10"/>
                        <Button Content="辅助" 
                               Style="{StaticResource LOLSecondaryButtonStyle}"
                               Height="40"
                               Margin="0,0,0,20"/>
                        
                        <Separator Margin="0,10,0,20"/>
                        
                        <TextBlock Text="类型" 
                                  FontSize="{StaticResource FontSizeMedium}"
                                  FontWeight="{StaticResource FontWeightBold}"
                                  Foreground="{DynamicResource PrimaryGoldBrush}"
                                  Margin="0,0,0,15"/>
                        
                        <CheckBox Content="刺客" 
                                
                                 IsChecked="True"
                                 Margin="0,0,0,10"/>
                        <CheckBox Content="法师" 
                                
                                 IsChecked="True"
                                 Margin="0,0,0,10"/>
                        <CheckBox Content="战士" 
                                
                                 Margin="0,0,0,10"/>
                        <CheckBox Content="坦克" 
                                
                                 Margin="0,0,0,10"/>
                        <CheckBox Content="射手" 
                                
                                 Margin="0,0,0,10"/>
                        <CheckBox Content="辅助" 
                                
                                 Margin="0,0,0,10"/>
                    </StackPanel>
                </Border>
                
                <!-- 中间英雄网格 -->
                <Border Grid.Column="1"
                       Background="{DynamicResource BackgroundMediumBrush}"
                       BorderBrush="{DynamicResource BorderDarkBrush}"
                       BorderThickness="1"
                       Padding="20"
                       Margin="0,0,10,0">
                    <ScrollViewer VerticalScrollBarVisibility="Auto"
                                 HorizontalScrollBarVisibility="Disabled">
                        <ItemsControl ItemsSource="{Binding Champions}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <controls:ChampionCard ChampionName="{Binding Name}"
                                                          IsSelected="{Binding IsSelected}"
                                                          Width="100" Height="120"
                                                          Margin="5"
                                                          Cursor="Hand">
                                        <controls:ChampionCard.InputBindings>
                                            <MouseBinding Gesture="LeftClick" 
                                                        Command="{Binding RelativeSource={RelativeSource AncestorType=ItemsControl}, Path=DataContext.SelectChampionCommand}"
                                                        CommandParameter="{Binding}"/>
                                        </controls:ChampionCard.InputBindings>
                                    </controls:ChampionCard>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Border>
                
                <!-- 右侧英雄详情面板 -->
                <Border Grid.Column="2"
                       Background="{DynamicResource BackgroundMediumBrush}"
                       BorderBrush="{DynamicResource BorderGoldBrush}"
                       BorderThickness="2"
                       Padding="20">
                    <StackPanel>
                        <!-- 英雄头像 -->
                        <Border Background="{DynamicResource BackgroundLightBrush}"
                               BorderBrush="{DynamicResource PrimaryGoldBrush}"
                               BorderThickness="2"
                               Width="200" Height="200"
                               Margin="0,0,0,20">
                            <TextBlock Text="{Binding SelectedChampion.Name, FallbackValue='亚索'}"
                                      FontSize="48"
                                      FontWeight="{StaticResource FontWeightBold}"
                                      Foreground="{DynamicResource PrimaryGoldBrush}"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                        </Border>
                        
                        <!-- 英雄名称 -->
                        <TextBlock Text="{Binding SelectedChampion.Title, FallbackValue='疾风剑豪'}"
                                  FontSize="{StaticResource FontSizeLarge}"
                                  FontWeight="{StaticResource FontWeightBold}"
                                  Foreground="{DynamicResource TextPrimaryBrush}"
                                  HorizontalAlignment="Center"
                                  Margin="0,0,0,5"/>
                        <TextBlock Text="{Binding SelectedChampion.Name, FallbackValue='亚索'}"
                                  FontSize="{StaticResource FontSizeXLarge}"
                                  FontWeight="{StaticResource FontWeightBold}"
                                  Foreground="{DynamicResource PrimaryGoldBrush}"
                                  HorizontalAlignment="Center"
                                  Margin="0,0,0,20"/>
                        
                        <!-- 英雄标签 -->
                        <ItemsControl ItemsSource="{Binding SelectedChampion.Roles}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel HorizontalAlignment="Center"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{DynamicResource PrimaryCyanBrush}"
                                           Padding="8,4"
                                           Margin="3">
                                        <TextBlock Text="{Binding}"
                                                  FontSize="{StaticResource FontSizeSmall}"
                                                  Foreground="{DynamicResource BackgroundDarkBrush}"/>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                        <TextBlock Text="难度"
                                  FontSize="{StaticResource FontSizeNormal}"
                                  Foreground="{DynamicResource TextSecondaryBrush}"
                                  Margin="0,10,0,5"/>
                        <ProgressBar Value="{Binding SelectedChampion.Difficulty}"
                                    Maximum="10"
                                    Height="8"
                                    Margin="0,0,0,20"/>
                        
                        <!-- 技能按钮 -->
                        <TextBlock Text="技能"
                                  FontSize="{StaticResource FontSizeMedium}"
                                  FontWeight="{StaticResource FontWeightBold}"
                                  Foreground="{DynamicResource PrimaryGoldBrush}"
                                  Margin="0,0,0,10"/>
                        
                        <ItemsControl ItemsSource="{Binding SelectedChampion.Skills}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel HorizontalAlignment="Center"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <controls:SkillButton HotkeyText="{Binding Key}"
                                                         Width="50" Height="50"
                                                         Margin="5"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                        
                        <!-- 选择按钮 -->
                        <controls:GlowButton Content="选择英雄"
                                           GlowColor="{DynamicResource PrimaryGold}"
                                           Height="50"
                                           FontSize="{StaticResource FontSizeMedium}"
                                           FontWeight="{StaticResource FontWeightBold}"/>
                    </StackPanel>
                </Border>
            </Grid>
            
            <!-- 底部状态栏 -->
            <Border Grid.Row="2"
                   Background="{DynamicResource BackgroundMediumBrush}"
                   BorderBrush="{DynamicResource BorderGoldBrush}"
                   BorderThickness="0,2,0,0"
                   Padding="20,10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <TextBlock Text="已拥有英雄: "
                                  FontSize="{StaticResource FontSizeNormal}"
                                  Foreground="{DynamicResource TextSecondaryBrush}"
                                  VerticalAlignment="Center"/>
                        <TextBlock Text="162"
                                  FontSize="{StaticResource FontSizeNormal}"
                                  FontWeight="{StaticResource FontWeightBold}"
                                  Foreground="{DynamicResource PrimaryGoldBrush}"
                                  VerticalAlignment="Center"
                                  Margin="5,0,20,0"/>
                        
                        <TextBlock Text="蓝色精粹: "
                                  FontSize="{StaticResource FontSizeNormal}"
                                  Foreground="{DynamicResource TextSecondaryBrush}"
                                  VerticalAlignment="Center"/>
                        <TextBlock Text="45,680"
                                  FontSize="{StaticResource FontSizeNormal}"
                                  FontWeight="{StaticResource FontWeightBold}"
                                  Foreground="{DynamicResource PrimaryCyanBrush}"
                                  VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <Button Content="返回"
                               Style="{StaticResource LOLSecondaryButtonStyle}"
                               Width="100" Height="35"
                               Margin="0,0,10,0"/>
                        <Button Content="确认"
                               Style="{StaticResource LOLPrimaryButtonStyle}"
                               Width="100" Height="35"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
