<UserControl x:Class="LOLThemes.Wpf.Samples.Views.Screenshot1View"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:LOLThemes.Wpf.Controls;assembly=LOLThemes.Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1150"
             Background="{StaticResource BackgroundDarkBrush}">
    
    <Grid>
        <!-- 主容器 -->
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- 顶部导航栏 -->
            <Border Grid.Row="0" 
                   Background="{StaticResource BackgroundMediumBrush}"
                   BorderBrush="{StaticResource BorderGoldBrush}"
                   BorderThickness="0,0,0,2"
                   Padding="20,15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- 左侧标题 -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <TextBlock Text="⚔" 
                                  FontSize="{StaticResource FontSizeXLarge}"
                                  Foreground="{StaticResource PrimaryGoldBrush}"
                                  VerticalAlignment="Center"
                                  Margin="0,0,15,0"/>
                        <TextBlock Text="英雄选择" 
                                  FontSize="{StaticResource FontSizeLarge}"
                                  FontWeight="{StaticResource FontWeightBold}"
                                  Foreground="{StaticResource TextPrimaryBrush}"
                                  VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <!-- 中间搜索框 -->
                    <TextBox Grid.Column="1"
                            Style="{StaticResource LOLTextBoxStyle}"
                            Tag="搜索英雄..."
                            Width="300"
                            Height="35"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"/>
                    
                    <!-- 右侧用户信息 -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                        <TextBlock Text="召唤师" 
                                  FontSize="{StaticResource FontSizeNormal}"
                                  Foreground="{StaticResource TextSecondaryBrush}"
                                  VerticalAlignment="Center"
                                  Margin="0,0,10,0"/>
                        <Border Background="{StaticResource PrimaryGoldBrush}"
                               Width="35" Height="35"
                               CornerRadius="17.5">
                            <TextBlock Text="S" 
                                      FontSize="{StaticResource FontSizeMedium}"
                                      FontWeight="{StaticResource FontWeightBold}"
                                      Foreground="{StaticResource BackgroundDarkBrush}"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                        </Border>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- 主内容区域 -->
            <Grid Grid.Row="1" Margin="0,20,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="250"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="300"/>
                </Grid.ColumnDefinitions>
                
                <!-- 左侧过滤器面板 -->
                <Border Grid.Column="0"
                       Background="{StaticResource BackgroundMediumBrush}"
                       BorderBrush="{StaticResource BorderDarkBrush}"
                       BorderThickness="1"
                       Padding="20"
                       Margin="0,0,10,0">
                    <StackPanel>
                        <TextBlock Text="位置" 
                                  FontSize="{StaticResource FontSizeMedium}"
                                  FontWeight="{StaticResource FontWeightBold}"
                                  Foreground="{StaticResource PrimaryGoldBrush}"
                                  Margin="0,0,0,15"/>
                        
                        <Button Content="上单" 
                               Style="{StaticResource LOLSecondaryButtonStyle}"
                               Height="40"
                               Margin="0,0,0,10"/>
                        <Button Content="打野" 
                               Style="{StaticResource LOLSecondaryButtonStyle}"
                               Height="40"
                               Margin="0,0,0,10"/>
                        <Button Content="中单" 
                               Style="{StaticResource LOLPrimaryButtonStyle}"
                               Height="40"
                               Margin="0,0,0,10"/>
                        <Button Content="ADC" 
                               Style="{StaticResource LOLSecondaryButtonStyle}"
                               Height="40"
                               Margin="0,0,0,10"/>
                        <Button Content="辅助" 
                               Style="{StaticResource LOLSecondaryButtonStyle}"
                               Height="40"
                               Margin="0,0,0,20"/>
                        
                        <Separator Style="{StaticResource LOLSeparatorStyle}"
                                  Margin="0,10,0,20"/>
                        
                        <TextBlock Text="类型" 
                                  FontSize="{StaticResource FontSizeMedium}"
                                  FontWeight="{StaticResource FontWeightBold}"
                                  Foreground="{StaticResource PrimaryGoldBrush}"
                                  Margin="0,0,0,15"/>
                        
                        <CheckBox Content="刺客" 
                                 Style="{StaticResource LOLCheckBoxStyle}"
                                 IsChecked="True"
                                 Margin="0,0,0,10"/>
                        <CheckBox Content="法师" 
                                 Style="{StaticResource LOLCheckBoxStyle}"
                                 IsChecked="True"
                                 Margin="0,0,0,10"/>
                        <CheckBox Content="战士" 
                                 Style="{StaticResource LOLCheckBoxStyle}"
                                 Margin="0,0,0,10"/>
                        <CheckBox Content="坦克" 
                                 Style="{StaticResource LOLCheckBoxStyle}"
                                 Margin="0,0,0,10"/>
                        <CheckBox Content="射手" 
                                 Style="{StaticResource LOLCheckBoxStyle}"
                                 Margin="0,0,0,10"/>
                        <CheckBox Content="辅助" 
                                 Style="{StaticResource LOLCheckBoxStyle}"
                                 Margin="0,0,0,10"/>
                    </StackPanel>
                </Border>
                
                <!-- 中间英雄网格 -->
                <Border Grid.Column="1"
                       Background="{StaticResource BackgroundMediumBrush}"
                       BorderBrush="{StaticResource BorderDarkBrush}"
                       BorderThickness="1"
                       Padding="20"
                       Margin="0,0,10,0">
                    <ScrollViewer VerticalScrollBarVisibility="Auto"
                                 HorizontalScrollBarVisibility="Disabled">
                        <WrapPanel>
                            <!-- 英雄卡片示例 -->
                            <controls:ChampionCard ChampionName="亚索"
                                                  IsSelected="True"
                                                  Width="100" Height="120"
                                                  Margin="5"/>
                            <controls:ChampionCard ChampionName="劫"
                                                  Width="100" Height="120"
                                                  Margin="5"/>
                            <controls:ChampionCard ChampionName="阿卡丽"
                                                  Width="100" Height="120"
                                                  Margin="5"/>
                            <controls:ChampionCard ChampionName="卡特琳娜"
                                                  Width="100" Height="120"
                                                  Margin="5"/>
                            <controls:ChampionCard ChampionName="辛德拉"
                                                  Width="100" Height="120"
                                                  Margin="5"/>
                            <controls:ChampionCard ChampionName="妖姬"
                                                  Width="100" Height="120"
                                                  Margin="5"/>
                            <controls:ChampionCard ChampionName="发条"
                                                  Width="100" Height="120"
                                                  Margin="5"/>
                            <controls:ChampionCard ChampionName="瑞兹"
                                                  Width="100" Height="120"
                                                  Margin="5"/>
                            <controls:ChampionCard ChampionName="卡萨丁"
                                                  Width="100" Height="120"
                                                  Margin="5"/>
                            <controls:ChampionCard ChampionName="维克托"
                                                  Width="100" Height="120"
                                                  Margin="5"/>
                            <controls:ChampionCard ChampionName="佐伊"
                                                  Width="100" Height="120"
                                                  Margin="5"/>
                            <controls:ChampionCard ChampionName="艾克"
                                                  Width="100" Height="120"
                                                  Margin="5"/>
                        </WrapPanel>
                    </ScrollViewer>
                </Border>
                
                <!-- 右侧英雄详情面板 -->
                <Border Grid.Column="2"
                       Background="{StaticResource BackgroundMediumBrush}"
                       BorderBrush="{StaticResource BorderGoldBrush}"
                       BorderThickness="2"
                       Padding="20">
                    <StackPanel>
                        <!-- 英雄头像 -->
                        <Border Background="{StaticResource BackgroundLightBrush}"
                               BorderBrush="{StaticResource PrimaryGoldBrush}"
                               BorderThickness="2"
                               Width="200" Height="200"
                               Margin="0,0,0,20">
                            <TextBlock Text="亚索"
                                      FontSize="48"
                                      FontWeight="{StaticResource FontWeightBold}"
                                      Foreground="{StaticResource PrimaryGoldBrush}"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                        </Border>
                        
                        <!-- 英雄名称 -->
                        <TextBlock Text="疾风剑豪"
                                  FontSize="{StaticResource FontSizeLarge}"
                                  FontWeight="{StaticResource FontWeightBold}"
                                  Foreground="{StaticResource TextPrimaryBrush}"
                                  HorizontalAlignment="Center"
                                  Margin="0,0,0,5"/>
                        <TextBlock Text="亚索"
                                  FontSize="{StaticResource FontSizeXLarge}"
                                  FontWeight="{StaticResource FontWeightBold}"
                                  Foreground="{StaticResource PrimaryGoldBrush}"
                                  HorizontalAlignment="Center"
                                  Margin="0,0,0,20"/>
                        
                        <!-- 英雄标签 -->
                        <WrapPanel HorizontalAlignment="Center" Margin="0,0,0,20">
                            <Border Background="{StaticResource PrimaryCyanBrush}"
                                   Padding="8,4"
                                   Margin="3">
                                <TextBlock Text="刺客"
                                          FontSize="{StaticResource FontSizeSmall}"
                                          Foreground="{StaticResource BackgroundDarkBrush}"/>
                            </Border>
                            <Border Background="{StaticResource PrimaryCyanBrush}"
                                   Padding="8,4"
                                   Margin="3">
                                <TextBlock Text="战士"
                                          FontSize="{StaticResource FontSizeSmall}"
                                          Foreground="{StaticResource BackgroundDarkBrush}"/>
                            </Border>
                        </WrapPanel>
                        
                        <!-- 难度 -->
                        <TextBlock Text="难度"
                                  FontSize="{StaticResource FontSizeNormal}"
                                  Foreground="{StaticResource TextSecondaryBrush}"
                                  Margin="0,0,0,5"/>
                        <ProgressBar Style="{StaticResource LOLProgressBarStyle}"
                                    Value="80"
                                    Height="8"
                                    Margin="0,0,0,20"/>
                        
                        <!-- 技能按钮 -->
                        <TextBlock Text="技能"
                                  FontSize="{StaticResource FontSizeMedium}"
                                  FontWeight="{StaticResource FontWeightBold}"
                                  Foreground="{StaticResource PrimaryGoldBrush}"
                                  Margin="0,0,0,10"/>
                        
                        <WrapPanel HorizontalAlignment="Center" Margin="0,0,0,20">
                            <controls:SkillButton HotkeyText="Q"
                                                 Width="50" Height="50"
                                                 Margin="5"/>
                            <controls:SkillButton HotkeyText="W"
                                                 Width="50" Height="50"
                                                 Margin="5"/>
                            <controls:SkillButton HotkeyText="E"
                                                 Width="50" Height="50"
                                                 Margin="5"/>
                            <controls:SkillButton HotkeyText="R"
                                                 CooldownProgress="0.6"
                                                 Width="50" Height="50"
                                                 Margin="5"/>
                        </WrapPanel>
                        
                        <!-- 选择按钮 -->
                        <controls:GlowButton Content="选择英雄"
                                           GlowColor="#C8AA6E"
                                           Height="50"
                                           FontSize="{StaticResource FontSizeMedium}"
                                           FontWeight="{StaticResource FontWeightBold}"/>
                    </StackPanel>
                </Border>
            </Grid>
            
            <!-- 底部状态栏 -->
            <Border Grid.Row="2"
                   Background="{StaticResource BackgroundMediumBrush}"
                   BorderBrush="{StaticResource BorderGoldBrush}"
                   BorderThickness="0,2,0,0"
                   Padding="20,10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <TextBlock Text="已拥有英雄: "
                                  FontSize="{StaticResource FontSizeNormal}"
                                  Foreground="{StaticResource TextSecondaryBrush}"
                                  VerticalAlignment="Center"/>
                        <TextBlock Text="162"
                                  FontSize="{StaticResource FontSizeNormal}"
                                  FontWeight="{StaticResource FontWeightBold}"
                                  Foreground="{StaticResource PrimaryGoldBrush}"
                                  VerticalAlignment="Center"
                                  Margin="5,0,20,0"/>
                        
                        <TextBlock Text="蓝色精粹: "
                                  FontSize="{StaticResource FontSizeNormal}"
                                  Foreground="{StaticResource TextSecondaryBrush}"
                                  VerticalAlignment="Center"/>
                        <TextBlock Text="45,680"
                                  FontSize="{StaticResource FontSizeNormal}"
                                  FontWeight="{StaticResource FontWeightBold}"
                                  Foreground="{StaticResource PrimaryCyanBrush}"
                                  VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <Button Content="返回"
                               Style="{StaticResource LOLSecondaryButtonStyle}"
                               Width="100" Height="35"
                               Margin="0,0,10,0"/>
                        <Button Content="确认"
                               Style="{StaticResource LOLPrimaryButtonStyle}"
                               Width="100" Height="35"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
