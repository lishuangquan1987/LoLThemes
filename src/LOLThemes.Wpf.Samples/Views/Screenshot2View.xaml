<UserControl x:Class="LOLThemes.Wpf.Samples.Views.Screenshot2View"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:LOLThemes.Wpf.Controls;assembly=LOLThemes.Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1150"
             Background="{DynamicResource BackgroundDarkBrush}">
    
    <Grid>
        <!-- 主容器 -->
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- 顶部标题栏 -->
            <Border Grid.Row="0" 
                   Background="{DynamicResource BackgroundMediumBrush}"
                   BorderBrush="{DynamicResource BorderGoldBrush}"
                   BorderThickness="0,0,0,2"
                   Padding="20,15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- 左侧标题 -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <TextBlock Text="🏆" 
                                  FontSize="{DynamicResource FontSizeLarge}"
                                  Foreground="{DynamicResource PrimaryGoldBrush}"
                                  VerticalAlignment="Center"
                                  Margin="0,0,15,0"/>
                        <TextBlock Text="个人资料" 
                                  FontSize="{StaticResource FontSizeLarge}"
                                  FontWeight="{StaticResource FontWeightBold}"
                                  Foreground="{DynamicResource TextPrimaryBrush}"
                                  VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <!-- 中间导航标签 -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Content="概览" 
                               Style="{StaticResource LOLPrimaryButtonStyle}"
                               Width="100" Height="35"
                               Margin="5,0"/>
                        <Button Content="英雄" 
                               Style="{StaticResource LOLSecondaryButtonStyle}"
                               Width="100" Height="35"
                               Margin="5,0"/>
                        <Button Content="收藏" 
                               Style="{StaticResource LOLSecondaryButtonStyle}"
                               Width="100" Height="35"
                               Margin="5,0"/>
                        <Button Content="战绩" 
                               Style="{StaticResource LOLSecondaryButtonStyle}"
                               Width="100" Height="35"
                               Margin="5,0"/>
                    </StackPanel>
                    
                    <!-- 右侧设置按钮 -->
                    <Button Grid.Column="2" 
                           Content="⚙" 
                           Style="{StaticResource LOLSecondaryButtonStyle}"
                           Width="40" Height="40"
                           FontSize="{StaticResource FontSizeLarge}"/>
                </Grid>
            </Border>
            
            <!-- 主内容区域 -->
            <Grid Grid.Row="1" Margin="0,20,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="350"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- 左侧个人信息面板 -->
                <Border Grid.Column="0"
                       Background="{DynamicResource BackgroundMediumBrush}"
                       BorderBrush="{DynamicResource BorderGoldBrush}"
                       BorderThickness="2"
                       Padding="25"
                       Margin="0,0,15,0">
                    <StackPanel>
                        <!-- 召唤师头像 -->
                        <Border Background="{DynamicResource BackgroundLightBrush}"
                               BorderBrush="{DynamicResource PrimaryGoldBrush}"
                               BorderThickness="3"
                               Width="150" Height="150"
                               CornerRadius="75"
                               Margin="0,0,0,20"
                               HorizontalAlignment="Center">
                            <TextBlock Text="👤"
                                      FontSize="72"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                        </Border>
                        
                        <!-- 召唤师名称 -->
                        <TextBlock Text="召唤师名称"
                                  FontSize="{DynamicResource FontSizeLarge}"
                                  FontWeight="{StaticResource FontWeightBold}"
                                  Foreground="{DynamicResource PrimaryGoldBrush}"
                                  HorizontalAlignment="Center"
                                  Margin="0,0,0,10"/>
                        
                        <!-- 等级 -->
                        <Border Background="{DynamicResource PrimaryCyanBrush}"
                               Padding="15,8"
                               CornerRadius="3"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,25">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="等级 "
                                          FontSize="{StaticResource FontSizeMedium}"
                                          FontWeight="{StaticResource FontWeightBold}"
                                          Foreground="{DynamicResource BackgroundDarkBrush}"/>
                                <TextBlock Text="{Binding PlayerData.Level}"
                                          FontSize="{StaticResource FontSizeMedium}"
                                          FontWeight="{StaticResource FontWeightBold}"
                                          Foreground="{DynamicResource BackgroundDarkBrush}"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- 段位信息 -->
                        <Border Background="{DynamicResource BackgroundLightBrush}"
                               BorderBrush="{DynamicResource BorderGoldBrush}"
                               BorderThickness="1"
                               Padding="20"
                               Margin="0,0,0,20">
                            <StackPanel>
                                <TextBlock Text="单双排位"
                                          FontSize="{StaticResource FontSizeMedium}"
                                          FontWeight="{StaticResource FontWeightBold}"
                                          Foreground="{DynamicResource PrimaryGoldBrush}"
                                          HorizontalAlignment="Center"
                                          Margin="0,0,0,10"/>
                                
                                <Border Background="{DynamicResource PrimaryGoldBrush}"
                                       Width="80" Height="80"
                                       CornerRadius="40"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,10">
                                    <TextBlock Text="💎"
                                              FontSize="40"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                                </Border>
                                
                                <TextBlock Text="{Binding PlayerData.Rank}"
                                          FontSize="{StaticResource FontSizeLarge}"
                                          FontWeight="{StaticResource FontWeightBold}"
                                          Foreground="{DynamicResource TextPrimaryBrush}"
                                          HorizontalAlignment="Center"
                                          Margin="0,0,0,5"/>
                                
                                <TextBlock Text="67 LP"
                                          FontSize="{StaticResource FontSizeNormal}"
                                          Foreground="{DynamicResource TextSecondaryBrush}"
                                          HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- 统计信息 -->
                        <StackPanel>
                            <TextBlock Text="本赛季统计"
                                      FontSize="{StaticResource FontSizeMedium}"
                                      FontWeight="{StaticResource FontWeightBold}"
                                      Foreground="{DynamicResource PrimaryGoldBrush}"
                                      Margin="0,0,0,15"/>
                            
                            <Grid Margin="0,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" 
                                          Text="总场次"
                                          FontSize="{StaticResource FontSizeNormal}"
                                          Foreground="{DynamicResource TextSecondaryBrush}"/>
                                <TextBlock Grid.Column="1" 
                                          Text="342"
                                          FontSize="{StaticResource FontSizeNormal}"
                                          FontWeight="{StaticResource FontWeightBold}"
                                          Foreground="{DynamicResource TextPrimaryBrush}"/>
                            </Grid>
                            
                            <Grid Margin="0,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" 
                                          Text="胜率"
                                          FontSize="{StaticResource FontSizeNormal}"
                                          Foreground="{DynamicResource TextSecondaryBrush}"/>
                                <TextBlock Grid.Column="1" 
                                          Text="54.7%"
                                          FontSize="{StaticResource FontSizeNormal}"
                                          FontWeight="{StaticResource FontWeightBold}"
                                          Foreground="{DynamicResource SuccessGreenBrush}"/>
                            </Grid>
                            
                            <Grid Margin="0,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" 
                                          Text="KDA"
                                          FontSize="{StaticResource FontSizeNormal}"
                                          Foreground="{DynamicResource TextSecondaryBrush}"/>
                                <TextBlock Grid.Column="1" 
                                          Text="3.2:1"
                                          FontSize="{StaticResource FontSizeNormal}"
                                          FontWeight="{StaticResource FontWeightBold}"
                                          Foreground="{DynamicResource TextPrimaryBrush}"/>
                            </Grid>
                        </StackPanel>
                    </StackPanel>
                </Border>
                
                <!-- 右侧内容区域 -->
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- 成就展示 -->
                    <Border Grid.Row="0"
                           Background="{DynamicResource BackgroundMediumBrush}"
                           BorderBrush="{DynamicResource BorderDarkBrush}"
                           BorderThickness="1"
                           Padding="20"
                           Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="最近成就"
                                      FontSize="{StaticResource FontSizeMedium}"
                                      FontWeight="{StaticResource FontWeightBold}"
                                      Foreground="{DynamicResource PrimaryGoldBrush}"
                                      Margin="0,0,0,15"/>
                            
                            <WrapPanel>
                                <!-- 成就徽章 -->
                                <Border Background="{DynamicResource BackgroundLightBrush}"
                                       BorderBrush="{DynamicResource PrimaryGoldBrush}"
                                       BorderThickness="2"
                                       Width="100" Height="100"
                                       Margin="0,0,15,0">
                                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <TextBlock Text="🏅"
                                                  FontSize="40"
                                                  HorizontalAlignment="Center"
                                                  Margin="0,0,0,5"/>
                                        <TextBlock Text="五杀"
                                                  FontSize="{StaticResource FontSizeSmall}"
                                                  Foreground="{DynamicResource TextPrimaryBrush}"
                                                  HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                                
                                <Border Background="{DynamicResource BackgroundLightBrush}"
                                       BorderBrush="{DynamicResource PrimaryCyanBrush}"
                                       BorderThickness="2"
                                       Width="100" Height="100"
                                       Margin="0,0,15,0">
                                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <TextBlock Text="⭐"
                                                  FontSize="40"
                                                  HorizontalAlignment="Center"
                                                  Margin="0,0,0,5"/>
                                        <TextBlock Text="MVP"
                                                  FontSize="{StaticResource FontSizeSmall}"
                                                  Foreground="{DynamicResource TextPrimaryBrush}"
                                                  HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                                
                                <Border Background="{DynamicResource BackgroundLightBrush}"
                                       BorderBrush="{DynamicResource PrimaryGoldBrush}"
                                       BorderThickness="2"
                                       Width="100" Height="100"
                                       Margin="0,0,15,0">
                                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <TextBlock Text="🎯"
                                                  FontSize="40"
                                                  HorizontalAlignment="Center"
                                                  Margin="0,0,0,5"/>
                                        <TextBlock Text="神射手"
                                                  FontSize="{StaticResource FontSizeSmall}"
                                                  Foreground="{DynamicResource TextPrimaryBrush}"
                                                  HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                                
                                <Border Background="{DynamicResource BackgroundLightBrush}"
                                       BorderBrush="{DynamicResource PrimaryCyanBrush}"
                                       BorderThickness="2"
                                       Width="100" Height="100">
                                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <TextBlock Text="🛡️"
                                                  FontSize="40"
                                                  HorizontalAlignment="Center"
                                                  Margin="0,0,0,5"/>
                                        <TextBlock Text="守护者"
                                                  FontSize="{StaticResource FontSizeSmall}"
                                                  Foreground="{DynamicResource TextPrimaryBrush}"
                                                  HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                            </WrapPanel>
                        </StackPanel>
                    </Border>
                    
                    <!-- 最常使用英雄 -->
                    <Border Grid.Row="1"
                           Background="{DynamicResource BackgroundMediumBrush}"
                           BorderBrush="{DynamicResource BorderDarkBrush}"
                           BorderThickness="1"
                           Padding="20">
                        <StackPanel>
                            <TextBlock Text="最常使用英雄"
                                      FontSize="{StaticResource FontSizeMedium}"
                                      FontWeight="{StaticResource FontWeightBold}"
                                      Foreground="{DynamicResource PrimaryGoldBrush}"
                                      Margin="0,0,0,15"/>
                            
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <StackPanel>
                                    <!-- 英雄统计项 1 -->
                                    <Border Background="{DynamicResource BackgroundLightBrush}"
                                           BorderBrush="{DynamicResource BorderGoldBrush}"
                                           BorderThickness="1"
                                           Padding="15"
                                           Margin="0,0,0,10">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="60"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <Border Grid.Column="0"
                                                   Background="{DynamicResource PrimaryGoldBrush}"
                                                   Width="50" Height="50">
                                                <TextBlock Text="亚索"
                                                          FontSize="{StaticResource FontSizeSmall}"
                                                          FontWeight="{StaticResource FontWeightBold}"
                                                          Foreground="{DynamicResource BackgroundDarkBrush}"
                                                          HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"/>
                                            </Border>
                                            
                                            <StackPanel Grid.Column="1" Margin="15,0,0,0" VerticalAlignment="Center">
                                                <TextBlock Text="疾风剑豪 - 亚索"
                                                          FontSize="{StaticResource FontSizeNormal}"
                                                          FontWeight="{StaticResource FontWeightBold}"
                                                          Foreground="{DynamicResource TextPrimaryBrush}"
                                                          Margin="0,0,0,5"/>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="87场 · "
                                                              FontSize="{StaticResource FontSizeSmall}"
                                                              Foreground="{DynamicResource TextSecondaryBrush}"/>
                                                    <TextBlock Text="58% 胜率"
                                                              FontSize="{StaticResource FontSizeSmall}"
                                                              Foreground="{DynamicResource SuccessGreenBrush}"/>
                                                </StackPanel>
                                            </StackPanel>
                                            
                                            <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                                <TextBlock Text="4.2"
                                                          FontSize="{StaticResource FontSizeLarge}"
                                                          FontWeight="{StaticResource FontWeightBold}"
                                                          Foreground="{DynamicResource PrimaryGoldBrush}"
                                                          HorizontalAlignment="Right"/>
                                                <TextBlock Text="KDA"
                                                          FontSize="{StaticResource FontSizeSmall}"
                                                          Foreground="{DynamicResource TextSecondaryBrush}"
                                                          HorizontalAlignment="Right"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                    
                                    <!-- 英雄统计项 2 -->
                                    <Border Background="{DynamicResource BackgroundLightBrush}"
                                           BorderBrush="{DynamicResource BorderDarkBrush}"
                                           BorderThickness="1"
                                           Padding="15"
                                           Margin="0,0,0,10">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="60"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <Border Grid.Column="0"
                                                   Background="{DynamicResource PrimaryCyanBrush}"
                                                   Width="50" Height="50">
                                                <TextBlock Text="劫"
                                                          FontSize="{StaticResource FontSizeSmall}"
                                                          FontWeight="{StaticResource FontWeightBold}"
                                                          Foreground="{DynamicResource BackgroundDarkBrush}"
                                                          HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"/>
                                            </Border>
                                            
                                            <StackPanel Grid.Column="1" Margin="15,0,0,0" VerticalAlignment="Center">
                                                <TextBlock Text="影流之主 - 劫"
                                                          FontSize="{StaticResource FontSizeNormal}"
                                                          FontWeight="{StaticResource FontWeightBold}"
                                                          Foreground="{DynamicResource TextPrimaryBrush}"
                                                          Margin="0,0,0,5"/>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="65场 · "
                                                              FontSize="{StaticResource FontSizeSmall}"
                                                              Foreground="{DynamicResource TextSecondaryBrush}"/>
                                                    <TextBlock Text="52% 胜率"
                                                              FontSize="{StaticResource FontSizeSmall}"
                                                              Foreground="{DynamicResource SuccessGreenBrush}"/>
                                                </StackPanel>
                                            </StackPanel>
                                            
                                            <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                                <TextBlock Text="3.8"
                                                          FontSize="{StaticResource FontSizeLarge}"
                                                          FontWeight="{StaticResource FontWeightBold}"
                                                          Foreground="{DynamicResource PrimaryCyanBrush}"
                                                          HorizontalAlignment="Right"/>
                                                <TextBlock Text="KDA"
                                                          FontSize="{StaticResource FontSizeSmall}"
                                                          Foreground="{DynamicResource TextSecondaryBrush}"
                                                          HorizontalAlignment="Right"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                    
                                    <!-- 英雄统计项 3 -->
                                    <Border Background="{DynamicResource BackgroundLightBrush}"
                                           BorderBrush="{DynamicResource BorderDarkBrush}"
                                           BorderThickness="1"
                                           Padding="15"
                                           Margin="0,0,0,10">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="60"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <Border Grid.Column="0"
                                                   Background="{DynamicResource PrimaryGoldBrush}"
                                                   Width="50" Height="50">
                                                <TextBlock Text="阿卡丽"
                                                          FontSize="10"
                                                          FontWeight="{StaticResource FontWeightBold}"
                                                          Foreground="{DynamicResource BackgroundDarkBrush}"
                                                          HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"/>
                                            </Border>
                                            
                                            <StackPanel Grid.Column="1" Margin="15,0,0,0" VerticalAlignment="Center">
                                                <TextBlock Text="离群之刺 - 阿卡丽"
                                                          FontSize="{StaticResource FontSizeNormal}"
                                                          FontWeight="{StaticResource FontWeightBold}"
                                                          Foreground="{DynamicResource TextPrimaryBrush}"
                                                          Margin="0,0,0,5"/>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="54场 · "
                                                              FontSize="{StaticResource FontSizeSmall}"
                                                              Foreground="{DynamicResource TextSecondaryBrush}"/>
                                                    <TextBlock Text="50% 胜率"
                                                              FontSize="{StaticResource FontSizeSmall}"
                                                              Foreground="{DynamicResource TextSecondaryBrush}"/>
                                                </StackPanel>
                                            </StackPanel>
                                            
                                            <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                                <TextBlock Text="3.5"
                                                          FontSize="{StaticResource FontSizeLarge}"
                                                          FontWeight="{StaticResource FontWeightBold}"
                                                          Foreground="{DynamicResource TextPrimaryBrush}"
                                                          HorizontalAlignment="Right"/>
                                                <TextBlock Text="KDA"
                                                          FontSize="{StaticResource FontSizeSmall}"
                                                          Foreground="{DynamicResource TextSecondaryBrush}"
                                                          HorizontalAlignment="Right"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </StackPanel>
                            </ScrollViewer>
                        </StackPanel>
                    </Border>
                </Grid>
            </Grid>
            
            <!-- 底部操作栏 -->
            <Border Grid.Row="2"
                   Background="{DynamicResource BackgroundMediumBrush}"
                   BorderBrush="{DynamicResource BorderGoldBrush}"
                   BorderThickness="0,2,0,0"
                   Padding="20,10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="上次登录: "
                                  FontSize="{StaticResource FontSizeNormal}"
                                  Foreground="{DynamicResource TextSecondaryBrush}"/>
                        <TextBlock Text="2024年1月30日 14:32"
                                  FontSize="{StaticResource FontSizeNormal}"
                                  Foreground="{DynamicResource TextPrimaryBrush}"
                                  Margin="5,0,0,0"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <Button Content="编辑资料"
                               Style="{StaticResource LOLSecondaryButtonStyle}"
                               Width="120" Height="35"
                               Margin="0,0,10,0"/>
                        <controls:GlowButton Content="查看详情"
                                           GlowColor="{DynamicResource PrimaryGold}"
                                           Width="120" Height="35"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
