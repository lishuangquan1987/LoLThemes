<UserControl x:Class="LOLThemes.Wpf.Samples.Views.Screenshot4View"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:LOLThemes.Wpf.Controls;assembly=LOLThemes.Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1150"
             Background="{DynamicResource BackgroundDarkBrush}">
    
    <Grid>
        <!-- 主容器 -->
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- 顶部标题栏 -->
            <Border Grid.Row="0" 
                   Background="{DynamicResource BackgroundMediumBrush}"
                   BorderBrush="{DynamicResource BorderGoldBrush}"
                   BorderThickness="0,0,0,2"
                   Padding="20,15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- 左侧标题 -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <TextBlock Text="🛒" 
                                  FontSize="{StaticResource FontSizeXLarge}"
                                  Foreground="{DynamicResource PrimaryGoldBrush}"
                                  VerticalAlignment="Center"
                                  Margin="0,0,15,0"/>
                        <TextBlock Text="商店" 
                                  FontSize="{StaticResource FontSizeLarge}"
                                  FontWeight="{StaticResource FontWeightBold}"
                                  Foreground="{DynamicResource TextPrimaryBrush}"
                                  VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <!-- 中间搜索框 -->
                    <TextBox Grid.Column="1"
                           
                            Tag="搜索物品..."
                            Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                            Width="350"
                            Height="35"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"/>
                    
                    <!-- 右侧货币显示 -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                        <Border x:Name="CurrencyGoldBorder4"
                               Background="{DynamicResource PrimaryGoldBrush}"
                               Padding="12,6"
                               CornerRadius="3"
                               Margin="0,0,10,0"
                               Cursor="Hand">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="💰 "
                                          FontSize="{StaticResource FontSizeNormal}"
                                          VerticalAlignment="Center"/>
                                <TextBlock x:Name="CurrencyGoldText4"
                                          Text="{Binding PlayerData.Gold, StringFormat='{}{0:N0}'}"
                                          FontSize="{StaticResource FontSizeNormal}"
                                          FontWeight="{StaticResource FontWeightBold}"
                                          Foreground="{DynamicResource BackgroundDarkBrush}"
                                          VerticalAlignment="Center"/>
                            </StackPanel>
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="{DynamicResource PrimaryGoldBrush}"/>
                                            <Setter Property="Effect">
                                                <Setter.Value>
                                                    <DropShadowEffect Color="{DynamicResource PrimaryGold}" BlurRadius="10" ShadowDepth="0" Opacity="0.8"/>
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                        </Border>
                        
                        <Border x:Name="CurrencyCyanBorder4"
                               Background="{DynamicResource PrimaryCyanBrush}"
                               Padding="12,6"
                               CornerRadius="3"
                               Cursor="Hand">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="💎 "
                                          FontSize="{StaticResource FontSizeNormal}"
                                          VerticalAlignment="Center"/>
                                <TextBlock x:Name="CurrencyCyanText4"
                                          Text="2,450"
                                          FontSize="{StaticResource FontSizeNormal}"
                                          FontWeight="{StaticResource FontWeightBold}"
                                          Foreground="{DynamicResource BackgroundDarkBrush}"
                                          VerticalAlignment="Center"/>
                            </StackPanel>
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="{DynamicResource PrimaryCyanBrush}"/>
                                            <Setter Property="Effect">
                                                <Setter.Value>
                                                    <DropShadowEffect Color="#0AC8B9" BlurRadius="10" ShadowDepth="0" Opacity="0.8"/>
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                        </Border>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- 主内容区域 -->
            <Grid Grid.Row="1" Margin="0,20,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="220"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="320"/>
                </Grid.ColumnDefinitions>
                
                <!-- 左侧分类面板 -->
                <Border Grid.Column="0"
                       Background="{DynamicResource BackgroundMediumBrush}"
                       BorderBrush="{DynamicResource BorderDarkBrush}"
                       BorderThickness="1"
                       Padding="15"
                       Margin="0,0,10,0">
                    <StackPanel>
                        <TextBlock Text="分类" 
                                  FontSize="{StaticResource FontSizeMedium}"
                                  FontWeight="{StaticResource FontWeightBold}"
                                  Foreground="{DynamicResource PrimaryGoldBrush}"
                                  Margin="0,0,0,15"/>
                        
                        <Button Content="全部物品" 
                               Style="{StaticResource LOLPrimaryButtonStyle}"
                               Height="40"
                               Margin="0,0,0,8"/>
                        <Button Content="英雄" 
                               Style="{StaticResource LOLSecondaryButtonStyle}"
                               Height="40"
                               Margin="0,0,0,8"/>
                        <Button Content="皮肤" 
                               Style="{StaticResource LOLSecondaryButtonStyle}"
                               Height="40"
                               Margin="0,0,0,8"/>
                        <Button Content="表情" 
                               Style="{StaticResource LOLSecondaryButtonStyle}"
                               Height="40"
                               Margin="0,0,0,8"/>
                        <Button Content="守卫" 
                               Style="{StaticResource LOLSecondaryButtonStyle}"
                               Height="40"
                               Margin="0,0,0,8"/>
                        <Button Content="图标" 
                               Style="{StaticResource LOLSecondaryButtonStyle}"
                               Height="40"
                               Margin="0,0,0,8"/>
                        
                        <Separator
                                  Margin="0,15,0,15"/>
                        
                        <TextBlock Text="筛选" 
                                  FontSize="{StaticResource FontSizeMedium}"
                                  FontWeight="{StaticResource FontWeightBold}"
                                  Foreground="{DynamicResource PrimaryGoldBrush}"
                                  Margin="0,0,0,15"/>
                        
                        <CheckBox Content="已拥有" 
                                
                                 Margin="0,0,0,8"/>
                        <CheckBox Content="未拥有" 
                                
                                 IsChecked="True"
                                 Margin="0,0,0,8"/>
                        <CheckBox Content="限时优惠" 
                                
                                 Margin="0,0,0,8"/>
                    </StackPanel>
                </Border>
                
                <!-- 中间商品网格 -->
                <Border Grid.Column="1"
                       Background="{DynamicResource BackgroundMediumBrush}"
                       BorderBrush="{DynamicResource BorderDarkBrush}"
                       BorderThickness="1"
                       Padding="20"
                       Margin="0,0,10,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <!-- 排序选项 -->
                        <Grid Grid.Row="0" Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0"
                                      Text="{Binding ShopItems.Count, StringFormat='显示 {0} 个物品'}"
                                      FontSize="{StaticResource FontSizeNormal}"
                                      Foreground="{DynamicResource TextSecondaryBrush}"
                                      VerticalAlignment="Center"/>
                            
                            <StackPanel Grid.Column="2" Orientation="Horizontal">
                                <TextBlock Text="排序: "
                                          FontSize="{StaticResource FontSizeNormal}"
                                          Foreground="{DynamicResource TextSecondaryBrush}"
                                          VerticalAlignment="Center"
                                          Margin="0,0,10,0"/>
                                <ComboBox
                                         Width="150"
                                         Height="30">
                                    <ComboBoxItem Content="价格从低到高" IsSelected="True"/>
                                    <ComboBoxItem Content="价格从高到低"/>
                                    <ComboBoxItem Content="最新上架"/>
                                    <ComboBoxItem Content="最受欢迎"/>
                                </ComboBox>
                            </StackPanel>
                        </Grid>
                        
                        <!-- 商品列表 -->
                        <ScrollViewer Grid.Row="1"
                                     VerticalScrollBarVisibility="Auto"
                                     HorizontalScrollBarVisibility="Disabled">
                            <WrapPanel>
                                <!-- 商品卡片 1 -->
                                <Border Background="{DynamicResource BackgroundLightBrush}"
                                       BorderBrush="{DynamicResource BorderGoldBrush}"
                                       BorderThickness="2"
                                       Width="140" Height="180"
                                       Margin="5"
                                       Cursor="Hand">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        
                                        <Border Grid.Row="0"
                                               Background="{DynamicResource PrimaryGoldBrush}"
                                               Margin="5,5,5,0">
                                            <TextBlock Text="亚索"
                                                      FontSize="{StaticResource FontSizeMedium}"
                                                      FontWeight="{StaticResource FontWeightBold}"
                                                      Foreground="{DynamicResource BackgroundDarkBrush}"
                                                      HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"/>
                                        </Border>
                                        
                                        <TextBlock Grid.Row="1"
                                                  Text="疾风剑豪"
                                                  FontSize="{StaticResource FontSizeSmall}"
                                                  Foreground="{DynamicResource TextPrimaryBrush}"
                                                  HorizontalAlignment="Center"
                                                  Margin="5,5,5,3"/>
                                        
                                        <Border Grid.Row="2"
                                               Background="{DynamicResource PrimaryCyanBrush}"
                                               Padding="8,4"
                                               Margin="5,0,5,5">
                                            <TextBlock Text="4800 BE"
                                                      FontSize="{StaticResource FontSizeSmall}"
                                                      FontWeight="{StaticResource FontWeightBold}"
                                                      Foreground="{DynamicResource BackgroundDarkBrush}"
                                                      HorizontalAlignment="Center"/>
                                        </Border>
                                    </Grid>
                                </Border>
                                
                                <!-- 商品卡片 2 -->
                                <Border Background="{DynamicResource BackgroundLightBrush}"
                                       BorderBrush="{DynamicResource BorderDarkBrush}"
                                       BorderThickness="1"
                                       Width="140" Height="180"
                                       Margin="5"
                                       Cursor="Hand">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        
                                        <Border Grid.Row="0"
                                               Background="{DynamicResource PrimaryCyanBrush}"
                                               Margin="5,5,5,0">
                                            <TextBlock Text="劫"
                                                      FontSize="{StaticResource FontSizeMedium}"
                                                      FontWeight="{StaticResource FontWeightBold}"
                                                      Foreground="{DynamicResource BackgroundDarkBrush}"
                                                      HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"/>
                                        </Border>
                                        
                                        <TextBlock Grid.Row="1"
                                                  Text="影流之主"
                                                  FontSize="{StaticResource FontSizeSmall}"
                                                  Foreground="{DynamicResource TextPrimaryBrush}"
                                                  HorizontalAlignment="Center"
                                                  Margin="5,5,5,3"/>
                                        
                                        <Border Grid.Row="2"
                                               Background="{DynamicResource PrimaryCyanBrush}"
                                               Padding="8,4"
                                               Margin="5,0,5,5">
                                            <TextBlock Text="4800 BE"
                                                      FontSize="{StaticResource FontSizeSmall}"
                                                      FontWeight="{StaticResource FontWeightBold}"
                                                      Foreground="{DynamicResource BackgroundDarkBrush}"
                                                      HorizontalAlignment="Center"/>
                                        </Border>
                                    </Grid>
                                </Border>
                                
                                <!-- 商品卡片 3 -->
                                <Border Background="{DynamicResource BackgroundLightBrush}"
                                       BorderBrush="{DynamicResource BorderDarkBrush}"
                                       BorderThickness="1"
                                       Width="140" Height="180"
                                       Margin="5"
                                       Cursor="Hand">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        
                                        <Border Grid.Row="0"
                                               Background="{DynamicResource PrimaryGoldBrush}"
                                               Margin="5,5,5,0">
                                            <TextBlock Text="阿卡丽"
                                                      FontSize="{StaticResource FontSizeSmall}"
                                                      FontWeight="{StaticResource FontWeightBold}"
                                                      Foreground="{DynamicResource BackgroundDarkBrush}"
                                                      HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"/>
                                        </Border>
                                        
                                        <TextBlock Grid.Row="1"
                                                  Text="离群之刺"
                                                  FontSize="{StaticResource FontSizeSmall}"
                                                  Foreground="{DynamicResource TextPrimaryBrush}"
                                                  HorizontalAlignment="Center"
                                                  Margin="5,5,5,3"/>
                                        
                                        <Border Grid.Row="2"
                                               Background="{DynamicResource PrimaryCyanBrush}"
                                               Padding="8,4"
                                               Margin="5,0,5,5">
                                            <TextBlock Text="3150 BE"
                                                      FontSize="{StaticResource FontSizeSmall}"
                                                      FontWeight="{StaticResource FontWeightBold}"
                                                      Foreground="{DynamicResource BackgroundDarkBrush}"
                                                      HorizontalAlignment="Center"/>
                                        </Border>
                                    </Grid>
                                </Border>
                                
                                <!-- 商品卡片 4 -->
                                <Border Background="{DynamicResource BackgroundLightBrush}"
                                       BorderBrush="{DynamicResource BorderDarkBrush}"
                                       BorderThickness="1"
                                       Width="140" Height="180"
                                       Margin="5"
                                       Cursor="Hand">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        
                                        <Border Grid.Row="0"
                                               Background="{DynamicResource PrimaryCyanBrush}"
                                               Margin="5,5,5,0">
                                            <TextBlock Text="卡特"
                                                      FontSize="{StaticResource FontSizeMedium}"
                                                      FontWeight="{StaticResource FontWeightBold}"
                                                      Foreground="{DynamicResource BackgroundDarkBrush}"
                                                      HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"/>
                                        </Border>
                                        
                                        <TextBlock Grid.Row="1"
                                                  Text="不祥之刃"
                                                  FontSize="{StaticResource FontSizeSmall}"
                                                  Foreground="{DynamicResource TextPrimaryBrush}"
                                                  HorizontalAlignment="Center"
                                                  Margin="5,5,5,3"/>
                                        
                                        <Border Grid.Row="2"
                                               Background="{DynamicResource PrimaryCyanBrush}"
                                               Padding="8,4"
                                               Margin="5,0,5,5">
                                            <TextBlock Text="3150 BE"
                                                      FontSize="{StaticResource FontSizeSmall}"
                                                      FontWeight="{StaticResource FontWeightBold}"
                                                      Foreground="{DynamicResource BackgroundDarkBrush}"
                                                      HorizontalAlignment="Center"/>
                                        </Border>
                                    </Grid>
                                </Border>
                                
                                <!-- 商品卡片 5 -->
                                <Border Background="{DynamicResource BackgroundLightBrush}"
                                       BorderBrush="{DynamicResource BorderDarkBrush}"
                                       BorderThickness="1"
                                       Width="140" Height="180"
                                       Margin="5"
                                       Cursor="Hand">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        
                                        <Border Grid.Row="0"
                                               Background="{DynamicResource PrimaryGoldBrush}"
                                               Margin="5,5,5,0">
                                            <TextBlock Text="辛德拉"
                                                      FontSize="{StaticResource FontSizeSmall}"
                                                      FontWeight="{StaticResource FontWeightBold}"
                                                      Foreground="{DynamicResource BackgroundDarkBrush}"
                                                      HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"/>
                                        </Border>
                                        
                                        <TextBlock Grid.Row="1"
                                                  Text="暗黑元首"
                                                  FontSize="{StaticResource FontSizeSmall}"
                                                  Foreground="{DynamicResource TextPrimaryBrush}"
                                                  HorizontalAlignment="Center"
                                                  Margin="5,5,5,3"/>
                                        
                                        <Border Grid.Row="2"
                                               Background="{DynamicResource PrimaryCyanBrush}"
                                               Padding="8,4"
                                               Margin="5,0,5,5">
                                            <TextBlock Text="4800 BE"
                                                      FontSize="{StaticResource FontSizeSmall}"
                                                      FontWeight="{StaticResource FontWeightBold}"
                                                      Foreground="{DynamicResource BackgroundDarkBrush}"
                                                      HorizontalAlignment="Center"/>
                                        </Border>
                                    </Grid>
                                </Border>
                                
                                <!-- 商品卡片 6 -->
                                <Border Background="{DynamicResource BackgroundLightBrush}"
                                       BorderBrush="{DynamicResource BorderDarkBrush}"
                                       BorderThickness="1"
                                       Width="140" Height="180"
                                       Margin="5"
                                       Cursor="Hand">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        
                                        <Border Grid.Row="0"
                                               Background="{DynamicResource PrimaryCyanBrush}"
                                               Margin="5,5,5,0">
                                            <TextBlock Text="妖姬"
                                                      FontSize="{StaticResource FontSizeMedium}"
                                                      FontWeight="{StaticResource FontWeightBold}"
                                                      Foreground="{DynamicResource BackgroundDarkBrush}"
                                                      HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"/>
                                        </Border>
                                        
                                        <TextBlock Grid.Row="1"
                                                  Text="诡术妖姬"
                                                  FontSize="{StaticResource FontSizeSmall}"
                                                  Foreground="{DynamicResource TextPrimaryBrush}"
                                                  HorizontalAlignment="Center"
                                                  Margin="5,5,5,3"/>
                                        
                                        <Border Grid.Row="2"
                                               Background="{DynamicResource PrimaryCyanBrush}"
                                               Padding="8,4"
                                               Margin="5,0,5,5">
                                            <TextBlock Text="3150 BE"
                                                      FontSize="{StaticResource FontSizeSmall}"
                                                      FontWeight="{StaticResource FontWeightBold}"
                                                      Foreground="{DynamicResource BackgroundDarkBrush}"
                                                      HorizontalAlignment="Center"/>
                                        </Border>
                                    </Grid>
                                </Border>
                                
                                <!-- 商品卡片 7 -->
                                <Border Background="{DynamicResource BackgroundLightBrush}"
                                       BorderBrush="{DynamicResource BorderDarkBrush}"
                                       BorderThickness="1"
                                       Width="140" Height="180"
                                       Margin="5"
                                       Cursor="Hand">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        
                                        <Border Grid.Row="0"
                                               Background="{DynamicResource PrimaryGoldBrush}"
                                               Margin="5,5,5,0">
                                            <TextBlock Text="发条"
                                                      FontSize="{StaticResource FontSizeMedium}"
                                                      FontWeight="{StaticResource FontWeightBold}"
                                                      Foreground="{DynamicResource BackgroundDarkBrush}"
                                                      HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"/>
                                        </Border>
                                        
                                        <TextBlock Grid.Row="1"
                                                  Text="发条魔灵"
                                                  FontSize="{StaticResource FontSizeSmall}"
                                                  Foreground="{DynamicResource TextPrimaryBrush}"
                                                  HorizontalAlignment="Center"
                                                  Margin="5,5,5,3"/>
                                        
                                        <Border Grid.Row="2"
                                               Background="{DynamicResource PrimaryCyanBrush}"
                                               Padding="8,4"
                                               Margin="5,0,5,5">
                                            <TextBlock Text="4800 BE"
                                                      FontSize="{StaticResource FontSizeSmall}"
                                                      FontWeight="{StaticResource FontWeightBold}"
                                                      Foreground="{DynamicResource BackgroundDarkBrush}"
                                                      HorizontalAlignment="Center"/>
                                        </Border>
                                    </Grid>
                                </Border>
                                
                                <!-- 商品卡片 8 -->
                                <Border Background="{DynamicResource BackgroundLightBrush}"
                                       BorderBrush="{DynamicResource BorderDarkBrush}"
                                       BorderThickness="1"
                                       Width="140" Height="180"
                                       Margin="5"
                                       Cursor="Hand">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        
                                        <Border Grid.Row="0"
                                               Background="{DynamicResource PrimaryCyanBrush}"
                                               Margin="5,5,5,0">
                                            <TextBlock Text="瑞兹"
                                                      FontSize="{StaticResource FontSizeMedium}"
                                                      FontWeight="{StaticResource FontWeightBold}"
                                                      Foreground="{DynamicResource BackgroundDarkBrush}"
                                                      HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"/>
                                        </Border>
                                        
                                        <TextBlock Grid.Row="1"
                                                  Text="流浪法师"
                                                  FontSize="{StaticResource FontSizeSmall}"
                                                  Foreground="{DynamicResource TextPrimaryBrush}"
                                                  HorizontalAlignment="Center"
                                                  Margin="5,5,5,3"/>
                                        
                                        <Border Grid.Row="2"
                                               Background="{DynamicResource PrimaryCyanBrush}"
                                               Padding="8,4"
                                               Margin="5,0,5,5">
                                            <TextBlock Text="450 BE"
                                                      FontSize="{StaticResource FontSizeSmall}"
                                                      FontWeight="{StaticResource FontWeightBold}"
                                                      Foreground="{DynamicResource BackgroundDarkBrush}"
                                                      HorizontalAlignment="Center"/>
                                        </Border>
                                    </Grid>
                                </Border>
                            </WrapPanel>
                        </ScrollViewer>
                    </Grid>
                </Border>
                
                <!-- 右侧详情面板 -->
                <Border Grid.Column="2"
                       Background="{DynamicResource BackgroundMediumBrush}"
                       BorderBrush="{DynamicResource BorderGoldBrush}"
                       BorderThickness="2"
                       Padding="20">
                    <StackPanel>
                        <TextBlock Text="特色推荐"
                                  FontSize="{StaticResource FontSizeMedium}"
                                  FontWeight="{StaticResource FontWeightBold}"
                                  Foreground="{DynamicResource PrimaryGoldBrush}"
                                  Margin="0,0,0,15"/>
                        
                        <!-- 推荐商品 -->
                        <Border Background="{DynamicResource BackgroundLightBrush}"
                               BorderBrush="{DynamicResource PrimaryGoldBrush}"
                               BorderThickness="2"
                               Padding="15"
                               Margin="0,0,0,15">
                            <StackPanel>
                                <Border Background="{DynamicResource PrimaryGoldBrush}"
                                       Height="150"
                                       Margin="0,0,0,10">
                                    <TextBlock Text="限时优惠"
                                              FontSize="{StaticResource FontSizeLarge}"
                                              FontWeight="{StaticResource FontWeightBold}"
                                              Foreground="{DynamicResource BackgroundDarkBrush}"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                                </Border>
                                
                                <TextBlock Text="源计划：亚索"
                                          FontSize="{StaticResource FontSizeMedium}"
                                          FontWeight="{StaticResource FontWeightBold}"
                                          Foreground="{DynamicResource TextPrimaryBrush}"
                                          HorizontalAlignment="Center"
                                          Margin="0,0,0,5"/>
                                
                                <TextBlock Text="史诗级皮肤"
                                          FontSize="{StaticResource FontSizeSmall}"
                                          Foreground="{DynamicResource TextSecondaryBrush}"
                                          HorizontalAlignment="Center"
                                          Margin="0,0,0,10"/>
                                
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                                    <TextBlock Text="1350"
                                              FontSize="{StaticResource FontSizeMedium}"
                                              FontWeight="{StaticResource FontWeightBold}"
                                              Foreground="{DynamicResource TextDisabledBrush}"
                                              TextDecorations="Strikethrough"
                                              Margin="0,0,10,0"/>
                                    <TextBlock Text="975 RP"
                                              FontSize="{StaticResource FontSizeLarge}"
                                              FontWeight="{StaticResource FontWeightBold}"
                                              Foreground="{DynamicResource PrimaryGoldBrush}"/>
                                </StackPanel>
                                
                                <Border Background="{DynamicResource ErrorRedBrush}"
                                       Padding="8,4"
                                       CornerRadius="3"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,10">
                                    <TextBlock Text="限时 28% 折扣"
                                              FontSize="{StaticResource FontSizeSmall}"
                                              FontWeight="{StaticResource FontWeightBold}"
                                              Foreground="{DynamicResource TextPrimaryBrush}"/>
                                </Border>
                                
                                <controls:GlowButton Content="立即购买"
                                                   GlowColor="{DynamicResource PrimaryGold}"
                                                   Height="40"
                                                   FontSize="{StaticResource FontSizeNormal}"
                                                   FontWeight="{StaticResource FontWeightBold}"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- 购物车 -->
                        <Separator
                                  Margin="0,10,0,15"/>
                        
                        <TextBlock Text="购物车"
                                  FontSize="{StaticResource FontSizeMedium}"
                                  FontWeight="{StaticResource FontWeightBold}"
                                  Foreground="{DynamicResource PrimaryGoldBrush}"
                                  Margin="0,0,0,15"/>
                        
                        <Border Background="{DynamicResource BackgroundLightBrush}"
                               BorderBrush="{DynamicResource BorderDarkBrush}"
                               BorderThickness="1"
                               Padding="15"
                               Margin="0,0,0,10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="50"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <Border Grid.Column="0"
                                       Background="{DynamicResource PrimaryGoldBrush}"
                                       Width="40" Height="40">
                                    <TextBlock Text="亚索"
                                              FontSize="10"
                                              FontWeight="{StaticResource FontWeightBold}"
                                              Foreground="{DynamicResource BackgroundDarkBrush}"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                                </Border>
                                
                                <StackPanel Grid.Column="1" Margin="10,0,0,0" VerticalAlignment="Center">
                                    <TextBlock Text="疾风剑豪"
                                              FontSize="{StaticResource FontSizeSmall}"
                                              Foreground="{DynamicResource TextPrimaryBrush}"
                                              Margin="0,0,0,3"/>
                                    <TextBlock Text="4800 BE"
                                              FontSize="{StaticResource FontSizeSmall}"
                                              Foreground="{DynamicResource PrimaryCyanBrush}"/>
                                </StackPanel>
                                
                                <Button Grid.Column="2"
                                       Content="✕"
