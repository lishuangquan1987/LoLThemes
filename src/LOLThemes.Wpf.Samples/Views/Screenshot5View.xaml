<UserControl x:Class="LOLThemes.Wpf.Samples.Views.Screenshot5View"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:LOLThemes.Wpf.Controls;assembly=LOLThemes.Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1150"
             Background="{DynamicResource BackgroundDarkBrush}">
    
    <Grid>
        <!-- 主容器 -->
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- 顶部标题栏 -->
            <Border Grid.Row="0" 
                   Background="{DynamicResource BackgroundMediumBrush}"
                   BorderBrush="{DynamicResource BorderGoldBrush}"
                   BorderThickness="0,0,0,2"
                   Padding="20,15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- 左侧标题 -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <TextBlock Text="📊" 
                                  FontSize="{StaticResource FontSizeXLarge}"
                                  Foreground="{DynamicResource PrimaryGoldBrush}"
                                  VerticalAlignment="Center"
                                  Margin="0,0,15,0"/>
                        <TextBlock Text="战绩统计" 
                                  FontSize="{StaticResource FontSizeLarge}"
                                  FontWeight="{StaticResource FontWeightBold}"
                                  Foreground="{DynamicResource TextPrimaryBrush}"
                                  VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <!-- 中间选项卡 -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Content="概览"
                               Style="{StaticResource LOLPrimaryButtonStyle}"
                               Width="120" Height="35"
                               Margin="5,0"/>
                        <Button Content="排位赛"
                               Style="{StaticResource LOLSecondaryButtonStyle}"
                               Width="120" Height="35"
                               Margin="5,0"/>
                        <Button Content="英雄"
                               Style="{StaticResource LOLSecondaryButtonStyle}"
                               Width="120" Height="35"
                               Margin="5,0"/>
                        <Button Content="历史记录"
                               Style="{StaticResource LOLSecondaryButtonStyle}"
                               Width="120" Height="35"
                               Margin="5,0"/>
                    </StackPanel>
                    
                    <!-- 右侧赛季选择 -->
                    <ComboBox Grid.Column="2"
                            
                             Width="150"
                             Height="35">
                        <ComboBoxItem Content="2024 赛季" IsSelected="True"/>
                        <ComboBoxItem Content="2023 赛季"/>
                        <ComboBoxItem Content="2022 赛季"/>
                    </ComboBox>
                </Grid>
            </Border>
            
            <!-- 主内容区域 -->
            <Grid Grid.Row="1" Margin="0,20,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="350"/>
                </Grid.ColumnDefinitions>
                
                <!-- 左侧统计面板 -->
                <Grid Grid.Column="0" Margin="0,0,10,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- 总览卡片 -->
                    <Border Grid.Row="0"
                           Background="{DynamicResource BackgroundMediumBrush}"
                           BorderBrush="{DynamicResource BorderGoldBrush}"
                           BorderThickness="2"
                           Padding="25"
                           Margin="0,0,0,15">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- 总场次 -->
                            <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                                <TextBlock Text="总场次"
                                          FontSize="{StaticResource FontSizeNormal}"
                                          Foreground="{DynamicResource TextSecondaryBrush}"
                                          HorizontalAlignment="Center"
                                          Margin="0,0,0,8"/>
                                <TextBlock Text="487"
                                          FontSize="{StaticResource FontSizeXXLarge}"
                                          FontWeight="{StaticResource FontWeightBold}"
                                          Foreground="{DynamicResource PrimaryGoldBrush}"
                                          HorizontalAlignment="Center"/>
                            </StackPanel>
                            
                            <!-- 胜场 -->
                            <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                                <TextBlock Text="胜场"
                                          FontSize="{StaticResource FontSizeNormal}"
                                          Foreground="{DynamicResource TextSecondaryBrush}"
                                          HorizontalAlignment="Center"
                                          Margin="0,0,0,8"/>
                                <TextBlock Text="268"
                                          FontSize="{StaticResource FontSizeXXLarge}"
                                          FontWeight="{StaticResource FontWeightBold}"
                                          Foreground="{DynamicResource SuccessGreenBrush}"
                                          HorizontalAlignment="Center"/>
                            </StackPanel>
                            
                            <!-- 负场 -->
                            <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                                <TextBlock Text="负场"
                                          FontSize="{StaticResource FontSizeNormal}"
                                          Foreground="{DynamicResource TextSecondaryBrush}"
                                          HorizontalAlignment="Center"
                                          Margin="0,0,0,8"/>
                                <TextBlock Text="219"
                                          FontSize="{StaticResource FontSizeXXLarge}"
                                          FontWeight="{StaticResource FontWeightBold}"
                                          Foreground="{DynamicResource ErrorRedBrush}"
                                          HorizontalAlignment="Center"/>
                            </StackPanel>
                            
                            <!-- 胜率 -->
                            <StackPanel Grid.Column="3" HorizontalAlignment="Center">
                                <TextBlock Text="胜率"
                                          FontSize="{StaticResource FontSizeNormal}"
                                          Foreground="{DynamicResource TextSecondaryBrush}"
                                          HorizontalAlignment="Center"
                                          Margin="0,0,0,8"/>
                                <TextBlock Text="55%"
                                          FontSize="{StaticResource FontSizeXXLarge}"
                                          FontWeight="{StaticResource FontWeightBold}"
                                          Foreground="{DynamicResource PrimaryGoldBrush}"
                                          HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                    
                    <!-- 段位信息 -->
                    <Border Grid.Row="1"
                           Background="{DynamicResource BackgroundMediumBrush}"
                           BorderBrush="{DynamicResource BorderDarkBrush}"
                           BorderThickness="1"
                           Padding="25"
                           Margin="0,0,0,15">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- 段位图标 -->
                            <Border Grid.Column="0"
                                   Background="{DynamicResource PrimaryGoldBrush}"
                                   Width="100" Height="100"
                                   Margin="0,0,20,0">
                                <TextBlock Text="💎"
                                          FontSize="48"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                            </Border>
                            
                            <!-- 段位详情 -->
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="钻石 II"
                                          FontSize="{StaticResource FontSizeXLarge}"
                                          FontWeight="{StaticResource FontWeightBold}"
                                          Foreground="{DynamicResource PrimaryCyanBrush}"
                                          Margin="0,0,0,8"/>
                                <TextBlock Text="75 LP"
                                          FontSize="{StaticResource FontSizeLarge}"
                                          Foreground="{DynamicResource TextPrimaryBrush}"
                                          Margin="0,0,0,10"/>
                                <ProgressBar
                                            Value="75"
                                            Height="10"
                                            Margin="0,0,0,5"/>
                                <TextBlock Text="距离晋级还需 25 LP"
                                          FontSize="{StaticResource FontSizeSmall}"
                                          Foreground="{DynamicResource TextSecondaryBrush}"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                    
                    <!-- 最近比赛记录 -->
                    <Border Grid.Row="2"
                           Background="{DynamicResource BackgroundMediumBrush}"
                           BorderBrush="{DynamicResource BorderDarkBrush}"
                           BorderThickness="1"
                           Padding="20">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Grid.Row="0"
                                      Text="最近比赛"
                                      FontSize="{StaticResource FontSizeMedium}"
                                      FontWeight="{StaticResource FontWeightBold}"
                                      Foreground="{DynamicResource PrimaryGoldBrush}"
                                      Margin="0,0,0,15"/>
                            
                            <ScrollViewer Grid.Row="1"
                                         VerticalScrollBarVisibility="Auto">
                                <StackPanel>
                                    <!-- 比赛记录 1 - 胜利 -->
                                    <Border Background="{DynamicResource BackgroundLightBrush}"
                                           BorderBrush="{DynamicResource SuccessGreenBrush}"
                                           BorderThickness="2,0,0,0"
                                           Padding="15"
                                           Margin="0,0,0,10">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <StackPanel Grid.Column="0" Orientation="Horizontal">
                                                <Border Background="{DynamicResource SuccessGreenBrush}"
                                                       Width="60" Height="60"
                                                       Margin="0,0,15,0">
                                                    <TextBlock Text="胜利"
                                                              FontSize="{StaticResource FontSizeSmall}"
                                                              FontWeight="{StaticResource FontWeightBold}"
                                                              Foreground="{DynamicResource BackgroundDarkBrush}"
                                                              HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"/>
                                                </Border>
                                                
                                                <StackPanel VerticalAlignment="Center">
                                                    <TextBlock Text="亚索"
                                                              FontSize="{StaticResource FontSizeMedium}"
                                                              FontWeight="{StaticResource FontWeightBold}"
                                                              Foreground="{DynamicResource TextPrimaryBrush}"
                                                              Margin="0,0,0,3"/>
                                                    <TextBlock Text="中单"
                                                              FontSize="{StaticResource FontSizeSmall}"
                                                              Foreground="{DynamicResource TextSecondaryBrush}"/>
                                                </StackPanel>
                                            </StackPanel>
                                            
                                            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                                <TextBlock Text="12 / 3 / 8"
                                                          FontSize="{StaticResource FontSizeMedium}"
                                                          FontWeight="{StaticResource FontWeightBold}"
                                                          Foreground="{DynamicResource PrimaryGoldBrush}"
                                                          Margin="0,0,20,0"/>
                                                <TextBlock Text="KDA: 6.67"
                                                          FontSize="{StaticResource FontSizeNormal}"
                                                          Foreground="{DynamicResource TextPrimaryBrush}"/>
                                            </StackPanel>
                                            
                                            <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                                <TextBlock Text="28:45"
                                                          FontSize="{StaticResource FontSizeNormal}"
                                                          Foreground="{DynamicResource TextSecondaryBrush}"
                                                          HorizontalAlignment="Right"
                                                          Margin="0,0,0,3"/>
                                                <TextBlock Text="2 小时前"
                                                          FontSize="{StaticResource FontSizeSmall}"
                                                          Foreground="{DynamicResource TextSecondaryBrush}"
                                                          HorizontalAlignment="Right"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                    
                                    <!-- 比赛记录 2 - 失败 -->
                                    <Border Background="{DynamicResource BackgroundLightBrush}"
                                           BorderBrush="{DynamicResource ErrorRedBrush}"
                                           BorderThickness="2,0,0,0"
                                           Padding="15"
                                           Margin="0,0,0,10">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <StackPanel Grid.Column="0" Orientation="Horizontal">
                                                <Border Background="{DynamicResource ErrorRedBrush}"
                                                       Width="60" Height="60"
                                                       Margin="0,0,15,0">
                                                    <TextBlock Text="失败"
                                                              FontSize="{StaticResource FontSizeSmall}"
                                                              FontWeight="{StaticResource FontWeightBold}"
                                                              Foreground="{DynamicResource TextPrimaryBrush}"
                                                              HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"/>
                                                </Border>
                                                
                                                <StackPanel VerticalAlignment="Center">
                                                    <TextBlock Text="劫"
                                                              FontSize="{StaticResource FontSizeMedium}"
                                                              FontWeight="{StaticResource FontWeightBold}"
                                                              Foreground="{DynamicResource TextPrimaryBrush}"
                                                              Margin="0,0,0,3"/>
                                                    <TextBlock Text="中单"
                                                              FontSize="{StaticResource FontSizeSmall}"
                                                              Foreground="{DynamicResource TextSecondaryBrush}"/>
                                                </StackPanel>
                                            </StackPanel>
                                            
                                            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                                <TextBlock Text="8 / 7 / 5"
                                                          FontSize="{StaticResource FontSizeMedium}"
                                                          FontWeight="{StaticResource FontWeightBold}"
                                                          Foreground="{DynamicResource TextSecondaryBrush}"
                                                          Margin="0,0,20,0"/>
                                                <TextBlock Text="KDA: 1.86"
                                                          FontSize="{StaticResource FontSizeNormal}"
                                                          Foreground="{DynamicResource TextPrimaryBrush}"/>
                                            </StackPanel>
                                            
                                            <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                                <TextBlock Text="35:12"
                                                          FontSize="{StaticResource FontSizeNormal}"
                                                          Foreground="{DynamicResource TextSecondaryBrush}"
                                                          HorizontalAlignment="Right"
                                                          Margin="0,0,0,3"/>
                                                <TextBlock Text="5 小时前"
                                                          FontSize="{StaticResource FontSizeSmall}"
                                                          Foreground="{DynamicResource TextSecondaryBrush}"
                                                          HorizontalAlignment="Right"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                    
                                    <!-- 比赛记录 3 - 胜利 -->
                                    <Border Background="{DynamicResource BackgroundLightBrush}"
                                           BorderBrush="{DynamicResource SuccessGreenBrush}"
                                           BorderThickness="2,0,0,0"
                                           Padding="15"
                                           Margin="0,0,0,10">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <StackPanel Grid.Column="0" Orientation="Horizontal">
                                                <Border Background="{DynamicResource SuccessGreenBrush}"
                                                       Width="60" Height="60"
                                                       Margin="0,0,15,0">
                                                    <TextBlock Text="胜利"
                                                              FontSize="{StaticResource FontSizeSmall}"
                                                              FontWeight="{StaticResource FontWeightBold}"
                                                              Foreground="{DynamicResource BackgroundDarkBrush}"
                                                              HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"/>
                                                </Border>
                                                
                                                <StackPanel VerticalAlignment="Center">
                                                    <TextBlock Text="阿卡丽"
                                                              FontSize="{StaticResource FontSizeMedium}"
                                                              FontWeight="{StaticResource FontWeightBold}"
                                                              Foreground="{DynamicResource TextPrimaryBrush}"
                                                              Margin="0,0,0,3"/>
                                                    <TextBlock Text="中单"
                                                              FontSize="{StaticResource FontSizeSmall}"
                                                              Foreground="{DynamicResource TextSecondaryBrush}"/>
                                                </StackPanel>
                                            </StackPanel>
                                            
                                            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                                <TextBlock Text="15 / 2 / 10"
                                                          FontSize="{StaticResource FontSizeMedium}"
                                                          FontWeight="{StaticResource FontWeightBold}"
                                                          Foreground="{DynamicResource PrimaryGoldBrush}"
                                                          Margin="0,0,20,0"/>
                                                <TextBlock Text="KDA: 12.5"
                                                          FontSize="{StaticResource FontSizeNormal}"
                                                          Foreground="{DynamicResource TextPrimaryBrush}"/>
                                            </StackPanel>
                                            
                                            <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                                <TextBlock Text="32:08"
                                                          FontSize="{StaticResource FontSizeNormal}"
                                                          Foreground="{DynamicResource TextSecondaryBrush}"
                                                          HorizontalAlignment="Right"
                                                          Margin="0,0,0,3"/>
                                                <TextBlock Text="昨天"
                                                          FontSize="{StaticResource FontSizeSmall}"
                                                          Foreground="{DynamicResource TextSecondaryBrush}"
                                                          HorizontalAlignment="Right"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                    
                                    <!-- 比赛记录 4 - 胜利 -->
                                    <Border Background="{DynamicResource BackgroundLightBrush}"
                                           BorderBrush="{DynamicResource SuccessGreenBrush}"
                                           BorderThickness="2,0,0,0"
                                           Padding="15"
                                           Margin="0,0,0,10">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <StackPanel Grid.Column="0" Orientation="Horizontal">
                                                <Border Background="{DynamicResource SuccessGreenBrush}"
                                                       Width="60" Height="60"
                                                       Margin="0,0,15,0">
                                                    <TextBlock Text="胜利"
                                                              FontSize="{StaticResource FontSizeSmall}"
                                                              FontWeight="{StaticResource FontWeightBold}"
                                                              Foreground="{DynamicResource BackgroundDarkBrush}"
                                                              HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"/>
                                                </Border>
                                                
                                                <StackPanel VerticalAlignment="Center">
                                                    <TextBlock Text="辛德拉"
                                                              FontSize="{StaticResource FontSizeMedium}"
                                                              FontWeight="{StaticResource FontWeightBold}"
                                                              Foreground="{DynamicResource TextPrimaryBrush}"
                                                              Margin="0,0,0,3"/>
                                                    <TextBlock Text="中单"
                                                              FontSize="{StaticResource FontSizeSmall}"
                                                              Foreground="{DynamicResource TextSecondaryBrush}"/>
                                                </StackPanel>
                                            </StackPanel>
                                            
                                            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                                <TextBlock Text="10 / 4 / 12"
                                                          FontSize="{StaticResource FontSizeMedium}"
                                                          FontWeight="{StaticResource FontWeightBold}"
                                                          Foreground="{DynamicResource PrimaryGoldBrush}"
                                                          Margin="0,0,20,0"/>
                                                <TextBlock Text="KDA: 5.5"
                                                          FontSize="{StaticResource FontSizeNormal}"
                                                          Foreground="{DynamicResource TextPrimaryBrush}"/>
                                            </StackPanel>
                                            
                                            <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                                <TextBlock Text="26:33"
                                                          FontSize="{StaticResource FontSizeNormal}"
                                                          Foreground="{DynamicResource TextSecondaryBrush}"
                                                          HorizontalAlignment="Right"
                                                          Margin="0,0,0,3"/>
                                                <TextBlock Text="昨天"
                                                          FontSize="{StaticResource FontSizeSmall}"
                                                          Foreground="{DynamicResource TextSecondaryBrush}"
                                                          HorizontalAlignment="Right"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </StackPanel>
                            </ScrollViewer>
                        </Grid>
                    </Border>
                </Grid>
                
                <!-- 右侧英雄统计面板 -->
                <Border Grid.Column="1"
                       Background="{DynamicResource BackgroundMediumBrush}"
                       BorderBrush="{DynamicResource BorderDarkBrush}"
                       BorderThickness="1"
                       Padding="20">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0"
                                  Text="常用英雄"
                                  FontSize="{StaticResource FontSizeMedium}"
                                  FontWeight="{StaticResource FontWeightBold}"
                                  Foreground="{DynamicResource PrimaryGoldBrush}"
                                  Margin="0,0,0,15"/>
                        
                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                            <StackPanel>
                                <!-- 英雄统计 1 -->
                                <Border Background="{DynamicResource BackgroundLightBrush}"
                                       BorderBrush="{DynamicResource PrimaryGoldBrush}"
                                       BorderThickness="2"
                                       Padding="15"
                                       Margin="0,0,0,12">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        
                                        <Grid Grid.Row="0" Margin="0,0,0,10">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <Border Grid.Column="0"
                                                   Background="{DynamicResource PrimaryGoldBrush}"
                                                   Width="50" Height="50"
                                                   Margin="0,0,12,0">
                                                <TextBlock Text="亚索"
                                                          FontSize="{StaticResource FontSizeSmall}"
                                                          FontWeight="{StaticResource FontWeightBold}"
                                                          Foreground="{DynamicResource BackgroundDarkBrush}"
                                                          HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"
                                                          TextWrapping="Wrap"
                                                          TextAlignment="Center"/>
                                            </Border>
                                            
                                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                <TextBlock Text="疾风剑豪"
                                                          FontSize="{StaticResource FontSizeMedium}"
                                                          FontWeight="{StaticResource FontWeightBold}"
                                                          Foreground="{DynamicResource TextPrimaryBrush}"
                                                          Margin="0,0,0,3"/>
                                                <TextBlock Text="87 场比赛"
                                                          FontSize="{StaticResource FontSizeSmall}"
                                                          Foreground="{DynamicResource TextSecondaryBrush}"/>
                                            </StackPanel>
                                        </Grid>
                                        
                                        <Grid Grid.Row="1" Margin="0,0,0,8">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="52W"
                                                          FontSize="{StaticResource FontSizeNormal}"
                                                          FontWeight="{StaticResource FontWeightBold}"
                                                          Foreground="{DynamicResource SuccessGreenBrush}"
                                                          HorizontalAlignment="Center"/>
                                                <TextBlock Text="35L"
                                                          FontSize="{StaticResource FontSizeSmall}"
                                                          Foreground="{DynamicResource ErrorRedBrush}"
                                                          HorizontalAlignment="Center"/>
                                            </StackPanel>
                                            
                                            <TextBlock Grid.Column="1"
                                                      Text="60%"
                                                      FontSize="{StaticResource FontSizeLarge}"
                                                      FontWeight="{StaticResource FontWeightBold}"
                                                      Foreground="{DynamicResource PrimaryGoldBrush}"
                                                      HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"/>
                                            
                                            <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                                <TextBlock Text="KDA"
                                                          FontSize="{StaticResource FontSizeSmall}"
                                                          Foreground="{DynamicResource TextSecondaryBrush}"
                                                          HorizontalAlignment="Center"
                                                          Margin="0,0,0,2"/>
                                                <TextBlock Text="4.8"
                                                          FontSize="{StaticResource FontSizeNormal}"
                                                          FontWeight="{StaticResource FontWeightBold}"
                                                          Foreground="{DynamicResource TextPrimaryBrush}"
                                                          HorizontalAlignment="Center"/>
                                            </StackPanel>
                                        </Grid>
                                        
                                        <ProgressBar Grid.Row="2"
                                                   
                                                    Value="60"
                                                    Height="6"/>
                                    </Grid>
                                </Border>
                                
                                <!-- 英雄统计 2 -->
                                <Border Background="{DynamicResource BackgroundLightBrush}"
                                       BorderBrush="{DynamicResource BorderDarkBrush}"
                                       BorderThickness="1"
                                       Padding="15"
                                       Margin="0,0,0,12">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        
                                        <Grid Grid.Row="0" Margin="0,0,0,10">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <Border Grid.Column="0"
                                                   Background="{DynamicResource PrimaryCyanBrush}"
                                                   Width="50" Height="50"
                                                   Margin="0,0,12,0">
                                                <TextBlock Text="劫"
                                                          FontSize="{StaticResource FontSizeSmall}"
                                                          FontWeight="{StaticResource FontWeightBold}"
                                                          Foreground="{DynamicResource BackgroundDarkBrush}"
                                                          HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"/>
                                            </Border>
                                            
                                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                <TextBlock Text="影流之主"
                                                          FontSize="{StaticResource FontSizeMedium}"
                                                          FontWeight="{StaticResource FontWeightBold}"
                                                          Foreground="{DynamicResource TextPrimaryBrush}"
                                                          Margin="0,0,0,3"/>
                                                <TextBlock Text="65 场比赛"
                                                          FontSize="{StaticResource FontSizeSmall}"
                                                          Foreground="{DynamicResource TextSecondaryBrush}"/>
                                            </StackPanel>
                                        </Grid>
                                        
                                        <Grid Grid.Row="1" Margin="0,0,0,8">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="38W"
                                                          FontSize="{StaticResource FontSizeNormal}"
                                                          FontWeight="{StaticResource FontWeightBold}"
                                                          Foreground="{DynamicResource SuccessGreenBrush}"
                                                          HorizontalAlignment="Center"/>
                                                <TextBlock Text="27L"
                                                          FontSize="{StaticResource FontSizeSmall}"
                                                          Foreground="{DynamicResource ErrorRedBrush}"
                                                          HorizontalAlignment="Center"/>
                                            </StackPanel>
                                            
                                            <TextBlock Grid.Column="1"
                                                      Text="58%"
                                                      FontSize="{StaticResource FontSizeLarge}"
                                                      FontWeight="{StaticResource FontWeightBold}"
                                                      Foreground="{DynamicResource PrimaryGoldBrush}"
                                                      HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"/>
                                            
                                            <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                                <TextBlock Text="KDA"
                                                          FontSize="{StaticResource FontSizeSmall}"
                                                          Foreground="{DynamicResource TextSecondaryBrush}"
                                                          HorizontalAlignment="Center"
                                                          Margin="0,0,0,2"/>
                                                <TextBlock Text="5.2"
                                                          FontSize="{StaticResource FontSizeNormal}"
                                                          FontWeight="{StaticResource FontWeightBold}"
                                                          Foreground="{DynamicResource TextPrimaryBrush}"
                                                          HorizontalAlignment="Center"/>
                                            </StackPanel>
                                        </Grid>
                                        
                                        <ProgressBar Grid.Row="2"
                                                   
                                                    Value="58"
                                                    Height="6"/>
                                    </Grid>
                                </Border>
                                
                                <!-- 英雄统计 3 -->
                                <Border Background="{DynamicResource BackgroundLightBrush}"
                                       BorderBrush="{DynamicResource BorderDarkBrush}"
                                       BorderThickness="1"
                                       Padding="15"
                                       Margin="0,0,0,12">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        
                                        <Grid Grid.Row="0" Margin="0,0,0,10">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
