<UserControl x:Class="LOLThemes.Wpf.Samples.Views.Screenshot6View"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:LOLThemes.Wpf.Controls;assembly=LOLThemes.Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1150"
             Background="{DynamicResource BackgroundDarkBrush}">
    
    <Grid>
        <!-- 主容器 -->
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- 顶部标题栏 -->
            <Border Grid.Row="0" 
                   Background="{DynamicResource BackgroundMediumBrush}"
                   BorderBrush="{DynamicResource BorderGoldBrush}"
                   BorderThickness="0,0,0,2"
                   Padding="20,15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- 左侧标题 -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <TextBlock Text="🛒" 
                                  FontSize="{DynamicResource FontSizeLarge}"
                                  Foreground="{DynamicResource PrimaryGoldBrush}"
                                  VerticalAlignment="Center"
                                  Margin="0,0,15,0"/>
                        <TextBlock Text="商店" 
                                  FontSize="{StaticResource FontSizeLarge}"
                                  FontWeight="{StaticResource FontWeightBold}"
                                  Foreground="{DynamicResource TextPrimaryBrush}"
                                  VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <!-- 中间搜索框 -->
                    <TextBox Grid.Column="1"
                           
                            Tag="搜索皮肤、英雄..."
                            Width="350"
                            Height="35"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"/>
                    
                    <!-- 右侧货币信息 -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                        <Border x:Name="CurrencyCyanBorder"
                               Background="{DynamicResource PrimaryCyanBrush}"
                               Padding="10,5"
                               Margin="0,0,10,0"
                               Cursor="Hand">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="💎 " 
                                          FontSize="{StaticResource FontSizeNormal}"
                                          VerticalAlignment="Center"/>
                                <TextBlock x:Name="CurrencyCyanText"
                                          Text="2,450"
                                          FontSize="{StaticResource FontSizeNormal}"
                                          FontWeight="{StaticResource FontWeightBold}"
                                          Foreground="{DynamicResource BackgroundDarkBrush}"
                                          VerticalAlignment="Center"/>
                            </StackPanel>
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="{DynamicResource PrimaryCyanBrush}"/>
                                            <Setter Property="Effect">
                                                <Setter.Value>
                                                    <DropShadowEffect Color="#0AC8B9" BlurRadius="10" ShadowDepth="0" Opacity="0.8"/>
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                        </Border>
                        <Border x:Name="CurrencyGoldBorder"
                               Background="{DynamicResource PrimaryGoldBrush}"
                               Padding="10,5"
                               Cursor="Hand">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🪙 " 
                                          FontSize="{StaticResource FontSizeNormal}"
                                          VerticalAlignment="Center"/>
                                <TextBlock x:Name="CurrencyGoldText"
                                          Text="45,680"
                                          FontSize="{StaticResource FontSizeNormal}"
                                          FontWeight="{StaticResource FontWeightBold}"
                                          Foreground="{DynamicResource BackgroundDarkBrush}"
                                          VerticalAlignment="Center"/>
                            </StackPanel>
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="{DynamicResource PrimaryGoldBrush}"/>
                                            <Setter Property="Effect">
                                                <Setter.Value>
                                                    <DropShadowEffect Color="{DynamicResource PrimaryGold}" BlurRadius="10" ShadowDepth="0" Opacity="0.8"/>
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                        </Border>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- 主内容区域 -->
            <Grid Grid.Row="1" Margin="0,20,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- 左侧分类菜单 -->
                <Border Grid.Column="0"
                       Background="{DynamicResource BackgroundMediumBrush}"
                       BorderBrush="{DynamicResource BorderDarkBrush}"
                       BorderThickness="1"
                       Padding="15"
                       Margin="0,0,10,0">
                    <StackPanel>
                        <TextBlock Text="分类" 
                                  FontSize="{StaticResource FontSizeMedium}"
                                  FontWeight="{StaticResource FontWeightBold}"
                                  Foreground="{DynamicResource PrimaryGoldBrush}"
                                  Margin="0,0,0,15"/>
                        
                        <Button Content="精选" 
                               Style="{StaticResource LOLPrimaryButtonStyle}"
                               Height="40"
                               Margin="0,0,0,8"/>
                        <Button Content="英雄" 
                               Style="{StaticResource LOLSecondaryButtonStyle}"
                               Height="40"
                               Margin="0,0,0,8"/>
                        <Button Content="皮肤" 
                               Style="{StaticResource LOLSecondaryButtonStyle}"
                               Height="40"
                               Margin="0,0,0,8"/>
                        <Button Content="表情" 
                               Style="{StaticResource LOLSecondaryButtonStyle}"
                               Height="40"
                               Margin="0,0,0,8"/>
                        <Button Content="守卫" 
                               Style="{StaticResource LOLSecondaryButtonStyle}"
                               Height="40"
                               Margin="0,0,0,8"/>
                        <Button Content="战利品" 
                               Style="{StaticResource LOLSecondaryButtonStyle}"
                               Height="40"
                               Margin="0,0,0,20"/>
                        
                        <Separator
                                  Margin="0,10,0,20"/>
                        
                        <TextBlock Text="筛选" 
                                  FontSize="{StaticResource FontSizeMedium}"
                                  FontWeight="{StaticResource FontWeightBold}"
                                  Foreground="{DynamicResource PrimaryGoldBrush}"
                                  Margin="0,0,0,15"/>
                        
                        <CheckBox Content="限时优惠" 
                                
                                 IsChecked="True"
                                 Margin="0,0,0,8"/>
                        <CheckBox Content="新品" 
                                
                                 Margin="0,0,0,8"/>
                        <CheckBox Content="已拥有" 
                                
                                 Margin="0,0,0,8"/>
                    </StackPanel>
                </Border>
                
                <!-- 右侧商品展示区域 -->
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- 精选横幅 -->
                    <Border Grid.Row="0"
                           Background="{DynamicResource BackgroundMediumBrush}"
                           BorderBrush="{DynamicResource BorderGoldBrush}"
                           BorderThickness="2"
                           Height="200"
                           Margin="0,0,0,15">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="300"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- 左侧：皮肤预览 -->
                            <Border Grid.Column="0"
                                   Background="{DynamicResource BackgroundLightBrush}"
                                   Margin="20">
                                <TextBlock Text="限定皮肤预览"
                                          FontSize="{DynamicResource FontSizeLarge}"
                                          FontWeight="{StaticResource FontWeightBold}"
                                          Foreground="{DynamicResource PrimaryGoldBrush}"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                            </Border>
                            
                            <!-- 右侧：皮肤信息 -->
                            <StackPanel Grid.Column="1" 
                                       VerticalAlignment="Center"
                                       Margin="0,20,20,20">
                                <TextBlock Text="至臻 K/DA 阿卡丽"
                                          FontSize="{StaticResource FontSizeLarge}"
                                          FontWeight="{StaticResource FontWeightBold}"
                                          Foreground="{DynamicResource PrimaryGoldBrush}"
                                          Margin="0,0,0,10"/>
                                <TextBlock Text="限时优惠"
                                          FontSize="{StaticResource FontSizeNormal}"
                                          Foreground="{DynamicResource ErrorRedBrush}"
                                          Margin="0,0,0,15"/>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                    <TextBlock Text="1,820"
                                              FontSize="{DynamicResource FontSizeLarge}"
                                              FontWeight="{StaticResource FontWeightBold}"
                                              Foreground="{DynamicResource TextPrimaryBrush}"
                                              TextDecorations="Strikethrough"
                                              Margin="0,0,10,0"/>
                                    <TextBlock Text="1,350"
                                              FontSize="{DynamicResource FontSizeLarge}"
                                              FontWeight="{StaticResource FontWeightBold}"
                                              Foreground="{DynamicResource SuccessGreenBrush}"/>
                                </StackPanel>
                                <controls:GlowButton Content="立即购买"
                                                   GlowColor="{DynamicResource PrimaryGold}"
                                                   Height="45"
                                                   FontSize="{StaticResource FontSizeMedium}"
                                                   FontWeight="{StaticResource FontWeightBold}"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                    
                    <!-- 商品网格 -->
                    <Border Grid.Row="1"
                           Background="{DynamicResource BackgroundMediumBrush}"
                           BorderBrush="{DynamicResource BorderDarkBrush}"
                           BorderThickness="1"
                           Padding="20">
                        <ScrollViewer VerticalScrollBarVisibility="Auto"
                                     HorizontalScrollBarVisibility="Disabled">
                            <StackPanel>
                                <TextBlock Text="热门商品"
                                          FontSize="{StaticResource FontSizeMedium}"
                                          FontWeight="{StaticResource FontWeightBold}"
                                          Foreground="{DynamicResource PrimaryGoldBrush}"
                                          Margin="0,0,0,15"/>
                                
                                <WrapPanel>
                                    <!-- 商品卡片 1 -->
                                    <Border Background="{DynamicResource BackgroundLightBrush}"
                                           BorderBrush="{DynamicResource BorderGoldBrush}"
                                           BorderThickness="1"
                                           Width="180"
                                           Margin="0,0,15,15">
                                        <StackPanel>
                                            <Border Background="{DynamicResource BackgroundDarkBrush}"
                                                   Height="180">
                                                <TextBlock Text="皮肤"
                                                          FontSize="{StaticResource FontSizeLarge}"
                                                          Foreground="{DynamicResource PrimaryGoldBrush}"
                                                          HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"/>
                                            </Border>
                                            <StackPanel Margin="10">
                                                <TextBlock Text="源计划：亚索"
                                                          FontSize="{StaticResource FontSizeNormal}"
                                                          FontWeight="{StaticResource FontWeightBold}"
                                                          Foreground="{DynamicResource TextPrimaryBrush}"
                                                          Margin="0,0,0,5"/>
                                                <TextBlock Text="1,350 RP"
                                                          FontSize="{StaticResource FontSizeNormal}"
                                                          Foreground="{DynamicResource PrimaryCyanBrush}"
                                                          Margin="0,0,0,8"/>
                                                <Button Content="购买"
                                                       Style="{StaticResource LOLPrimaryButtonStyle}"
                                                       Height="30"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>
                                    
                                    <!-- 商品卡片 2 -->
                                    <Border Background="{DynamicResource BackgroundLightBrush}"
                                           BorderBrush="{DynamicResource BorderDarkBrush}"
                                           BorderThickness="1"
                                           Width="180"
                                           Margin="0,0,15,15">
                                        <StackPanel>
                                            <Border Background="{DynamicResource BackgroundDarkBrush}"
                                                   Height="180">
                                                <TextBlock Text="皮肤"
                                                          FontSize="{StaticResource FontSizeLarge}"
                                                          Foreground="{DynamicResource PrimaryCyanBrush}"
                                                          HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"/>
                                            </Border>
                                            <StackPanel Margin="10">
                                                <TextBlock Text="腥红之月：劫"
                                                          FontSize="{StaticResource FontSizeNormal}"
                                                          FontWeight="{StaticResource FontWeightBold}"
                                                          Foreground="{DynamicResource TextPrimaryBrush}"
                                                          Margin="0,0,0,5"/>
                                                <TextBlock Text="1,350 RP"
                                                          FontSize="{StaticResource FontSizeNormal}"
                                                          Foreground="{DynamicResource PrimaryCyanBrush}"
                                                          Margin="0,0,0,8"/>
                                                <Button Content="购买"
                                                       Style="{StaticResource LOLSecondaryButtonStyle}"
                                                       Height="30"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>
                                    
                                    <!-- 商品卡片 3 -->
                                    <Border Background="{DynamicResource BackgroundLightBrush}"
                                           BorderBrush="{DynamicResource BorderDarkBrush}"
                                           BorderThickness="1"
                                           Width="180"
                                           Margin="0,0,15,15">
                                        <StackPanel>
                                            <Border Background="{DynamicResource BackgroundDarkBrush}"
                                                   Height="180">
                                                <TextBlock Text="英雄"
                                                          FontSize="{StaticResource FontSizeLarge}"
                                                          Foreground="{DynamicResource PrimaryGoldBrush}"
                                                          HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"/>
                                            </Border>
                                            <StackPanel Margin="10">
                                                <TextBlock Text="阿卡丽"
                                                          FontSize="{StaticResource FontSizeNormal}"
                                                          FontWeight="{StaticResource FontWeightBold}"
                                                          Foreground="{DynamicResource TextPrimaryBrush}"
                                                          Margin="0,0,0,5"/>
                                                <TextBlock Text="4,800 BE"
                                                          FontSize="{StaticResource FontSizeNormal}"
                                                          Foreground="{DynamicResource PrimaryCyanBrush}"
                                                          Margin="0,0,0,8"/>
                                                <Button Content="购买"
                                                       Style="{StaticResource LOLSecondaryButtonStyle}"
                                                       Height="30"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>
                                    
                                    <!-- 商品卡片 4 -->
                                    <Border Background="{DynamicResource BackgroundLightBrush}"
                                           BorderBrush="{DynamicResource BorderGoldBrush}"
                                           BorderThickness="1"
                                           Width="180"
                                           Margin="0,0,15,15">
                                        <StackPanel>
                                            <Border Background="{DynamicResource BackgroundDarkBrush}"
                                                   Height="180">
                                                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                                    <TextBlock Text="限时"
                                                              FontSize="{StaticResource FontSizeSmall}"
                                                              Foreground="{DynamicResource ErrorRedBrush}"
                                                              HorizontalAlignment="Center"
                                                              Margin="0,0,0,5"/>
                                                    <TextBlock Text="皮肤"
                                                              FontSize="{StaticResource FontSizeLarge}"
                                                              Foreground="{DynamicResource PrimaryGoldBrush}"
                                                              HorizontalAlignment="Center"/>
                                                </StackPanel>
                                            </Border>
                                            <StackPanel Margin="10">
                                                <TextBlock Text="星之守护者：拉克丝"
                                                          FontSize="{StaticResource FontSizeNormal}"
                                                          FontWeight="{StaticResource FontWeightBold}"
                                                          Foreground="{DynamicResource TextPrimaryBrush}"
                                                          Margin="0,0,0,5"/>
                                                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                                    <TextBlock Text="1,820"
                                                              FontSize="{StaticResource FontSizeSmall}"
                                                              Foreground="{DynamicResource TextSecondaryBrush}"
                                                              TextDecorations="Strikethrough"
                                                              Margin="0,0,5,0"/>
                                                    <TextBlock Text="1,350 RP"
                                                              FontSize="{StaticResource FontSizeNormal}"
                                                              Foreground="{DynamicResource SuccessGreenBrush}"/>
                                                </StackPanel>
                                                <Button Content="购买"
                                                       Style="{StaticResource LOLPrimaryButtonStyle}"
                                                       Height="30"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>
                                    
                                    <!-- 商品卡片 5 -->
                                    <Border Background="{DynamicResource BackgroundLightBrush}"
                                           BorderBrush="{DynamicResource BorderDarkBrush}"
                                           BorderThickness="1"
                                           Width="180"
                                           Margin="0,0,15,15">
                                        <StackPanel>
                                            <Border Background="{DynamicResource BackgroundDarkBrush}"
                                                   Height="180">
                                                <TextBlock Text="表情"
                                                          FontSize="{StaticResource FontSizeLarge}"
                                                          Foreground="{DynamicResource PrimaryCyanBrush}"
                                                          HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"/>
                                            </Border>
                                            <StackPanel Margin="10">
                                                <TextBlock Text="胜利手势"
                                                          FontSize="{StaticResource FontSizeNormal}"
                                                          FontWeight="{StaticResource FontWeightBold}"
                                                          Foreground="{DynamicResource TextPrimaryBrush}"
                                                          Margin="0,0,0,5"/>
                                                <TextBlock Text="350 RP"
                                                          FontSize="{StaticResource FontSizeNormal}"
                                                          Foreground="{DynamicResource PrimaryCyanBrush}"
                                                          Margin="0,0,0,8"/>
                                                <Button Content="购买"
                                                       Style="{StaticResource LOLSecondaryButtonStyle}"
                                                       Height="30"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>
                                    
                                    <!-- 商品卡片 6 -->
                                    <Border Background="{DynamicResource BackgroundLightBrush}"
                                           BorderBrush="{DynamicResource BorderDarkBrush}"
                                           BorderThickness="1"
                                           Width="180"
                                           Margin="0,0,15,15">
                                        <StackPanel>
                                            <Border Background="{DynamicResource BackgroundDarkBrush}"
                                                   Height="180">
                                                <TextBlock Text="守卫"
                                                          FontSize="{StaticResource FontSizeLarge}"
                                                          Foreground="{DynamicResource PrimaryGoldBrush}"
                                                          HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"/>
                                            </Border>
                                            <StackPanel Margin="10">
                                                <TextBlock Text="小小英雄"
                                                          FontSize="{StaticResource FontSizeNormal}"
                                                          FontWeight="{StaticResource FontWeightBold}"
                                                          Foreground="{DynamicResource TextPrimaryBrush}"
                                                          Margin="0,0,0,5"/>
                                                <TextBlock Text="490 RP"
                                                          FontSize="{StaticResource FontSizeNormal}"
                                                          Foreground="{DynamicResource PrimaryCyanBrush}"
                                                          Margin="0,0,0,8"/>
                                                <Button Content="购买"
                                                       Style="{StaticResource LOLSecondaryButtonStyle}"
                                                       Height="30"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>
                                    
                                    <!-- 商品卡片 7 -->
                                    <Border Background="{DynamicResource BackgroundLightBrush}"
                                           BorderBrush="{DynamicResource BorderDarkBrush}"
                                           BorderThickness="1"
                                           Width="180"
                                           Margin="0,0,15,15">
                                        <StackPanel>
                                            <Border Background="{DynamicResource BackgroundDarkBrush}"
                                                   Height="180">
                                                <TextBlock Text="英雄"
                                                          FontSize="{StaticResource FontSizeLarge}"
                                                          Foreground="{DynamicResource PrimaryCyanBrush}"
                                                          HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"/>
                                            </Border>
                                            <StackPanel Margin="10">
                                                <TextBlock Text="赛娜"
                                                          FontSize="{StaticResource FontSizeNormal}"
                                                          FontWeight="{StaticResource FontWeightBold}"
                                                          Foreground="{DynamicResource TextPrimaryBrush}"
                                                          Margin="0,0,0,5"/>
                                                <TextBlock Text="6,300 BE"
                                                          FontSize="{StaticResource FontSizeNormal}"
                                                          Foreground="{DynamicResource PrimaryCyanBrush}"
                                                          Margin="0,0,0,8"/>
                                                <Button Content="购买"
                                                       Style="{StaticResource LOLSecondaryButtonStyle}"
                                                       Height="30"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>
                                    
                                    <!-- 商品卡片 8 -->
                                    <Border Background="{DynamicResource BackgroundLightBrush}"
                                           BorderBrush="{DynamicResource BorderDarkBrush}"
                                           BorderThickness="1"
                                           Width="180"
                                           Margin="0,0,15,15">
                                        <StackPanel>
                                            <Border Background="{DynamicResource BackgroundDarkBrush}"
                                                   Height="180">
                                                <TextBlock Text="战利品"
                                                          FontSize="{StaticResource FontSizeLarge}"
                                                          Foreground="{DynamicResource PrimaryGoldBrush}"
                                                          HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"/>
                                            </Border>
                                            <StackPanel Margin="10">
                                                <TextBlock Text="海克斯宝箱"
                                                          FontSize="{StaticResource FontSizeNormal}"
                                                          FontWeight="{StaticResource FontWeightBold}"
                                                          Foreground="{DynamicResource TextPrimaryBrush}"
                                                          Margin="0,0,0,5"/>
                                                <TextBlock Text="125 RP"
                                                          FontSize="{StaticResource FontSizeNormal}"
                                                          Foreground="{DynamicResource PrimaryCyanBrush}"
                                                          Margin="0,0,0,8"/>
                                                <Button Content="购买"
                                                       Style="{StaticResource LOLSecondaryButtonStyle}"
                                                       Height="30"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>
                                </WrapPanel>
                            </StackPanel>
                        </ScrollViewer>
                    </Border>
                </Grid>
            </Grid>
            
            <!-- 底部状态栏 -->
            <Border Grid.Row="2"
                   Background="{DynamicResource BackgroundMediumBrush}"
                   BorderBrush="{DynamicResource BorderGoldBrush}"
                   BorderThickness="0,2,0,0"
                   Padding="20,10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <TextBlock Text="购物车: "
                                  FontSize="{StaticResource FontSizeNormal}"
                                  Foreground="{DynamicResource TextSecondaryBrush}"
                                  VerticalAlignment="Center"/>
                        <TextBlock Text="0 件商品"
                                  FontSize="{StaticResource FontSizeNormal}"
                                  FontWeight="{StaticResource FontWeightBold}"
                                  Foreground="{DynamicResource PrimaryGoldBrush}"
                                  VerticalAlignment="Center"
                                  Margin="5,0,20,0"/>
                        
                        <TextBlock Text="总计: "
                                  FontSize="{StaticResource FontSizeNormal}"
                                  Foreground="{DynamicResource TextSecondaryBrush}"
                                  VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding PlayerData.RiotPoints, StringFormat='{}{0} RP'}"
                                  FontSize="{StaticResource FontSizeNormal}"
                                  FontWeight="{StaticResource FontWeightBold}"
                                  Foreground="{DynamicResource PrimaryCyanBrush}"
                                  VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <Button Content="查看购物车"
                               Style="{StaticResource LOLSecondaryButtonStyle}"
                               Width="120" Height="35"
                               Margin="0,0,10,0"/>
                        <Button Content="充值"
                               Style="{StaticResource LOLPrimaryButtonStyle}"
                               Width="100" Height="35"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
