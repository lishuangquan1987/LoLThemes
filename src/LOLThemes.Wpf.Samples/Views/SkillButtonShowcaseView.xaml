<UserControl x:Class="LOLThemes.Wpf.Samples.Views.SkillButtonShowcaseView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:smtx="clr-namespace:ShowMeTheXAML;assembly=ShowMeTheXAML"
             xmlns:controls="clr-namespace:LOLThemes.Wpf.Controls;assembly=LOLThemes.Wpf"
             Background="{DynamicResource BackgroundDarkBrush}">
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Padding="30">
        <StackPanel>
            <!-- 标题 -->
            <Border Background="{DynamicResource BackgroundMediumBrush}"
                   BorderBrush="{DynamicResource BorderGoldBrush}"
                   BorderThickness="0,0,0,2"
                   Padding="20,15"
                   Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="SkillButton - 技能按钮" 
                          FontSize="{DynamicResource FontSizeLarge}"
                          FontWeight="{StaticResource FontWeightBold}"
                          Foreground="{DynamicResource PrimaryGoldBrush}"
                          Margin="0,0,0,8"/>
                    <TextBlock Text="技能按钮用于显示英雄的技能，支持冷却时间进度显示。" 
                          FontSize="{StaticResource FontSizeNormal}"
                          Foreground="{DynamicResource TextSecondaryBrush}"/>
                </StackPanel>
            </Border>
            
            <!-- 基础用法 -->
            <Border Background="{DynamicResource BackgroundMediumBrush}"
                   BorderBrush="{DynamicResource BorderDarkBrush}"
                   BorderThickness="0.5"
                   Padding="20"
                   Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="基础用法" 
                          FontSize="{DynamicResource FontSizeLarge}"
                          FontWeight="{StaticResource FontWeightBold}"
                          Foreground="{DynamicResource PrimaryGoldBrush}"
                          Margin="0,0,0,15"/>
                    
                    <smtx:XamlDisplay UniqueKey="SkillButtonQ" Margin="0,0,0,15">
                        <controls:SkillButton HotkeyText="Q" 
                                             Width="60" Height="60"/>
                    </smtx:XamlDisplay>
                    
                    <smtx:XamlDisplay UniqueKey="SkillButtonW" Margin="0,0,0,15">
                        <controls:SkillButton HotkeyText="W" 
                                             Width="60" Height="60"/>
                    </smtx:XamlDisplay>
                    
                    <smtx:XamlDisplay UniqueKey="SkillButtonE" Margin="0,0,0,15">
                        <controls:SkillButton HotkeyText="E" 
                                             Width="60" Height="60"/>
                    </smtx:XamlDisplay>
                    
                    <smtx:XamlDisplay UniqueKey="SkillButtonR" Margin="0,0,0,0">
                        <controls:SkillButton HotkeyText="R" 
                                             Width="60" Height="60"/>
                    </smtx:XamlDisplay>
                </StackPanel>
            </Border>
            
            <!-- 冷却状态 -->
            <Border Background="{DynamicResource BackgroundMediumBrush}"
                   BorderBrush="{DynamicResource BorderDarkBrush}"
                   BorderThickness="0.5"
                   Padding="20"
                   Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="冷却状态" 
                          FontSize="{DynamicResource FontSizeLarge}"
                          FontWeight="{StaticResource FontWeightBold}"
                          Foreground="{DynamicResource PrimaryGoldBrush}"
                          Margin="0,0,0,15"/>
                    
                    <smtx:XamlDisplay UniqueKey="SkillButtonCooldown0" Margin="0,0,0,15">
                        <controls:SkillButton HotkeyText="Q" 
                                             CooldownProgress="0.0"
                                             Width="60" Height="60"/>
                    </smtx:XamlDisplay>
                    
                    <smtx:XamlDisplay UniqueKey="SkillButtonCooldown30" Margin="0,0,0,15">
                        <controls:SkillButton HotkeyText="W" 
                                             CooldownProgress="0.3"
                                             Width="60" Height="60"/>
                    </smtx:XamlDisplay>
                    
                    <smtx:XamlDisplay UniqueKey="SkillButtonCooldown60" Margin="0,0,0,15">
                        <controls:SkillButton HotkeyText="E" 
                                             CooldownProgress="0.6"
                                             Width="60" Height="60"/>
                    </smtx:XamlDisplay>
                    
                    <smtx:XamlDisplay UniqueKey="SkillButtonCooldown90" Margin="0,0,0,0">
                        <controls:SkillButton HotkeyText="R" 
                                             CooldownProgress="0.9"
                                             Width="60" Height="60"/>
                    </smtx:XamlDisplay>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
