<UserControl x:Class="LOLThemes.Wpf.Samples.Views.SliderShowcaseView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:smtx="clr-namespace:ShowMeTheXAML;assembly=ShowMeTheXAML"
             Background="{DynamicResource BackgroundDarkBrush}">
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Padding="30">
        <StackPanel>
            <!-- 标题 -->
            <Border Background="{DynamicResource BackgroundMediumBrush}"
                   BorderBrush="{DynamicResource BorderGoldBrush}"
                   BorderThickness="0,0,0,2"
                   Padding="20,15"
                   Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Slider - 滑块" 
                          FontSize="{DynamicResource FontSizeLarge}"
                          FontWeight="{StaticResource FontWeightBold}"
                          Foreground="{DynamicResource PrimaryGoldBrush}"
                          Margin="0,0,0,8"/>
                    <TextBlock Text="滑块用于通过拖动来选择一个数值范围内的值。" 
                          FontSize="{StaticResource FontSizeNormal}"
                          Foreground="{DynamicResource TextSecondaryBrush}"/>
                </StackPanel>
            </Border>
            
            <!-- 基础用法 -->
            <Border Background="{DynamicResource BackgroundMediumBrush}"
                   BorderBrush="{DynamicResource BorderDarkBrush}"
                   BorderThickness="0.5"
                   Padding="20"
                   Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="基础用法" 
                          FontSize="{DynamicResource FontSizeLarge}"
                          FontWeight="{StaticResource FontWeightBold}"
                          Foreground="{DynamicResource PrimaryGoldBrush}"
                          Margin="0,0,0,15"/>
                    
                    <StackPanel>
                        <TextBlock Text="音量: 50" 
                                 Foreground="{DynamicResource TextPrimaryBrush}"
                                 Margin="0,0,0,10"/>
                        <smtx:XamlDisplay Margin="0,0,0,20" UniqueKey="SliderVolume">
                            <Slider
                                  Minimum="0" Maximum="100" Value="50"
                                  Width="300" Height="30"
                                  HorizontalAlignment="Left"/>
                        </smtx:XamlDisplay>
                        
                        <TextBlock Text="透明度: 75" 
                                 Foreground="{DynamicResource TextPrimaryBrush}"
                                 Margin="0,0,0,10"/>
                        <smtx:XamlDisplay Margin="0,0,0,0" UniqueKey="SliderOpacity">
                            <Slider
                                  Minimum="0" Maximum="100" Value="75"
                                  Width="300" Height="30"
                                  HorizontalAlignment="Left"/>
                        </smtx:XamlDisplay>
                    </StackPanel>
                </StackPanel>
            </Border>
            
            <!-- 不同方向 -->
            <Border Background="{DynamicResource BackgroundMediumBrush}"
                   BorderBrush="{DynamicResource BorderDarkBrush}"
                   BorderThickness="0.5"
                   Padding="20"
                   Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="不同方向" 
                          FontSize="{DynamicResource FontSizeLarge}"
                          FontWeight="{StaticResource FontWeightBold}"
                          Foreground="{DynamicResource PrimaryGoldBrush}"
                          Margin="0,0,0,15"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="水平滑块" 
                                     Foreground="{DynamicResource TextPrimaryBrush}"
                                     Margin="0,0,0,10"/>
                            <smtx:XamlDisplay Margin="0,0,0,0" UniqueKey="SliderHorizontal">
                                <Slider
                                      Minimum="0" Maximum="100" Value="50"
                                      Width="300" Height="30"
                                      HorizontalAlignment="Left"/>
                            </smtx:XamlDisplay>
                        </StackPanel>
                        <StackPanel Grid.Column="1" Orientation="Vertical">
                            <TextBlock Text="垂直滑块" 
                                     Foreground="{DynamicResource TextPrimaryBrush}"
                                     Margin="0,0,0,10"/>
                            <smtx:XamlDisplay Margin="0,0,0,0" UniqueKey="SliderVertical">
                                <Slider
                                      Minimum="0" Maximum="100" Value="50"
                                      Orientation="Vertical"
                                      Width="30" Height="200"
                                      HorizontalAlignment="Left"/>
                            </smtx:XamlDisplay>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>
            
            <!-- 不同颜色的滑块 -->
            <Border Background="{DynamicResource BackgroundMediumBrush}"
                   BorderBrush="{DynamicResource BorderDarkBrush}"
                   BorderThickness="0.5"
                   Padding="20"
                   Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="不同颜色的滑块" 
                          FontSize="{DynamicResource FontSizeLarge}"
                          FontWeight="{StaticResource FontWeightBold}"
                          Foreground="{DynamicResource PrimaryGoldBrush}"
                          Margin="0,0,0,15"/>
                    
                    <StackPanel>
                        <TextBlock Text="金色滑块" 
                                 Foreground="{DynamicResource TextPrimaryBrush}"
                                 Margin="0,0,0,10"/>
                        <smtx:XamlDisplay Margin="0,0,0,20" UniqueKey="SliderGold">
                            <Slider
                                      Minimum="0" Maximum="100" Value="50"
                                      Width="300" Height="30"
                                      HorizontalAlignment="Left"
                                      Foreground="{DynamicResource PrimaryGoldBrush}"/>
                        </smtx:XamlDisplay>
                        
                        <TextBlock Text="绿色滑块" 
                                 Foreground="{DynamicResource TextPrimaryBrush}"
                                 Margin="0,0,0,10"/>
                        <smtx:XamlDisplay Margin="0,0,0,20" UniqueKey="SliderGreen">
                            <Slider
                                      Minimum="0" Maximum="100" Value="75"
                                      Width="300" Height="30"
                                      HorizontalAlignment="Left"
                                      Foreground="{DynamicResource SuccessGreenBrush}"/>
                        </smtx:XamlDisplay>
                        
                        <TextBlock Text="红色滑块" 
                                 Foreground="{DynamicResource TextPrimaryBrush}"
                                 Margin="0,0,0,10"/>
                        <smtx:XamlDisplay Margin="0,0,0,20" UniqueKey="SliderRed">
                            <Slider
                                      Minimum="0" Maximum="100" Value="25"
                                      Width="300" Height="30"
                                      HorizontalAlignment="Left"
                                      Foreground="{DynamicResource ErrorRedBrush}"/>
                        </smtx:XamlDisplay>
                    </StackPanel>
                </StackPanel>
            </Border>
            
            <!-- 带标记的滑块 -->
            <Border Background="{DynamicResource BackgroundMediumBrush}"
                   BorderBrush="{DynamicResource BorderDarkBrush}"
                   BorderThickness="0.5"
                   Padding="20"
                   Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="带标记的滑块" 
                          FontSize="{DynamicResource FontSizeLarge}"
                          FontWeight="{StaticResource FontWeightBold}"
                          Foreground="{DynamicResource PrimaryGoldBrush}"
                          Margin="0,0,0,15"/>
                    
                    <StackPanel>
                        <TextBlock Text="音量调节" 
                                 Foreground="{DynamicResource TextPrimaryBrush}"
                                 Margin="0,0,0,10"/>
                        <smtx:XamlDisplay Margin="0,0,0,0" UniqueKey="SliderWithTicks">
                            <Slider
                                      Minimum="0" Maximum="100" Value="50"
                                      Width="300" Height="30"
                                      HorizontalAlignment="Left"
                                      TickPlacement="BottomRight"
                                      TickFrequency="20"
                                      IsSnapToTickEnabled="True"/>
                        </smtx:XamlDisplay>
                    </StackPanel>
                </StackPanel>
            </Border>
            
            <!-- 范围选择滑块 -->
            <Border Background="{DynamicResource BackgroundMediumBrush}"
                   BorderBrush="{DynamicResource BorderDarkBrush}"
                   BorderThickness="0.5"
                   Padding="20"
                   Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="范围选择滑块" 
                          FontSize="{DynamicResource FontSizeLarge}"
                          FontWeight="{StaticResource FontWeightBold}"
                          Foreground="{DynamicResource PrimaryGoldBrush}"
                          Margin="0,0,0,15"/>
                    
                    <StackPanel>
                        <TextBlock Text="价格范围: 1000 - 5000" 
                                 Foreground="{DynamicResource TextPrimaryBrush}"
                                 Margin="0,0,0,10"/>
                        <Grid Width="300" HorizontalAlignment="Left">
                            <smtx:XamlDisplay UniqueKey="SliderRangeMin">
                                <Slider
                                          Minimum="0" Maximum="10000" Value="1000"
                                          Width="300" Height="30"
                                          HorizontalAlignment="Left"
                                          Foreground="{DynamicResource BorderGoldBrush}"/>
                            </smtx:XamlDisplay>
                            <smtx:XamlDisplay UniqueKey="SliderRangeMax">
                                <Slider
                                          Minimum="0" Maximum="10000" Value="5000"
                                          Width="300" Height="30"
                                          HorizontalAlignment="Left"
                                          Foreground="{DynamicResource BorderGoldBrush}"/>
                            </smtx:XamlDisplay>
                        </Grid>
                    </StackPanel>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
