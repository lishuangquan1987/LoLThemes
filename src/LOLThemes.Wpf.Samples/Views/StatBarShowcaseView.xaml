<UserControl x:Class="LOLThemes.Wpf.Samples.Views.StatBarShowcaseView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:smtx="clr-namespace:ShowMeTheXAML;assembly=ShowMeTheXAML"
             xmlns:controls="clr-namespace:LOLThemes.Wpf.Controls;assembly=LOLThemes.Wpf"
             Background="{DynamicResource BackgroundDarkBrush}">
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Padding="30">
        <StackPanel>
            <!-- 标题 -->
            <Border Background="{DynamicResource BackgroundMediumBrush}"
                   BorderBrush="{DynamicResource BorderGoldBrush}"
                   BorderThickness="0,0,0,2"
                   Padding="20,15"
                   Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="StatBar - 属性条" 
                          FontSize="{DynamicResource FontSizeLarge}"
                          FontWeight="{StaticResource FontWeightBold}"
                          Foreground="{DynamicResource PrimaryGoldBrush}"
                          Margin="0,0,0,8"/>
                    <TextBlock Text="属性条用于显示英雄的属性值，如攻击力、防御力等。" 
                          FontSize="{StaticResource FontSizeNormal}"
                          Foreground="{DynamicResource TextSecondaryBrush}"/>
                </StackPanel>
            </Border>
            
            <!-- 基础用法 -->
            <Border Background="{DynamicResource BackgroundMediumBrush}"
                   BorderBrush="{DynamicResource BorderDarkBrush}"
                   BorderThickness="0.5"
                   Padding="20"
                   Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="基础用法" 
                          FontSize="{DynamicResource FontSizeLarge}"
                          FontWeight="{StaticResource FontWeightBold}"
                          Foreground="{DynamicResource PrimaryGoldBrush}"
                          Margin="0,0,0,15"/>
                    
                    <smtx:XamlDisplay UniqueKey="StatBarAttack" Margin="0,0,0,15">
                        <StackPanel Width="300">
                            <TextBlock Text="攻击力" 
                                     Foreground="{DynamicResource TextPrimaryBrush}"
                                     Margin="0,0,0,5"/>
                            <controls:StatBar Value="80" 
                                            Maximum="100"
                                            Width="300" Height="30"/>
                        </StackPanel>
                    </smtx:XamlDisplay>
                    
                    <smtx:XamlDisplay UniqueKey="StatBarDefense" Margin="0,0,0,15">
                        <StackPanel Width="300">
                            <TextBlock Text="防御力" 
                                     Foreground="{DynamicResource TextPrimaryBrush}"
                                     Margin="0,0,0,5"/>
                            <controls:StatBar Value="40" 
                                            Maximum="100"
                                            Width="300" Height="30"/>
                        </StackPanel>
                    </smtx:XamlDisplay>
                    
                    <smtx:XamlDisplay UniqueKey="StatBarMagic" Margin="0,0,0,0">
                        <StackPanel Width="300">
                            <TextBlock Text="魔法" 
                                     Foreground="{DynamicResource TextPrimaryBrush}"
                                     Margin="0,0,0,5"/>
                            <controls:StatBar Value="60" 
                                            Maximum="100"
                                            Width="300" Height="30"/>
                        </StackPanel>
                    </smtx:XamlDisplay>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
