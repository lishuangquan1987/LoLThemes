<UserControl x:Class="LOLThemes.Wpf.Samples.Views.TabControlShowcaseView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:smtx="clr-namespace:ShowMeTheXAML;assembly=ShowMeTheXAML"
             Background="{StaticResource BackgroundDarkBrush}">
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Padding="30">
        <StackPanel>
            <!-- 标题 -->
            <Border Background="{StaticResource BackgroundMediumBrush}"
                   BorderBrush="{StaticResource BorderGoldBrush}"
                   BorderThickness="0,0,0,2"
                   Padding="20,15"
                   Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="TabControl - 标签页" 
                          FontSize="{StaticResource FontSizeXXLarge}"
                          FontWeight="{StaticResource FontWeightBold}"
                          Foreground="{StaticResource PrimaryGoldBrush}"
                          Margin="0,0,0,8"/>
                    <TextBlock Text="标签页用于将内容组织到多个可切换的页面中。" 
                          FontSize="{StaticResource FontSizeNormal}"
                          Foreground="{StaticResource TextSecondaryBrush}"/>
                </StackPanel>
            </Border>
            
            <!-- 基础用法 -->
            <Border Background="{StaticResource BackgroundMediumBrush}"
                   BorderBrush="{StaticResource BorderDarkBrush}"
                   BorderThickness="0.5"
                   Padding="20"
                   Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="基础用法" 
                          FontSize="{StaticResource FontSizeLarge}"
                          FontWeight="{StaticResource FontWeightBold}"
                          Foreground="{StaticResource PrimaryGoldBrush}"
                          Margin="0,0,0,15"/>
                    
                    <smtx:XamlDisplay UniqueKey="TabControlBasic" Margin="0,0,0,0">
                        <TabControl Style="{StaticResource LOLTabControlStyle}"
                                  Width="400" Height="200"
                                  HorizontalAlignment="Left">
                            <TabItem Header="标签页 1" Style="{StaticResource LOLTabItemStyle}">
                                <TextBlock Text="这是第一个标签页的内容" 
                                         Foreground="{StaticResource TextPrimaryBrush}"
                                         Padding="10"/>
                            </TabItem>
                            <TabItem Header="标签页 2" Style="{StaticResource LOLTabItemStyle}">
                                <TextBlock Text="这是第二个标签页的内容" 
                                         Foreground="{StaticResource TextPrimaryBrush}"
                                         Padding="10"/>
                            </TabItem>
                            <TabItem Header="标签页 3" Style="{StaticResource LOLTabItemStyle}">
                                <TextBlock Text="这是第三个标签页的内容" 
                                         Foreground="{StaticResource TextPrimaryBrush}"
                                         Padding="10"/>
                            </TabItem>
                        </TabControl>
                    </smtx:XamlDisplay>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
