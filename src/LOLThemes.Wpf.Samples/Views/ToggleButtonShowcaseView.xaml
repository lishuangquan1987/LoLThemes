<UserControl x:Class="LOLThemes.Wpf.Samples.Views.ToggleButtonShowcaseView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:smtx="clr-namespace:ShowMeTheXAML;assembly=ShowMeTheXAML"
             Background="{StaticResource BackgroundDarkBrush}">
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Padding="30">
        <StackPanel>
            <!-- 标题 -->
            <Border Background="{StaticResource BackgroundMediumBrush}"
                   BorderBrush="{StaticResource BorderGoldBrush}"
                   BorderThickness="0,0,0,2"
                   Padding="20,15"
                   Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="ToggleButton - 切换按钮" 
                          FontSize="{StaticResource FontSizeXXLarge}"
                          FontWeight="{StaticResource FontWeightBold}"
                          Foreground="{StaticResource PrimaryGoldBrush}"
                          Margin="0,0,0,8"/>
                    <TextBlock Text="切换按钮用于在两种状态之间切换，类似于开关。" 
                          FontSize="{StaticResource FontSizeNormal}"
                          Foreground="{StaticResource TextSecondaryBrush}"/>
                </StackPanel>
            </Border>
            
            <!-- 基础用法 -->
            <Border Background="{StaticResource BackgroundMediumBrush}"
                   BorderBrush="{StaticResource BorderDarkBrush}"
                   BorderThickness="0.5"
                   Padding="20"
                   Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="基础用法" 
                          FontSize="{StaticResource FontSizeLarge}"
                          FontWeight="{StaticResource FontWeightBold}"
                          Foreground="{StaticResource PrimaryGoldBrush}"
                          Margin="0,0,0,15"/>
                    
                    <smtx:XamlDisplay UniqueKey="ToggleButtonBasic" Margin="0,0,0,0">
                        <StackPanel>
                            <ToggleButton Content="切换按钮" 
                                        Style="{StaticResource LOLToggleButtonStyle}"
                                        Width="150" Height="40"
                                        Margin="0,0,0,10"/>
                            <ToggleButton Content="已选中" 
                                        Style="{StaticResource LOLToggleButtonStyle}"
                                        IsChecked="True"
                                        Width="150" Height="40"/>
                        </StackPanel>
                    </smtx:XamlDisplay>
                </StackPanel>
            </Border>
            
            <!-- 不同状态 -->
            <Border Background="{StaticResource BackgroundMediumBrush}"
                   BorderBrush="{StaticResource BorderDarkBrush}"
                   BorderThickness="0.5"
                   Padding="20"
                   Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="不同状态" 
                          FontSize="{StaticResource FontSizeLarge}"
                          FontWeight="{StaticResource FontWeightBold}"
                          Foreground="{StaticResource PrimaryGoldBrush}"
                          Margin="0,0,0,15"/>
                    
                    <smtx:XamlDisplay UniqueKey="ToggleButtonStates" Margin="0,0,0,0">
                        <StackPanel>
                            <ToggleButton Content="未选中" 
                                        Style="{StaticResource LOLToggleButtonStyle}"
                                        Width="150" Height="40"
                                        Margin="0,0,0,10"/>
                            <ToggleButton Content="已选中" 
                                        Style="{StaticResource LOLToggleButtonStyle}"
                                        IsChecked="True"
                                        Width="150" Height="40"
                                        Margin="0,0,0,10"/>
                            <ToggleButton Content="禁用状态" 
                                        Style="{StaticResource LOLToggleButtonStyle}"
                                        IsEnabled="False"
                                        Width="150" Height="40"/>
                        </StackPanel>
                    </smtx:XamlDisplay>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
