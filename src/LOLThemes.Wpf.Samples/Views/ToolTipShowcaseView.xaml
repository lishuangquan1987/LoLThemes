<UserControl x:Class="LOLThemes.Wpf.Samples.Views.ToolTipShowcaseView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:smtx="clr-namespace:ShowMeTheXAML;assembly=ShowMeTheXAML"
             xmlns:helpers="clr-namespace:LOLThemes.Wpf.Helpers;assembly=LOLThemes.Wpf"
             Background="{DynamicResource BackgroundDarkBrush}">
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Padding="30">
        <StackPanel>
            <!-- 标题 -->
            <Border Background="{DynamicResource BackgroundMediumBrush}"
                   BorderBrush="{DynamicResource BorderGoldBrush}"
                   BorderThickness="0,0,0,2"
                   Padding="20,15"
                   Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="ToolTip - 提示框" 
                          FontSize="{DynamicResource FontSizeLarge}"
                          FontWeight="{StaticResource FontWeightBold}"
                          Foreground="{DynamicResource PrimaryGoldBrush}"
                          Margin="0,0,0,8"/>
                    <TextBlock Text="提示框用于在鼠标悬停时显示额外的信息或说明。" 
                          FontSize="{StaticResource FontSizeNormal}"
                          Foreground="{DynamicResource TextSecondaryBrush}"/>
                </StackPanel>
            </Border>
            
            <!-- 基础用法 -->
            <Border Background="{DynamicResource BackgroundMediumBrush}"
                   BorderBrush="{DynamicResource BorderDarkBrush}"
                   BorderThickness="0.5"
                   Padding="20"
                   Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="基础用法" 
                          FontSize="{DynamicResource FontSizeLarge}"
                          FontWeight="{StaticResource FontWeightBold}"
                          Foreground="{DynamicResource PrimaryGoldBrush}"
                          Margin="0,0,0,15"/>
                    
                    <smtx:XamlDisplay UniqueKey="ToolTipButton" Margin="0,0,0,15">
                        <Button Content="悬停查看提示" 
                              Width="200" Height="40">
                            <Button.ToolTip>
                                <ToolTip>
                                    这是一个简单的提示信息
                                </ToolTip>
                            </Button.ToolTip>
                        </Button>
                    </smtx:XamlDisplay>
                    
                    <smtx:XamlDisplay UniqueKey="ToolTipTextBox" Margin="0,0,0,15">
                        <TextBox helpers:TextBoxHelper.Placeholder="输入用户名"
                               Width="200" Height="35">
                            <TextBox.ToolTip>
                                <ToolTip>
                                    请输入您的用户名
                                </ToolTip>
                            </TextBox.ToolTip>
                        </TextBox>
                    </smtx:XamlDisplay>
                    
                    <smtx:XamlDisplay UniqueKey="ToolTipTextBlock" Margin="0,0,0,0">
                        <TextBlock Text="悬停我查看提示" 
                                 Foreground="{DynamicResource TextPrimaryBrush}"
                                 FontSize="{StaticResource FontSizeNormal}">
                            <TextBlock.ToolTip>
                                <ToolTip>
                                    这是一个文本提示
                                </ToolTip>
                            </TextBlock.ToolTip>
                        </TextBlock>
                    </smtx:XamlDisplay>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
