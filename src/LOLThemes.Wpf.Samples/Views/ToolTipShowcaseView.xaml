<UserControl x:Class="LOLThemes.Wpf.Samples.Views.ToolTipShowcaseView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:smtx="clr-namespace:ShowMeTheXAML;assembly=ShowMeTheXAML"
             Background="{StaticResource BackgroundDarkBrush}">
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Padding="30">
        <StackPanel>
            <!-- 标题 -->
            <Border Background="{StaticResource BackgroundMediumBrush}"
                   BorderBrush="{StaticResource BorderGoldBrush}"
                   BorderThickness="0,0,0,2"
                   Padding="20,15"
                   Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="ToolTip - 提示框" 
                          FontSize="{StaticResource FontSizeXXLarge}"
                          FontWeight="{StaticResource FontWeightBold}"
                          Foreground="{StaticResource PrimaryGoldBrush}"
                          Margin="0,0,0,8"/>
                    <TextBlock Text="提示框用于在鼠标悬停时显示额外的信息或说明。" 
                          FontSize="{StaticResource FontSizeNormal}"
                          Foreground="{StaticResource TextSecondaryBrush}"/>
                </StackPanel>
            </Border>
            
            <!-- 基础用法 -->
            <Border Background="{StaticResource BackgroundMediumBrush}"
                   BorderBrush="{StaticResource BorderDarkBrush}"
                   BorderThickness="0.5"
                   Padding="20"
                   Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="基础用法" 
                          FontSize="{StaticResource FontSizeLarge}"
                          FontWeight="{StaticResource FontWeightBold}"
                          Foreground="{StaticResource PrimaryGoldBrush}"
                          Margin="0,0,0,15"/>
                    
                    <smtx:XamlDisplay UniqueKey="ToolTipBasic" Margin="0,0,0,0">
                        <StackPanel>
                            <Button Content="悬停查看提示" 
                                  Style="{StaticResource LOLButtonStyle}"
                                  Width="200" Height="40"
                                  Margin="0,0,0,15">
                                <Button.ToolTip>
                                    <ToolTip Style="{StaticResource LOLToolTipStyle}">
                                        这是一个简单的提示信息
                                    </ToolTip>
                                </Button.ToolTip>
                            </Button>
                            
                            <TextBox Style="{StaticResource LOLTextBoxStyle}"
                                   Tag="输入用户名"
                                   Width="200" Height="35"
                                   Margin="0,0,0,15">
                                <TextBox.ToolTip>
                                    <ToolTip Style="{StaticResource LOLToolTipStyle}">
                                        请输入您的用户名
                                    </ToolTip>
                                </TextBox.ToolTip>
                            </TextBox>
                            
                            <TextBlock Text="悬停我查看提示" 
                                     Foreground="{StaticResource TextPrimaryBrush}"
                                     FontSize="{StaticResource FontSizeNormal}">
                                <TextBlock.ToolTip>
                                    <ToolTip Style="{StaticResource LOLToolTipStyle}">
                                        这是一个文本提示
                                    </ToolTip>
                                </TextBlock.ToolTip>
                            </TextBlock>
                        </StackPanel>
                    </smtx:XamlDisplay>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
