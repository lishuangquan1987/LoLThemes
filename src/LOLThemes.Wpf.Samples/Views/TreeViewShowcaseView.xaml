<UserControl x:Class="LOLThemes.Wpf.Samples.Views.TreeViewShowcaseView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:smtx="clr-namespace:ShowMeTheXAML;assembly=ShowMeTheXAML"
             Background="{DynamicResource BackgroundDarkBrush}">
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Padding="30">
        <StackPanel>
            <Border Background="{DynamicResource BackgroundMediumBrush}"
                   BorderBrush="{DynamicResource BorderGoldBrush}"
                   BorderThickness="0,0,0,2"
                   Padding="20,15"
                   Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="TreeView - 树形视图" 
                          FontSize="{StaticResource FontSizeXXLarge}"
                          FontWeight="{StaticResource FontWeightBold}"
                          Foreground="{DynamicResource PrimaryGoldBrush}"
                          Margin="0,0,0,8"/>
                    <TextBlock Text="树形视图用于以层次结构显示数据。" 
                          FontSize="{StaticResource FontSizeNormal}"
                          Foreground="{DynamicResource TextSecondaryBrush}"/>
                </StackPanel>
            </Border>
            
            <Border Background="{DynamicResource BackgroundMediumBrush}"
                   BorderBrush="{DynamicResource BorderDarkBrush}"
                   BorderThickness="0.5"
                   Padding="20"
                   Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="基础用法" 
                          FontSize="{StaticResource FontSizeLarge}"
                          FontWeight="{StaticResource FontWeightBold}"
                          Foreground="{DynamicResource PrimaryGoldBrush}"
                          Margin="0,0,0,15"/>
                    
                    <smtx:XamlDisplay UniqueKey="TreeViewBasic" Margin="0,0,0,0">
                        <TreeView Width="300" Height="250" HorizontalAlignment="Left">
                            <TreeViewItem Header="文件夹1" IsExpanded="True">
                                <TreeViewItem Header="子文件夹1.1"/>
                                <TreeViewItem Header="子文件夹1.2"/>
                            </TreeViewItem>
                            <TreeViewItem Header="文件夹2">
                                <TreeViewItem Header="子文件夹2.1"/>
                                <TreeViewItem Header="子文件夹2.2"/>
                            </TreeViewItem>
                            <TreeViewItem Header="文件夹3"/>
                        </TreeView>
                    </smtx:XamlDisplay>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>

