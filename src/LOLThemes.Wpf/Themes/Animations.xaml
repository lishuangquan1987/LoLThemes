<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- 动画持续时间 -->
    <Duration x:Key="AnimationDurationFast">0:0:0.15</Duration>
    <Duration x:Key="AnimationDurationNormal">0:0:0.2</Duration>
    <Duration x:Key="AnimationDurationSlow">0:0:0.3</Duration>
    
    <!-- 缓动函数 -->
    <CubicEase x:Key="EaseOut" EasingMode="EaseOut"/>
    <CubicEase x:Key="EaseIn" EasingMode="EaseIn"/>
    <CubicEase x:Key="EaseInOut" EasingMode="EaseInOut"/>
    <QuadraticEase x:Key="QuadraticEaseOut" EasingMode="EaseOut"/>
    
    <!-- 颜色过渡动画 - 按钮悬停 -->
    <Storyboard x:Key="ButtonHoverAnimation">
        <ColorAnimation Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)"
                       Duration="{StaticResource AnimationDurationNormal}"
                       EasingFunction="{StaticResource EaseOut}"/>
    </Storyboard>
    
    <!-- 淡入动画 -->
    <Storyboard x:Key="FadeInAnimation">
        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                        From="0" To="1"
                        Duration="{StaticResource AnimationDurationNormal}"
                        EasingFunction="{StaticResource EaseOut}"/>
    </Storyboard>
    
    <!-- 淡出动画 -->
    <Storyboard x:Key="FadeOutAnimation">
        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                        From="1" To="0"
                        Duration="{StaticResource AnimationDurationNormal}"
                        EasingFunction="{StaticResource EaseIn}"/>
    </Storyboard>
    
    <!-- 放大动画 -->
    <Storyboard x:Key="ScaleUpAnimation">
        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                        To="1.05"
                        Duration="{StaticResource AnimationDurationFast}"
                        EasingFunction="{StaticResource EaseOut}"/>
        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                        To="1.05"
                        Duration="{StaticResource AnimationDurationFast}"
                        EasingFunction="{StaticResource EaseOut}"/>
    </Storyboard>

    
    <!-- 缩小动画 -->
    <Storyboard x:Key="ScaleDownAnimation">
        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                        To="1.0"
                        Duration="{StaticResource AnimationDurationFast}"
                        EasingFunction="{StaticResource EaseOut}"/>
        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                        To="1.0"
                        Duration="{StaticResource AnimationDurationFast}"
                        EasingFunction="{StaticResource EaseOut}"/>
    </Storyboard>
    
    <!-- 旋转动画 -->
    <Storyboard x:Key="RotateAnimation" RepeatBehavior="Forever">
        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)"
                        From="0" To="360"
                        Duration="0:0:2"/>
    </Storyboard>
    
    <!-- 脉冲动画 -->
    <Storyboard x:Key="PulseAnimation" RepeatBehavior="Forever" AutoReverse="True">
        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                        From="1.0" To="0.5"
                        Duration="0:0:1"
                        EasingFunction="{StaticResource EaseInOut}"/>
    </Storyboard>
    
    <!-- 发光强度动画 -->
    <Storyboard x:Key="GlowIntensityAnimation">
        <DoubleAnimation Storyboard.TargetProperty="(UIElement.Effect).(DropShadowEffect.BlurRadius)"
                        Duration="{StaticResource AnimationDurationNormal}"
                        EasingFunction="{StaticResource EaseOut}"/>
    </Storyboard>
    
    <!-- 发光淡入动画 -->
    <Storyboard x:Key="GlowFadeInAnimation">
        <DoubleAnimation Storyboard.TargetProperty="(UIElement.Effect).(DropShadowEffect.Opacity)"
                        From="0" To="0.8"
                        Duration="{StaticResource AnimationDurationNormal}"
                        EasingFunction="{StaticResource EaseOut}"/>
    </Storyboard>
    
    <!-- 发光淡出动画 -->
    <Storyboard x:Key="GlowFadeOutAnimation">
        <DoubleAnimation Storyboard.TargetProperty="(UIElement.Effect).(DropShadowEffect.Opacity)"
                        From="0.8" To="0"
                        Duration="{StaticResource AnimationDurationNormal}"
                        EasingFunction="{StaticResource EaseIn}"/>
    </Storyboard>
    
    <!-- 组合动画：发光+缩放 -->
    <Storyboard x:Key="GlowScaleAnimation">
        <DoubleAnimation Storyboard.TargetProperty="(UIElement.Effect).(DropShadowEffect.BlurRadius)"
                        Duration="{StaticResource AnimationDurationNormal}"
                        EasingFunction="{StaticResource EaseOut}"/>
        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                        To="1.05"
                        Duration="{StaticResource AnimationDurationFast}"
                        EasingFunction="{StaticResource EaseOut}"/>
        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                        To="1.05"
                        Duration="{StaticResource AnimationDurationFast}"
                        EasingFunction="{StaticResource EaseOut}"/>
    </Storyboard>
    
    <!-- 列表项进入动画 -->
    <Storyboard x:Key="ListItemEnterAnimation">
        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                        From="0" To="1"
                        Duration="{StaticResource AnimationDurationNormal}"
                        EasingFunction="{StaticResource EaseOut}"/>
        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                        From="-20" To="0"
                        Duration="{StaticResource AnimationDurationNormal}"
                        EasingFunction="{StaticResource EaseOut}"/>
    </Storyboard>
    
    <!-- 卡片悬停动画 -->
    <Storyboard x:Key="CardHoverAnimation">
        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                        To="1.05"
                        Duration="{StaticResource AnimationDurationFast}"
                        EasingFunction="{StaticResource EaseOut}"/>
        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                        To="1.05"
                        Duration="{StaticResource AnimationDurationFast}"
                        EasingFunction="{StaticResource EaseOut}"/>
        <DoubleAnimation Storyboard.TargetProperty="(UIElement.Effect).(DropShadowEffect.BlurRadius)"
                        To="20"
                        Duration="{StaticResource AnimationDurationFast}"
                        EasingFunction="{StaticResource EaseOut}"/>
        <DoubleAnimation Storyboard.TargetProperty="(UIElement.Effect).(DropShadowEffect.Opacity)"
                        To="0.8"
                        Duration="{StaticResource AnimationDurationFast}"
                        EasingFunction="{StaticResource EaseOut}"/>
    </Storyboard>
    
    <!-- 卡片离开动画 -->
    <Storyboard x:Key="CardLeaveAnimation">
        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                        To="1.0"
                        Duration="{StaticResource AnimationDurationFast}"
                        EasingFunction="{StaticResource EaseIn}"/>
        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                        To="1.0"
                        Duration="{StaticResource AnimationDurationFast}"
                        EasingFunction="{StaticResource EaseIn}"/>
        <DoubleAnimation Storyboard.TargetProperty="(UIElement.Effect).(DropShadowEffect.BlurRadius)"
                        To="5"
                        Duration="{StaticResource AnimationDurationFast}"
                        EasingFunction="{StaticResource EaseIn}"/>
        <DoubleAnimation Storyboard.TargetProperty="(UIElement.Effect).(DropShadowEffect.Opacity)"
                        To="0.2"
                        Duration="{StaticResource AnimationDurationFast}"
                        EasingFunction="{StaticResource EaseIn}"/>
    </Storyboard>

</ResourceDictionary>
