<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--
        ===================================================================
        Colors.Dark.xaml - Dark Theme Color Resources
        ===================================================================
        
        文件说明：
        - 此文件定义了暗黑主题的所有颜色资源
        - 当前版本仅支持 Dark 主题，Light 主题已移除
        
        命名规范：
        1. Color 资源使用 PascalCase（如 BackgroundDark, TextPrimary）
        2. Brush 资源使用 PascalCase + "Brush" 后缀（如 BackgroundDarkBrush）
        3. 透明色变体使用数字后缀表示不透明度百分比（如 Background100, Background80）
           - 100 表示完全不透明，80 表示 80% 不透明度
           - 如果只有一个不透明版本，不需要添加数字后缀
        
        颜色分组：
        - Background: 背景颜色（从深到浅）
        - Text: 文本颜色（主文本、次要文本、禁用文本等）
        - Border: 边框颜色（默认、深色、中等、浅色、金色等）
        - Accent: 强调色（青色、金色）
        - State: 状态颜色（错误、成功、警告、信息）
        - Currency: 货币显示颜色（蓝色精粹、点券、橙色精粹、代币）
        - Data: 数据可视化颜色（红色、蓝色、绿色、青色、金色）
        
        使用方式：
        - 在 XAML 中使用：{DynamicResource ColorName} 或 {DynamicResource BrushName}
        - 在 C# 代码中使用：Application.Current.Resources["BrushName"] as SolidColorBrush
    -->

    <!-- ===================================================================
         1. Color 定义（按分类组织）
         =================================================================== -->

    <!-- 背景颜色层级（从深到浅） -->
    <Color x:Key="BackgroundDark">#02151e</Color>          <!-- 主背景（最深） -->
    <Color x:Key="BackgroundSecondary">#041822</Color>     <!-- 次背景（面板、侧边栏） -->
    <Color x:Key="BackgroundTertiary">#041c28</Color>      <!-- 三级背景（选中背景） -->
    <Color x:Key="BackgroundCard">#161a20</Color>          <!-- 卡片背景 - 增强深度感 -->
    <Color x:Key="BackgroundPanel">#191e25</Color>         <!-- 面板背景 - 增强深度感 -->
    <Color x:Key="BackgroundInput">#1c2128</Color>         <!-- 输入框背景 - 调整为更深颜色，增强深度感 -->
    <Color x:Key="BackgroundHover">#1e242b</Color>         <!-- 悬停背景 - 调整为更深颜色，增强深度感 -->
    <Color x:Key="BackgroundSelected">#252c35</Color>      <!-- 选中背景 -->
    <!-- 注：BackgroundPanel 与 BackgroundInput 颜色值相近，未来考虑合并 -->
    <Color x:Key="BackgroundSurface">#1a1f25</Color>       <!-- 表面背景 - 新增背景层级，增强深度感 -->
    <Color x:Key="BackgroundElevation1">#1d2229</Color>     <!-- 一级抬升背景 - 新增，用于轻微抬升的元素 -->
    <Color x:Key="BackgroundElevation2">#20252c</Color>     <!-- 二级抬升背景 - 新增，用于明显抬升的元素 -->
    
    <!-- 阴影效果资源（增强深度感） -->
    <DropShadowEffect x:Key="CardShadow" 
                     BlurRadius="8" 
                     Color="#000000" 
                     Opacity="0.3" 
                     Direction="270" 
                     ShadowDepth="2" />
    
    <DropShadowEffect x:Key="PanelShadow" 
                     BlurRadius="12" 
                     Color="#000000" 
                     Opacity="0.4" 
                     Direction="270" 
                     ShadowDepth="3" />
    
    <DropShadowEffect x:Key="ButtonShadow" 
                     BlurRadius="6" 
                     Color="#000000" 
                     Opacity="0.2" 
                     Direction="270" 
                     ShadowDepth="2" />
    
    <DropShadowEffect x:Key="InputShadow" 
                     BlurRadius="4" 
                     Color="#000000" 
                     Opacity="0.15" 
                     Direction="270" 
                     ShadowDepth="1" />
    
    <!-- 文本颜色 -->
    <Color x:Key="TextPrimary">#fff5e0</Color>             <!-- 主文本（暖白色，合并了 TextBright） -->
    <Color x:Key="TextSecondary">#a0a09e</Color>           <!-- 次要文本（灰色） - 提高对比度，优化可读性 -->
    <Color x:Key="TextDisabled">#6a6e68</Color>            <!-- 禁用文本 - 提高对比度，优化可读性 -->
    <Color x:Key="TextGoldLight">#ae9156</Color>           <!-- 浅金色文本 -->
    <Color x:Key="TextWhite">#ffffff</Color>              <!-- 纯白色（备用） -->
    
    <!-- 边框颜色 -->
    <Color x:Key="BorderDefault">#313537</Color>           <!-- 默认边框（最常用） -->
    <Color x:Key="BorderDark">#0d2e3e</Color>              <!-- 深色边框 -->
    <Color x:Key="BorderMedium">#24292e</Color>           <!-- 中等边框 -->
    <Color x:Key="BorderLight">#112833</Color>             <!-- 浅色边框 -->
    <Color x:Key="BorderGray">#9c9c9b</Color>              <!-- 灰色边框 -->
    
    <!-- 强调色 -->
    <Color x:Key="AccentCyan">#1dbaa9</Color>               <!-- 强调色（青色） -->
    <Color x:Key="AccentGold">#b59758</Color>               <!-- 强调色（金色） - 基础金色 -->
    <Color x:Key="AccentGoldLight">#c8aa6e</Color>          <!-- 强调色（金色） - 浅金色 -->
    <Color x:Key="AccentGoldDark">#9d8048</Color>           <!-- 强调色（金色） - 深金色 -->
    <Color x:Key="AccentGoldBright">#FFD700</Color>         <!-- 强调色（金色） - 亮金色 -->
    <Color x:Key="SelectedAccentBlue">#40a5e5</Color>      <!-- 选中强调色（蓝色，备用） -->
    
    <!-- 状态颜色 -->
    <Color x:Key="StateError">#f32643</Color>              <!-- 错误红色 -->
    <Color x:Key="StateErrorDark">#e54050</Color>          <!-- 深错误红 -->
    <Color x:Key="StateSuccess">#1dbaa9</Color>            <!-- 成功青色 - 使用 AccentCyan，避免重复定义 -->
    <Color x:Key="StateWarning">#b59758</Color>            <!-- 警告金色 - 使用 AccentGold，避免重复定义 -->
    <Color x:Key="StateInfo">#4385e9</Color>                <!-- 信息蓝色 -->
    
    <!-- 货币显示颜色（使用强调色，保留独立定义以便未来扩展） -->
    <Color x:Key="CurrencyBlueEssence">#1dbaa9</Color>     <!-- 蓝色精粹（使用 AccentCyan） -->
    <Color x:Key="CurrencyRiotPoints">#b59758</Color>      <!-- 点券（金色，使用 AccentGold） -->
    <Color x:Key="CurrencyOrangeEssence">#FF8C00</Color>   <!-- 橙色精粹 -->
    <Color x:Key="CurrencyTokens">#9370DB</Color>          <!-- 代币（紫色） -->
    
    <!-- 数据可视化颜色 -->
    <Color x:Key="DataRed">#d44242</Color>                 <!-- 数据可视化红色 -->
    <Color x:Key="DataBlue">#9faafc</Color>                <!-- 数据可视化蓝色 -->
    <Color x:Key="DataGreen">#a1d586</Color>               <!-- 数据可视化绿色 -->
    <Color x:Key="DataCyan">#49aab9</Color>                <!-- 数据可视化青色 -->
    <Color x:Key="DataGold">#a18b6b</Color>                <!-- 数据可视化金色 -->
    
    <!-- ===================================================================
         2. SolidColorBrush 定义（引用 Color 资源）
         =================================================================== -->
    
    <!-- 背景颜色画刷 -->
    <SolidColorBrush x:Key="BackgroundDarkBrush" Color="{DynamicResource BackgroundDark}"/>
    <SolidColorBrush x:Key="BackgroundSecondaryBrush" Color="{DynamicResource BackgroundSecondary}"/>
    <SolidColorBrush x:Key="BackgroundTertiaryBrush" Color="{DynamicResource BackgroundTertiary}"/>
    <SolidColorBrush x:Key="BackgroundCardBrush" Color="{DynamicResource BackgroundCard}"/>
    <SolidColorBrush x:Key="BackgroundPanelBrush" Color="{DynamicResource BackgroundPanel}"/>
    <SolidColorBrush x:Key="BackgroundInputBrush" Color="{DynamicResource BackgroundInput}"/>
    <SolidColorBrush x:Key="BackgroundHoverBrush" Color="{DynamicResource BackgroundHover}"/>
    <SolidColorBrush x:Key="BackgroundSelectedBrush" Color="{DynamicResource BackgroundSelected}"/>
    <SolidColorBrush x:Key="BackgroundSurfaceBrush" Color="{DynamicResource BackgroundSurface}"/>
    <SolidColorBrush x:Key="BackgroundElevation1Brush" Color="{DynamicResource BackgroundElevation1}"/>
    <SolidColorBrush x:Key="BackgroundElevation2Brush" Color="{DynamicResource BackgroundElevation2}"/>
    
    <!-- 文本颜色画刷 -->
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{DynamicResource TextPrimary}"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{DynamicResource TextSecondary}"/>
    <SolidColorBrush x:Key="TextDisabledBrush" Color="{DynamicResource TextDisabled}"/>
    <SolidColorBrush x:Key="TextGoldLightBrush" Color="{DynamicResource TextGoldLight}"/>
    <SolidColorBrush x:Key="TextWhiteBrush" Color="{DynamicResource TextWhite}"/>
    
    <!-- 边框颜色画刷 -->
    <SolidColorBrush x:Key="BorderDefaultBrush" Color="{DynamicResource BorderDefault}"/>
    <SolidColorBrush x:Key="BorderDarkBrush" Color="{DynamicResource BorderDark}"/>
    <SolidColorBrush x:Key="BorderMediumBrush" Color="{DynamicResource BorderMedium}"/>
    <SolidColorBrush x:Key="BorderLightBrush" Color="{DynamicResource BorderLight}"/>
    <SolidColorBrush x:Key="BorderGrayBrush" Color="{DynamicResource BorderGray}"/>
    
    <!-- 强调色画刷 -->
    <SolidColorBrush x:Key="AccentCyanBrush" Color="{DynamicResource AccentCyan}"/>
    <SolidColorBrush x:Key="AccentGoldBrush" Color="{DynamicResource AccentGold}"/>
    <SolidColorBrush x:Key="AccentGoldLightBrush" Color="{DynamicResource AccentGoldLight}"/>
    <SolidColorBrush x:Key="AccentGoldDarkBrush" Color="{DynamicResource AccentGoldDark}"/>
    <SolidColorBrush x:Key="AccentGoldBrightBrush" Color="{DynamicResource AccentGoldBright}"/>
    <SolidColorBrush x:Key="SelectedAccentBlueBrush" Color="{DynamicResource SelectedAccentBlue}"/>
    
    <!-- 状态颜色画刷 -->
    <SolidColorBrush x:Key="StateErrorBrush" Color="{DynamicResource StateError}"/>
    <SolidColorBrush x:Key="StateErrorDarkBrush" Color="{DynamicResource StateErrorDark}"/>
    <SolidColorBrush x:Key="StateInfoBrush" Color="{DynamicResource StateInfo}"/>
    
    <!-- 货币显示颜色画刷 -->
    <SolidColorBrush x:Key="CurrencyBlueEssenceBrush" Color="{DynamicResource CurrencyBlueEssence}"/>
    <SolidColorBrush x:Key="CurrencyRiotPointsBrush" Color="{DynamicResource CurrencyRiotPoints}"/>
    <SolidColorBrush x:Key="CurrencyOrangeEssenceBrush" Color="{DynamicResource CurrencyOrangeEssence}"/>
    <SolidColorBrush x:Key="CurrencyTokensBrush" Color="{DynamicResource CurrencyTokens}"/>
    
    <!-- 数据可视化颜色画刷 -->
    <SolidColorBrush x:Key="DataRedBrush" Color="{DynamicResource DataRed}"/>
    <SolidColorBrush x:Key="DataBlueBrush" Color="{DynamicResource DataBlue}"/>
    <SolidColorBrush x:Key="DataGreenBrush" Color="{DynamicResource DataGreen}"/>
    <SolidColorBrush x:Key="DataCyanBrush" Color="{DynamicResource DataCyan}"/>
    <SolidColorBrush x:Key="DataGoldBrush" Color="{DynamicResource DataGold}"/>
    
    <!-- ===================================================================
         3. 渐变画刷定义（增强游戏UI风格）
         =================================================================== -->
    
    <!-- 金色渐变 -->
    <LinearGradientBrush x:Key="GoldGradient" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#FFD700" Offset="0" />
        <GradientStop Color="#C8AA6E" Offset="0.5" />
        <GradientStop Color="#9D8048" Offset="1" />
    </LinearGradientBrush>
    
    <LinearGradientBrush x:Key="GoldGradientHorizontal" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#FFD700" Offset="0" />
        <GradientStop Color="#C8AA6E" Offset="0.5" />
        <GradientStop Color="#FFD700" Offset="1" />
    </LinearGradientBrush>
    
    <!-- 青色渐变 -->
    <LinearGradientBrush x:Key="CyanGradient" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#0AC8B9" Offset="0" />
        <GradientStop Color="#1dbaa9" Offset="0.5" />
        <GradientStop Color="#0A9B8D" Offset="1" />
    </LinearGradientBrush>
    
    <!-- 暗色渐变 -->
    <LinearGradientBrush x:Key="DarkGradient" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#191e25" Offset="0" />
        <GradientStop Color="#161a20" Offset="1" />
    </LinearGradientBrush>
    
    <LinearGradientBrush x:Key="DarkGradientHorizontal" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#191e25" Offset="0" />
        <GradientStop Color="#041822" Offset="0.5" />
        <GradientStop Color="#191e25" Offset="1" />
    </LinearGradientBrush>
    
    <!-- 卡片渐变效果 -->
    <LinearGradientBrush x:Key="CardGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#161a20" Offset="0" />
        <GradientStop Color="#1a1f25" Offset="0.5" />
        <GradientStop Color="#161a20" Offset="1" />
    </LinearGradientBrush>
    
    <!-- 发光效果渐变 -->
    <RadialGradientBrush x:Key="GoldGlowGradient" Center="0.5,0.5" RadiusX="1" RadiusY="1">
        <GradientStop Color="{DynamicResource AccentGoldBright}" Offset="0" />
        <GradientStop Color="{DynamicResource AccentGoldLight}" Offset="0.3" />
        <GradientStop Color="Transparent" Offset="1" />
    </RadialGradientBrush>
    
    <!-- 增强版金色发光效果 -->
    <RadialGradientBrush x:Key="GoldGlowGradientIntense" Center="0.5,0.5" RadiusX="1" RadiusY="1">
        <GradientStop Color="{DynamicResource AccentGoldBright}" Offset="0" />
        <GradientStop Color="{DynamicResource AccentGoldLight}" Offset="0.2" />
        <GradientStop Color="{DynamicResource AccentGold}" Offset="0.5" />
        <GradientStop Color="Transparent" Offset="1" />
    </RadialGradientBrush>
    
    <!-- 线性金色渐变（用于按钮和标题） -->
    <LinearGradientBrush x:Key="GoldGradientButton" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="{DynamicResource AccentGoldBright}" Offset="0" />
        <GradientStop Color="{DynamicResource AccentGoldLight}" Offset="0.4" />
        <GradientStop Color="{DynamicResource AccentGold}" Offset="0.6" />
        <GradientStop Color="{DynamicResource AccentGoldDark}" Offset="1" />
    </LinearGradientBrush>
    
    <!-- 边框金色渐变 -->
    <LinearGradientBrush x:Key="GoldBorderGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="{DynamicResource AccentGoldBright}" Offset="0" />
        <GradientStop Color="{DynamicResource AccentGoldDark}" Offset="1" />
    </LinearGradientBrush>
    
    <RadialGradientBrush x:Key="CyanGlowGradient" Center="0.5,0.5" RadiusX="1" RadiusY="1">
        <GradientStop Color="#0AC8B9" Offset="0" />
        <GradientStop Color="#1dbaa9" Offset="0.3" />
        <GradientStop Color="Transparent" Offset="1" />
    </RadialGradientBrush>
    
    <!-- ===================================================================
         4. 扩展颜色变体（增强主题表现力）
         =================================================================== -->
    
    <!-- 额外的金色变体 -->
    <Color x:Key="AccentGoldUltraLight">#e8d29f</Color> <!-- 超浅金色 -->
    <Color x:Key="AccentGoldUltraDark">#785A28</Color> <!-- 超深金色 -->
    <Color x:Key="AccentGoldMatte">#b89a5e</Color> <!-- 哑光金色 -->
    
    <!-- 额外的青色变体 -->
    <Color x:Key="AccentCyanLight">#34d3c6</Color> <!-- 浅青色 -->
    <Color x:Key="AccentCyanDark">#0A9B8D</Color> <!-- 深青色 -->
    <Color x:Key="AccentCyanBright">#00FFFF</Color> <!-- 亮青色 -->
    
    <!-- 状态颜色变体 -->
    <Color x:Key="StateErrorLight">#f56363</Color> <!-- 浅错误红 -->
    <Color x:Key="StateSuccessLight">#34d3c6</Color> <!-- 浅成功青 -->
    <Color x:Key="StateWarningLight">#e8d29f</Color> <!-- 浅警告金 -->
    <Color x:Key="StateInfoLight">#6cb2f2</Color> <!-- 浅信息蓝 -->
    
    <!-- 对应的画刷 -->
    <SolidColorBrush x:Key="AccentGoldUltraLightBrush" Color="{DynamicResource AccentGoldUltraLight}"/>
    <SolidColorBrush x:Key="AccentGoldUltraDarkBrush" Color="{DynamicResource AccentGoldUltraDark}"/>
    <SolidColorBrush x:Key="AccentGoldMatteBrush" Color="{DynamicResource AccentGoldMatte}"/>
    <SolidColorBrush x:Key="AccentCyanLightBrush" Color="{DynamicResource AccentCyanLight}"/>
    <SolidColorBrush x:Key="AccentCyanDarkBrush" Color="{DynamicResource AccentCyanDark}"/>
    <SolidColorBrush x:Key="AccentCyanBrightBrush" Color="{DynamicResource AccentCyanBright}"/>
    <SolidColorBrush x:Key="StateErrorLightBrush" Color="{DynamicResource StateErrorLight}"/>
    <SolidColorBrush x:Key="StateSuccessLightBrush" Color="{DynamicResource StateSuccessLight}"/>
    <SolidColorBrush x:Key="StateWarningLightBrush" Color="{DynamicResource StateWarningLight}"/>
    <SolidColorBrush x:Key="StateInfoLightBrush" Color="{DynamicResource StateInfoLight}"/>
    
    <!-- ===================================================================
         5. 兼容性保留（向后兼容旧代码，建议逐步迁移到新命名）
         =================================================================== -->
    
    <!-- 旧的颜色画刷（映射到新的命名） -->
    <SolidColorBrush x:Key="TextGoldBrush" Color="{DynamicResource AccentGold}"/>
    <SolidColorBrush x:Key="TextCyanBrush" Color="{DynamicResource AccentCyan}"/>
    <SolidColorBrush x:Key="TextBrightBrush" Color="{DynamicResource TextPrimary}"/>
    <SolidColorBrush x:Key="BorderGoldBrush" Color="{DynamicResource AccentGold}"/>
    <SolidColorBrush x:Key="SelectedAccentBrush" Color="{DynamicResource AccentCyan}"/>
    <SolidColorBrush x:Key="SelectedBackgroundBrush" Color="{DynamicResource BackgroundTertiary}"/>
    <SolidColorBrush x:Key="SelectedTextBrush" Color="{DynamicResource AccentCyan}"/>
    <SolidColorBrush x:Key="SuccessGreenBrush" Color="{DynamicResource AccentCyan}"/>
    <SolidColorBrush x:Key="WarningGoldBrush" Color="{DynamicResource AccentGold}"/>
    <SolidColorBrush x:Key="ProgressFillBrush" Color="{DynamicResource AccentCyan}"/>
    <SolidColorBrush x:Key="ErrorRedBrush" Color="{DynamicResource StateError}"/>
    <SolidColorBrush x:Key="ErrorRedDarkBrush" Color="{DynamicResource StateErrorDark}"/>
    <SolidColorBrush x:Key="InfoBlueBrush" Color="{DynamicResource StateInfo}"/>
    <SolidColorBrush x:Key="BackgroundMediumBrush" Color="{DynamicResource BackgroundHover}"/>
    
    <!-- 保留旧的边框画刷以保持兼容性 -->
    <SolidColorBrush x:Key="BorderAccentBrush" Color="{DynamicResource AccentGoldUltraDark}"/>
    
    <!-- 保留旧的颜色画刷以保持兼容性（映射到新命名） -->
    <SolidColorBrush x:Key="PrimaryGoldBrush" Color="{DynamicResource AccentGoldLight}"/>
    <SolidColorBrush x:Key="PrimaryDarkBlueBrush" Color="{DynamicResource BackgroundDark}"/>
    <SolidColorBrush x:Key="PrimaryCyanBrush" Color="{DynamicResource AccentCyan}"/>
    <SolidColorBrush x:Key="HoverGoldBrush" Color="{DynamicResource TextWhite}"/>
    <SolidColorBrush x:Key="PressedGoldBrush" Color="{DynamicResource AccentGoldUltraDark}"/>
    <SolidColorBrush x:Key="WarningYellowBrush" Color="{DynamicResource AccentGoldLight}"/>
    
    <!-- ===================================================================
         6. 其他资源（Thickness 等）
         =================================================================== -->
    
    <!-- 间距和内边距资源 -->
    <Thickness x:Key="InputBoxPadding">8,4</Thickness>
    <Thickness x:Key="InputBoxPaddingCompact">4,2</Thickness>
    <Thickness x:Key="InputBoxPaddingNone">0</Thickness>
    
    <!-- 动画持续时间（确保资源总是可用） -->
    <Duration x:Key="AnimationDurationFast">0:0:0.15</Duration>
    <Duration x:Key="AnimationDurationNormal">0:0:0.2</Duration>
    <Duration x:Key="AnimationDurationSlow">0:0:0.3</Duration>
    <Duration x:Key="AnimationDurationVerySlow">0:0:0.5</Duration>
    
    <!-- 缓动函数（确保资源总是可用） -->
    <CubicEase x:Key="EaseOut" EasingMode="EaseOut"/>
    <CubicEase x:Key="EaseIn" EasingMode="EaseIn"/>
    <CubicEase x:Key="EaseInOut" EasingMode="EaseInOut"/>
    <QuadraticEase x:Key="QuadraticEaseOut" EasingMode="EaseOut"/>
    <QuadraticEase x:Key="QuadraticEaseIn" EasingMode="EaseIn"/>
    <QuadraticEase x:Key="QuadraticEaseInOut" EasingMode="EaseInOut"/>

</ResourceDictionary>
