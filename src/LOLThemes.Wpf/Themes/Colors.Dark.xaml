<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- 背景颜色层级（从深到浅） -->
    <Color x:Key="BackgroundDark">#02151e</Color>          <!-- 主背景（最深） -->
    <Color x:Key="BackgroundSecondary">#041822</Color>     <!-- 次背景（面板、侧边栏） -->
    <Color x:Key="BackgroundTertiary">#041c28</Color>     <!-- 三级背景 -->
    <Color x:Key="BackgroundCard">#161a20</Color>          <!-- 卡片背景 -->
    <Color x:Key="BackgroundInput">#191d24</Color>         <!-- 输入框背景 -->
    <Color x:Key="BackgroundHover">#1b2128</Color>         <!-- 悬停背景 -->
    <Color x:Key="BackgroundSelected">#252c35</Color>      <!-- 选中背景 -->
    <Color x:Key="BackgroundPanel">#191e25</Color>         <!-- 面板背景 -->
    <Color x:Key="BackgroundMedium">#1b2128</Color>        <!-- 中等背景（用于悬停等） -->
    
    <!-- 文本颜色 -->
    <Color x:Key="TextPrimary">#fff5e0</Color>             <!-- 主文本（暖白色） -->
    <Color x:Key="TextSecondary">#7e807d</Color>           <!-- 次要文本（灰色） -->
    <Color x:Key="TextDisabled">#5e625a</Color>            <!-- 禁用文本 -->
    <Color x:Key="TextGold">#b59758</Color>                <!-- 金色强调文本 -->
    <Color x:Key="TextGoldLight">#ae9156</Color>           <!-- 浅金色文本 -->
    <Color x:Key="TextCyan">#1dbaa9</Color>                <!-- 青色文本（选中、数据） -->
    <Color x:Key="TextWhite">#ffffff</Color>                <!-- 纯白色（备用） -->
    
    <!-- 边框颜色 -->
    <Color x:Key="BorderDefault">#313537</Color>           <!-- 默认边框（最常用） -->
    <Color x:Key="BorderDark">#0d2e3e</Color>              <!-- 深色边框 -->
    <Color x:Key="BorderMedium">#24292e</Color>           <!-- 中等边框 -->
    <Color x:Key="BorderLight">#112833</Color>             <!-- 浅色边框 -->
    <Color x:Key="BorderGold">#b59758</Color>              <!-- 金色边框（选中、焦点） -->
    <Color x:Key="BorderGray">#9c9c9b</Color>              <!-- 灰色边框 -->
    
    <!-- 选中/激活状态颜色 -->
    <Color x:Key="SelectedAccent">#1dbaa9</Color>           <!-- 选中强调色（青色，用于竖条、下划线） -->
    <Color x:Key="SelectedAccentBlue">#40a5e5</Color>       <!-- 选中强调色（蓝色，备用） -->
    <Color x:Key="SelectedBackground">#041c28</Color>      <!-- 选中背景（带左侧竖条） -->
    <Color x:Key="SelectedText">#1dbaa9</Color>            <!-- 选中文本颜色 -->
    
    <!-- 状态颜色 -->
    <Color x:Key="ErrorRed">#f32643</Color>                <!-- 错误红色 -->
    <Color x:Key="ErrorRedDark">#e54050</Color>            <!-- 深错误红 -->
    <Color x:Key="SuccessGreen">#1dbaa9</Color>            <!-- 成功绿色（与选中色相同） -->
    <Color x:Key="WarningGold">#b59758</Color>             <!-- 警告金色 -->
    <Color x:Key="InfoBlue">#4385e9</Color>                 <!-- 信息蓝色 -->
    
    <!-- 进度条和数据可视化 -->
    <Color x:Key="ProgressFill">#1dbaa9</Color>            <!-- 进度条填充（青色） -->
    <Color x:Key="DataRed">#d44242</Color>                 <!-- 数据可视化红色 -->
    <Color x:Key="DataBlue">#9faafc</Color>                <!-- 数据可视化蓝色 -->
    <Color x:Key="DataGreen">#a1d586</Color>               <!-- 数据可视化绿色 -->
    <Color x:Key="DataCyan">#49aab9</Color>                <!-- 数据可视化青色 -->
    <Color x:Key="DataGold">#a18b6b</Color>                <!-- 数据可视化金色 -->
    
    <!-- 货币显示颜色 -->
    <Color x:Key="CurrencyBlueEssence">#1dbaa9</Color>     <!-- 蓝色精粹 -->
    <Color x:Key="CurrencyRiotPoints">#b59758</Color>      <!-- 点券（金色） -->
    <Color x:Key="CurrencyOrangeEssence">#FF8C00</Color>   <!-- 橙色精粹 -->
    <Color x:Key="CurrencyTokens">#9370DB</Color>          <!-- 代币（紫色） -->
    
    <!-- SolidColorBrush 资源 -->
    
    <!-- 背景颜色画刷 -->
    <SolidColorBrush x:Key="BackgroundDarkBrush" Color="#02151e"/>
    <SolidColorBrush x:Key="BackgroundSecondaryBrush" Color="#041822"/>
    <SolidColorBrush x:Key="BackgroundTertiaryBrush" Color="#041c28"/>
    <SolidColorBrush x:Key="BackgroundCardBrush" Color="#161a20"/>
    <SolidColorBrush x:Key="BackgroundInputBrush" Color="#191d24"/>
    <SolidColorBrush x:Key="BackgroundHoverBrush" Color="#1b2128"/>
    <SolidColorBrush x:Key="BackgroundSelectedBrush" Color="#252c35"/>
    <SolidColorBrush x:Key="BackgroundPanelBrush" Color="#191e25"/>
    <SolidColorBrush x:Key="BackgroundMediumBrush" Color="#1b2128"/>
    
    <!-- 文本颜色画刷 -->
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="#fff5e0"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="#7e807d"/>
    <SolidColorBrush x:Key="TextDisabledBrush" Color="#5e625a"/>
    <SolidColorBrush x:Key="TextGoldBrush" Color="#b59758"/>
    <SolidColorBrush x:Key="TextGoldLightBrush" Color="#ae9156"/>
    <SolidColorBrush x:Key="TextCyanBrush" Color="#1dbaa9"/>
    <SolidColorBrush x:Key="TextWhiteBrush" Color="#ffffff"/>
    <SolidColorBrush x:Key="TextBrightBrush" Color="#fff5e0"/>
    
    <!-- 边框颜色画刷 -->
    <SolidColorBrush x:Key="BorderDefaultBrush" Color="#313537"/>
    <SolidColorBrush x:Key="BorderDarkBrush" Color="#0d2e3e"/>
    <SolidColorBrush x:Key="BorderMediumBrush" Color="#24292e"/>
    <SolidColorBrush x:Key="BorderLightBrush" Color="#112833"/>
    <SolidColorBrush x:Key="BorderGoldBrush" Color="#b59758"/>
    <SolidColorBrush x:Key="BorderGrayBrush" Color="#9c9c9b"/>
    
    <!-- 保留旧的边框画刷以保持兼容性 -->
    <SolidColorBrush x:Key="BorderAccentBrush" Color="#785A28"/>
    
    <!-- 选中/激活状态画刷 -->
    <SolidColorBrush x:Key="SelectedAccentBrush" Color="#1dbaa9"/>
    <SolidColorBrush x:Key="SelectedAccentBlueBrush" Color="#40a5e5"/>
    <SolidColorBrush x:Key="SelectedBackgroundBrush" Color="#041c28"/>
    <SolidColorBrush x:Key="SelectedTextBrush" Color="#1dbaa9"/>
    
    <!-- 状态颜色画刷 -->
    <SolidColorBrush x:Key="ErrorRedBrush" Color="#f32643"/>
    <SolidColorBrush x:Key="ErrorRedDarkBrush" Color="#e54050"/>
    <SolidColorBrush x:Key="SuccessGreenBrush" Color="#1dbaa9"/>
    <SolidColorBrush x:Key="WarningGoldBrush" Color="#b59758"/>
    <SolidColorBrush x:Key="InfoBlueBrush" Color="#4385e9"/>
    
    <!-- 进度条和数据可视化画刷 -->
    <SolidColorBrush x:Key="ProgressFillBrush" Color="#1dbaa9"/>
    <SolidColorBrush x:Key="DataRedBrush" Color="#d44242"/>
    <SolidColorBrush x:Key="DataBlueBrush" Color="#9faafc"/>
    <SolidColorBrush x:Key="DataGreenBrush" Color="#a1d586"/>
    <SolidColorBrush x:Key="DataCyanBrush" Color="#49aab9"/>
    <SolidColorBrush x:Key="DataGoldBrush" Color="#a18b6b"/>
    
    <!-- 货币显示颜色画刷 -->
    <SolidColorBrush x:Key="CurrencyBlueEssenceBrush" Color="#1dbaa9"/>
    <SolidColorBrush x:Key="CurrencyRiotPointsBrush" Color="#b59758"/>
    <SolidColorBrush x:Key="CurrencyOrangeEssenceBrush" Color="#FF8C00"/>
    <SolidColorBrush x:Key="CurrencyTokensBrush" Color="#9370DB"/>
    
    <!-- 保留旧的颜色画刷以保持兼容性 -->
    <SolidColorBrush x:Key="PrimaryGoldBrush" Color="#C8AA6E"/>
    <SolidColorBrush x:Key="PrimaryDarkBlueBrush" Color="#010A13"/>
    <SolidColorBrush x:Key="PrimaryCyanBrush" Color="#0AC8B9"/>
    <SolidColorBrush x:Key="HoverGoldBrush" Color="#F0E6D2"/>
    <SolidColorBrush x:Key="PressedGoldBrush" Color="#785A28"/>
    <SolidColorBrush x:Key="WarningYellowBrush" Color="#CDBE91"/>
    
    <!-- 间距和内边距资源 -->
    <Thickness x:Key="InputBoxPadding">8,4</Thickness>
    <Thickness x:Key="InputBoxPaddingCompact">4,2</Thickness>
    <Thickness x:Key="InputBoxPaddingNone">0</Thickness>

</ResourceDictionary>
