<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- 主要颜色（保持金色和青色，但可能需要调整） -->
    <Color x:Key="PrimaryGold">#C8AA6E</Color>
    <Color x:Key="PrimaryDarkBlue">#F5F5F5</Color>
    <Color x:Key="PrimaryCyan">#0AC8B9</Color>
    
    <!-- 背景颜色（浅色主题） -->
    <Color x:Key="BackgroundDark">#FFFFFF</Color>
    <Color x:Key="BackgroundMedium">#F5F5F5</Color>
    <Color x:Key="BackgroundLight">#E8E8E8</Color>
    <Color x:Key="BackgroundPanel">#FAFAFA</Color>
    
    <!-- 文本颜色（深色文本） -->
    <Color x:Key="TextPrimary">#1E2328</Color>
    <Color x:Key="TextSecondary">#5B5A56</Color>
    <Color x:Key="TextDisabled">#A09B8C</Color>
    <Color x:Key="TextWhite">#FFFFFF</Color>
    
    <!-- 边框颜色 -->
    <Color x:Key="BorderGold">#C8AA6E</Color>
    <Color x:Key="BorderDark">#D0D0D0</Color>
    <Color x:Key="BorderLight">#E0E0E0</Color>
    <Color x:Key="BorderAccent">#785A28</Color>
    
    <!-- 状态颜色 -->
    <Color x:Key="HoverGold">#E6D4B8</Color>
    <Color x:Key="PressedGold">#785A28</Color>
    <Color x:Key="SuccessGreen">#0AC8B9</Color>
    <Color x:Key="ErrorRed">#E84057</Color>
    <Color x:Key="WarningYellow">#CDBE91</Color>
    
    <!-- 灰度色阶（浅色主题） -->
    <Color x:Key="Gray100">#FAFAFA</Color>
    <Color x:Key="Gray200">#F5F5F5</Color>
    <Color x:Key="Gray300">#E8E8E8</Color>
    <Color x:Key="Gray400">#D0D0D0</Color>
    <Color x:Key="Gray500">#A09B8C</Color>
    <Color x:Key="Gray600">#5B5A56</Color>
    <Color x:Key="Gray700">#3C3C41</Color>
    <Color x:Key="Gray800">#1E2328</Color>


    <!-- SolidColorBrush 资源 -->
    <!-- 注意：直接使用颜色值，避免依赖 Color 资源，确保资源解析顺序不会导致问题 -->
    
    <!-- 主要颜色画刷 -->
    <SolidColorBrush x:Key="PrimaryGoldBrush" Color="#C8AA6E"/>
    <SolidColorBrush x:Key="PrimaryDarkBlueBrush" Color="#F5F5F5"/>
    <SolidColorBrush x:Key="PrimaryCyanBrush" Color="#0AC8B9"/>
    
    <!-- 背景颜色画刷 -->
    <SolidColorBrush x:Key="BackgroundDarkBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="BackgroundMediumBrush" Color="#F5F5F5"/>
    <SolidColorBrush x:Key="BackgroundLightBrush" Color="#E8E8E8"/>
    <SolidColorBrush x:Key="BackgroundPanelBrush" Color="#FAFAFA"/>
    
    <!-- 文本颜色画刷 -->
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="#1E2328"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="#5B5A56"/>
    <SolidColorBrush x:Key="TextDisabledBrush" Color="#A09B8C"/>
    <SolidColorBrush x:Key="TextWhiteBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="TextBrightBrush" Color="#1E2328"/>
    
    <!-- 半透明背景颜色（用于渐变） -->
    <Color x:Key="BackgroundMediumSemiColor">#CCF5F5F5</Color>
    <Color x:Key="BackgroundDarkSemiColor">#CCFFFFFF</Color>
    <Color x:Key="BackgroundLightSemiColor">#CCE8E8E8</Color>
    <Color x:Key="GoldGradientStartColor">#E6C8AA6E</Color>
    <Color x:Key="GoldGradientEndColor">#CCC8AA6E</Color>
    
    <!-- 半透明背景画刷 -->
    <SolidColorBrush x:Key="BackgroundMediumSemiBrush" Color="#CCF5F5F5"/>
    <SolidColorBrush x:Key="BackgroundDarkSemiBrush" Color="#CCFFFFFF"/>
    <SolidColorBrush x:Key="BackgroundLightSemiBrush" Color="#CCE8E8E8"/>
    
    <!-- 渐变画刷资源 -->
    <LinearGradientBrush x:Key="GoldGradientBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#E6C8AA6E" Offset="0"/>
        <GradientStop Color="#CCC8AA6E" Offset="1"/>
    </LinearGradientBrush>
    
    <LinearGradientBrush x:Key="DarkGradientBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#E6F5F5F5" Offset="0"/>
        <GradientStop Color="#CCF5F5F5" Offset="1"/>
    </LinearGradientBrush>
    
    <RadialGradientBrush x:Key="RadialGoldGradientBrush">
        <GradientStop Color="#E6C8AA6E" Offset="0"/>
        <GradientStop Color="#80F5F5F5" Offset="1"/>
    </RadialGradientBrush>
    
    <!-- 透明渐变画刷 -->
    <LinearGradientBrush x:Key="TransparentToGoldGradientBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="Transparent" Offset="0"/>
        <GradientStop Color="#80C8AA6E" Offset="1"/>
    </LinearGradientBrush>
    
    <LinearGradientBrush x:Key="TransparentToDarkGradientBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="Transparent" Offset="0"/>
        <GradientStop Color="#80F5F5F5" Offset="1"/>
    </LinearGradientBrush>
    
    <!-- 进度条渐变画刷（水平方向，3色渐变） -->
    <LinearGradientBrush x:Key="ProgressBarGradientBrush" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#C8AA6E" Offset="0"/>
        <GradientStop Color="#E6D4B8" Offset="0.5"/>
        <GradientStop Color="#C8AA6E" Offset="1"/>
    </LinearGradientBrush>
    
    <!-- 边框颜色画刷 -->
    <SolidColorBrush x:Key="BorderGoldBrush" Color="#C8AA6E"/>
    <SolidColorBrush x:Key="BorderDarkBrush" Color="#D0D0D0"/>
    <SolidColorBrush x:Key="BorderLightBrush" Color="#E0E0E0"/>
    <SolidColorBrush x:Key="BorderAccentBrush" Color="#785A28"/>
    
    <!-- 状态颜色画刷 -->
    <SolidColorBrush x:Key="HoverGoldBrush" Color="#E6D4B8"/>
    <SolidColorBrush x:Key="PressedGoldBrush" Color="#785A28"/>
    <SolidColorBrush x:Key="SuccessGreenBrush" Color="#0AC8B9"/>
    <SolidColorBrush x:Key="ErrorRedBrush" Color="#E84057"/>
    <SolidColorBrush x:Key="WarningYellowBrush" Color="#CDBE91"/>
    
    <!-- 半透明金色颜色（用于悬停效果） -->
    <Color x:Key="HoverGoldSemiColor">#40C8AA6E</Color>
    <!-- 半透明金色画刷（用于悬停效果） -->
    <SolidColorBrush x:Key="HoverGoldSemiBrush" Color="{DynamicResource HoverGoldSemiColor}"/>
    
    <!-- 灰度色阶画刷 -->
    <SolidColorBrush x:Key="Gray100Brush" Color="#FAFAFA"/>
    <SolidColorBrush x:Key="Gray200Brush" Color="#F5F5F5"/>
    <SolidColorBrush x:Key="Gray300Brush" Color="#E8E8E8"/>
    <SolidColorBrush x:Key="Gray400Brush" Color="#D0D0D0"/>
    <SolidColorBrush x:Key="Gray500Brush" Color="#A09B8C"/>
    <SolidColorBrush x:Key="Gray600Brush" Color="#5B5A56"/>
    <SolidColorBrush x:Key="Gray700Brush" Color="#3C3C41"/>
    <SolidColorBrush x:Key="Gray800Brush" Color="#1E2328"/>

    <!-- 间距和内边距资源 -->
    <Thickness x:Key="InputBoxPadding">8,4</Thickness>
    <Thickness x:Key="InputBoxPaddingCompact">4,2</Thickness>
    <Thickness x:Key="InputBoxPaddingNone">0</Thickness>

</ResourceDictionary>

