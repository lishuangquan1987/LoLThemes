<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <!-- 字体族 -->
    <FontFamily x:Key="PrimaryFont">Segoe UI, Microsoft YaHei UI, Arial, sans-serif</FontFamily>
    <FontFamily x:Key="SecondaryFont">Consolas, Courier New, monospace</FontFamily>
    
    <!-- 字体大小 -->
    <sys:Double x:Key="FontSizeSmall">12</sys:Double>
    <sys:Double x:Key="FontSizeNormal">14</sys:Double>
    <sys:Double x:Key="FontSizeMedium">16</sys:Double>
    <sys:Double x:Key="FontSizeLarge">20</sys:Double>
    <sys:Double x:Key="FontSizeXLarge">24</sys:Double>
    <sys:Double x:Key="FontSizeXXLarge">32</sys:Double>
    <sys:Double x:Key="FontSizeXXXLarge">48</sys:Double>
    
    <!-- 字体权重 -->
    <FontWeight x:Key="FontWeightRegular">Normal</FontWeight>
    <FontWeight x:Key="FontWeightMedium">Medium</FontWeight>
    <FontWeight x:Key="FontWeightSemiBold">SemiBold</FontWeight>
    <FontWeight x:Key="FontWeightBold">Bold</FontWeight>

</ResourceDictionary>
