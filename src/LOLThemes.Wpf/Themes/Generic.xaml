<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- 
        资源字典合并顺序说明：
        1. 基础资源（Colors, Fonts, Animations）必须最先加载，因为所有样式文件都依赖它们
        2. 控件样式文件在基础资源之后加载，可以安全引用基础资源
        3. 自定义控件样式最后加载，因为它们可能依赖基础控件样式
    -->
    <ResourceDictionary.MergedDictionaries>
        <!-- 第一步：加载基础资源（必须最先加载） -->
        <!-- 注意：Colors资源由ThemeManager动态加载，不在这里引用 -->
        <!-- 默认加载暗黑主题，应用启动时应调用ThemeManager.Initialize() -->
        <ResourceDictionary Source="pack://application:,,,/LOLThemes.Wpf;component/Themes/Colors.xaml"/>
        <!-- 注意：Sizes资源由ThemeManager动态加载，不在这里引用 -->
        <!-- 默认加载中等尺寸，应用启动时应调用ThemeManager.InitializeSizeTheme() -->
        <ResourceDictionary Source="pack://application:,,,/LOLThemes.Wpf;component/Themes/Sizes.xaml"/>
        <ResourceDictionary Source="pack://application:,,,/LOLThemes.Wpf;component/Themes/Fonts.xaml"/>
        <ResourceDictionary Source="pack://application:,,,/LOLThemes.Wpf;component/Themes/Animations.xaml"/>
        
        <!-- 第二步：加载基础控件样式（依赖基础资源） -->
        <ResourceDictionary Source="pack://application:,,,/LOLThemes.Wpf;component/Themes/Styles/ButtonStyles.xaml"/>
        <ResourceDictionary Source="pack://application:,,,/LOLThemes.Wpf;component/Themes/Styles/TextBoxStyles.xaml"/>
        <ResourceDictionary Source="pack://application:,,,/LOLThemes.Wpf;component/Themes/Styles/PasswordBoxStyles.xaml"/>
        <ResourceDictionary Source="pack://application:,,,/LOLThemes.Wpf;component/Themes/Styles/ComboBoxStyles.xaml"/>
        <ResourceDictionary Source="pack://application:,,,/LOLThemes.Wpf;component/Themes/Styles/ListBoxStyles.xaml"/>
        <ResourceDictionary Source="pack://application:,,,/LOLThemes.Wpf;component/Themes/Styles/ListViewStyles.xaml"/>
        <ResourceDictionary Source="pack://application:,,,/LOLThemes.Wpf;component/Themes/Styles/DataGridStyles.xaml"/>
        <ResourceDictionary Source="pack://application:,,,/LOLThemes.Wpf;component/Themes/Styles/ScrollBarStyles.xaml"/>
        <ResourceDictionary Source="pack://application:,,,/LOLThemes.Wpf;component/Themes/Styles/CheckBoxStyles.xaml"/>
        <ResourceDictionary Source="pack://application:,,,/LOLThemes.Wpf;component/Themes/Styles/RadioButtonStyles.xaml"/>
        <ResourceDictionary Source="pack://application:,,,/LOLThemes.Wpf;component/Themes/Styles/ToggleButtonStyles.xaml"/>
        <ResourceDictionary Source="pack://application:,,,/LOLThemes.Wpf;component/Themes/Styles/ProgressBarStyles.xaml"/>
        <ResourceDictionary Source="pack://application:,,,/LOLThemes.Wpf;component/Themes/Styles/SliderStyles.xaml"/>
        <ResourceDictionary Source="pack://application:,,,/LOLThemes.Wpf;component/Themes/Styles/TabControlStyles.xaml"/>
        <ResourceDictionary Source="pack://application:,,,/LOLThemes.Wpf;component/Themes/Styles/GroupBoxStyles.xaml"/>
        <ResourceDictionary Source="pack://application:,,,/LOLThemes.Wpf;component/Themes/Styles/ExpanderStyles.xaml"/>
        <ResourceDictionary Source="pack://application:,,,/LOLThemes.Wpf;component/Themes/Styles/BorderStyles.xaml"/>
        <ResourceDictionary Source="pack://application:,,,/LOLThemes.Wpf;component/Themes/Styles/ToolTipStyles.xaml"/>
        <ResourceDictionary Source="pack://application:,,,/LOLThemes.Wpf;component/Themes/Styles/TextBlockStyles.xaml"/>
        <ResourceDictionary Source="pack://application:,,,/LOLThemes.Wpf;component/Themes/Styles/LabelStyles.xaml"/>
        <ResourceDictionary Source="pack://application:,,,/LOLThemes.Wpf;component/Themes/Styles/ImageStyles.xaml"/>
        <ResourceDictionary Source="pack://application:,,,/LOLThemes.Wpf;component/Themes/Styles/SeparatorStyles.xaml"/>
        <ResourceDictionary Source="pack://application:,,,/LOLThemes.Wpf;component/Themes/Styles/WindowStyles.xaml"/>
        <ResourceDictionary Source="pack://application:,,,/LOLThemes.Wpf;component/Themes/Styles/TreeViewStyles.xaml"/>
        <ResourceDictionary Source="pack://application:,,,/LOLThemes.Wpf;component/Themes/Styles/StatusBarStyles.xaml"/>
        <ResourceDictionary Source="pack://application:,,,/LOLThemes.Wpf;component/Themes/Styles/CalendarStyles.xaml"/>
        <ResourceDictionary Source="pack://application:,,,/LOLThemes.Wpf;component/Themes/Styles/DatePickerStyles.xaml"/>
        <ResourceDictionary Source="pack://application:,,,/LOLThemes.Wpf;component/Themes/Styles/RichTextBoxStyles.xaml"/>
        <ResourceDictionary Source="pack://application:,,,/LOLThemes.Wpf;component/Themes/Styles/MenuStyles.xaml"/>
        <ResourceDictionary Source="pack://application:,,,/LOLThemes.Wpf;component/Themes/Styles/ContextMenuStyles.xaml"/>
        
        <!-- 第三步：加载自定义控件样式（可能依赖基础控件样式） -->
        <ResourceDictionary Source="pack://application:,,,/LOLThemes.Wpf;component/Themes/Styles/HexagonButtonStyles.xaml"/>
        <ResourceDictionary Source="pack://application:,,,/LOLThemes.Wpf;component/Themes/Styles/GlowButtonStyles.xaml"/>
        <ResourceDictionary Source="pack://application:,,,/LOLThemes.Wpf;component/Themes/Styles/AnimatedBorderStyles.xaml"/>
        <ResourceDictionary Source="pack://application:,,,/LOLThemes.Wpf;component/Themes/Styles/ChampionCardStyles.xaml"/>
        <ResourceDictionary Source="pack://application:,,,/LOLThemes.Wpf;component/Themes/Styles/SkillButtonStyles.xaml"/>
        <ResourceDictionary Source="pack://application:,,,/LOLThemes.Wpf;component/Themes/Styles/RankBadgeStyles.xaml"/>
        <ResourceDictionary Source="pack://application:,,,/LOLThemes.Wpf;component/Themes/Styles/CurrencyDisplayStyles.xaml"/>
        <ResourceDictionary Source="pack://application:,,,/LOLThemes.Wpf;component/Themes/Styles/StatBarStyles.xaml"/>
        
    </ResourceDictionary.MergedDictionaries>
    
</ResourceDictionary>
