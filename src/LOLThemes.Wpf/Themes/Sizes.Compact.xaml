<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <!-- Padding 相关资源（紧凑尺寸，0.8倍） -->
    <Thickness x:Key="ButtonPadding">9.6,4.8</Thickness>
    <Thickness x:Key="TextBoxPadding">6.4,3.2</Thickness>
    <Thickness x:Key="PasswordBoxPadding">6.4,3.2</Thickness>
    <Thickness x:Key="ComboBoxPadding">6.4,3.2</Thickness>
    <Thickness x:Key="MenuItemPadding">9.6,6.4</Thickness>
    <Thickness x:Key="TabItemPadding">9.6,6.4</Thickness>
    <Thickness x:Key="ListBoxItemPadding">6.4,3.2</Thickness>
    <Thickness x:Key="ListViewItemPadding">6.4,3.2</Thickness>
    <Thickness x:Key="TreeViewItemPadding">3.2,1.6</Thickness>
    <Thickness x:Key="DataGridCellPadding">4.8,3.2</Thickness>
    <Thickness x:Key="GroupBoxPadding">9.6,6.4</Thickness>
    <Thickness x:Key="ExpanderPadding">9.6,6.4</Thickness>
    <Thickness x:Key="WindowPadding">0</Thickness>
    
    <!-- BorderThickness 相关资源（紧凑尺寸，0.8倍） -->
    <Thickness x:Key="BorderThickness">0.4</Thickness>
    <Thickness x:Key="ButtonBorderThickness">0.4</Thickness>
    <Thickness x:Key="TextBoxBorderThickness">0.4</Thickness>
    <Thickness x:Key="PasswordBoxBorderThickness">0.4</Thickness>
    <Thickness x:Key="ComboBoxBorderThickness">0.4</Thickness>
    <Thickness x:Key="WindowBorderThickness">0.8</Thickness>
    
    <!-- Margin 相关资源（紧凑尺寸，0.8倍） -->
    <Thickness x:Key="ControlMargin">3.2</Thickness>
    <Thickness x:Key="ItemMargin">3.2,1.6</Thickness>
    <Thickness x:Key="GroupMargin">9.6,6.4</Thickness>
    
    <!-- FontSize 相关资源（紧凑尺寸，0.8倍） -->
    <sys:Double x:Key="FontSizeSmall">9.6</sys:Double>
    <sys:Double x:Key="FontSizeNormal">11.2</sys:Double>
    <sys:Double x:Key="FontSizeMedium">12.8</sys:Double>
    <sys:Double x:Key="FontSizeLarge">16</sys:Double>
    
    <!-- CornerRadius 相关资源（紧凑尺寸，0.8倍） -->
    <CornerRadius x:Key="CornerRadius">1.6</CornerRadius>
    <CornerRadius x:Key="ButtonCornerRadius">1.6</CornerRadius>
    <CornerRadius x:Key="TextBoxCornerRadius">1.6</CornerRadius>
    <CornerRadius x:Key="BorderCornerRadius">3.2</CornerRadius>
    
    <!-- IconSize 相关资源（紧凑尺寸，0.8倍） -->
    <sys:Double x:Key="IconSize">12.8</sys:Double>
    
    <!-- Spacing 相关资源（紧凑尺寸，0.8倍） -->
    <sys:Double x:Key="Spacing">3.2</sys:Double>

</ResourceDictionary>
