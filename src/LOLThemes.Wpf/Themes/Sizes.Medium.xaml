<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <!-- Padding 相关资源（中等尺寸，1.0倍） -->
    <Thickness x:Key="ButtonPadding">12,6</Thickness>
    <Thickness x:Key="TextBoxPadding">8,4</Thickness>
    <Thickness x:Key="PasswordBoxPadding">8,4</Thickness>
    <Thickness x:Key="ComboBoxPadding">8,4</Thickness>
    <Thickness x:Key="MenuItemPadding">12,8</Thickness>
    <Thickness x:Key="TabItemPadding">12,8</Thickness>
    <Thickness x:Key="ListBoxItemPadding">8,4</Thickness>
    <Thickness x:Key="ListViewItemPadding">8,4</Thickness>
    <Thickness x:Key="TreeViewItemPadding">4,2</Thickness>
    <Thickness x:Key="DataGridCellPadding">6,4</Thickness>
    <Thickness x:Key="GroupBoxPadding">12,8</Thickness>
    <Thickness x:Key="ExpanderPadding">12,8</Thickness>
    <Thickness x:Key="WindowPadding">0</Thickness>
    
    <!-- BorderThickness 相关资源（中等尺寸，1.0倍） -->
    <Thickness x:Key="BorderThickness">0.5</Thickness>
    <Thickness x:Key="ButtonBorderThickness">0.5</Thickness>
    <Thickness x:Key="TextBoxBorderThickness">0.5</Thickness>
    <Thickness x:Key="PasswordBoxBorderThickness">0.5</Thickness>
    <Thickness x:Key="ComboBoxBorderThickness">0.5</Thickness>
    <Thickness x:Key="WindowBorderThickness">1</Thickness>
    
    <!-- Margin 相关资源（中等尺寸，1.0倍） -->
    <Thickness x:Key="ControlMargin">4</Thickness>
    <Thickness x:Key="ItemMargin">4,2</Thickness>
    <Thickness x:Key="GroupMargin">12,8</Thickness>
    
    <!-- FontSize 相关资源（中等尺寸，1.0倍） -->
    <sys:Double x:Key="FontSizeSmall">12</sys:Double>
    <sys:Double x:Key="FontSizeNormal">14</sys:Double>
    <sys:Double x:Key="FontSizeMedium">16</sys:Double>
    <sys:Double x:Key="FontSizeLarge">20</sys:Double>
    
    <!-- CornerRadius 相关资源（中等尺寸，1.0倍） -->
    <CornerRadius x:Key="CornerRadius">2</CornerRadius>
    <CornerRadius x:Key="ButtonCornerRadius">2</CornerRadius>
    <CornerRadius x:Key="TextBoxCornerRadius">2</CornerRadius>
    <CornerRadius x:Key="BorderCornerRadius">4</CornerRadius>
    
    <!-- IconSize 相关资源（中等尺寸，1.0倍） -->
    <sys:Double x:Key="IconSize">16</sys:Double>
    
    <!-- Spacing 相关资源（中等尺寸，1.0倍） -->
    <sys:Double x:Key="Spacing">4</sys:Double>

</ResourceDictionary>
