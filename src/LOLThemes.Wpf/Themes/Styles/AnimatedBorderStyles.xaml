<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:LOLThemes.Wpf.Controls">

    <Style TargetType="{x:Type controls:AnimatedBorder}">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderGoldBrush}"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="CornerRadius" Value="0"/>
        <Setter Property="Padding" Value="10"/>
        <Setter Property="AnimationType" Value="None"/>
        <Setter Property="AnimationDuration" Value="0:0:2"/>
    </Style>

</ResourceDictionary>
