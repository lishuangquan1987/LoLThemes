<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- 合并基础资源，确保可以访问 Colors 和 Fonts -->
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/LOLThemes.Wpf;component/Themes/Colors.xaml"/>
        <ResourceDictionary Source="/LOLThemes.Wpf;component/Themes/Fonts.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <!-- Primary Border 样式 -->
    <Style x:Key="PrimaryBorder" TargetType="Border">
        <Setter Property="BorderBrush" Value="{DynamicResource BorderGoldBrush}"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="Padding" Value="12"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="Background">
            <Setter.Value>
                <DynamicResource ResourceKey="DarkGradientBrush"/>
            </Setter.Value>
        </Setter>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="{DynamicResource PrimaryGold}" BlurRadius="8" ShadowDepth="0" Opacity="0.15"/>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Secondary Border 样式 -->
    <Style x:Key="SecondaryBorder" TargetType="Border">
        <Setter Property="Background" Value="{DynamicResource BackgroundLightBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource BorderDarkBrush}"/>
        <Setter Property="BorderThickness" Value="0.5"/>
        <Setter Property="Padding" Value="8"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
    </Style>

    <!-- Accent Border 样式 -->
    <Style x:Key="AccentBorder" TargetType="Border">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderBrush" Value="{DynamicResource PrimaryCyanBrush}"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="Padding" Value="12"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
    </Style>

    <!-- Card Border 样式 -->
    <Style x:Key="CardBorder" TargetType="Border">
        <Setter Property="BorderBrush" Value="{DynamicResource BorderDarkBrush}"/>
        <Setter Property="BorderThickness" Value="0.5"/>
        <Setter Property="Padding" Value="16"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="Background">
            <Setter.Value>
                <DynamicResource ResourceKey="RadialGoldGradientBrush"/>
            </Setter.Value>
        </Setter>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="{DynamicResource PrimaryDarkBlue}" BlurRadius="10" ShadowDepth="2" Opacity="0.3"/>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Panel Border 样式 -->
    <Style x:Key="PanelBorder" TargetType="Border">
        <Setter Property="Background" Value="{DynamicResource BackgroundDarkBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource BorderGoldBrush}"/>
        <Setter Property="BorderThickness" Value="0.5"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
    </Style>

    <!-- Highlight Border 样式 -->
    <Style x:Key="HighlightBorder" TargetType="Border">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderBrush" Value="{DynamicResource PrimaryGoldBrush}"/>
        <Setter Property="BorderThickness" Value="3"/>
        <Setter Property="Padding" Value="8"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
    </Style>

    <!-- Subtle Border 样式 -->
    <Style x:Key="SubtleBorder" TargetType="Border">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderBrush" Value="{DynamicResource Gray400Brush}"/>
        <Setter Property="BorderThickness" Value="0.5"/>
        <Setter Property="Padding" Value="8"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
    </Style>

    <!-- Rounded Border 样式 -->
    <Style x:Key="RoundedBorder" TargetType="Border">
        <Setter Property="Background" Value="{DynamicResource BackgroundMediumBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource BorderGoldBrush}"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="Padding" Value="12"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
    </Style>

</ResourceDictionary>
