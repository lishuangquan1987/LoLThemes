<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--
        ===================================================================
        ButtonStyles.xaml - Button 控件样式定义
        ===================================================================
        
        文件说明：
        - 定义标准 Button 控件的视觉样式
        - 根据 101.qq.com 网站配色重新设计
        - 使用纯色背景，无渐变和阴影效果，确保字体清晰度
        
        包含的样式：
        - LOLButtonStyle: 基础按钮样式
        - 默认样式: 自动应用到所有 Button 控件
        
        设计特点：
        - 移除所有动画效果（影响字体清晰度的动画）
        - 使用纯色背景和边框
        - 悬停和按下状态使用即时切换，无过渡动画
        - 支持禁用状态样式
        
        使用方式：
        - 默认样式会自动应用到所有 Button 控件
        - 如需自定义，可基于 LOLButtonStyle 创建新样式
    -->

    <!--  Fonts.xaml 已通过 Generic.xaml 加载，无需直接引用  -->

    <!--  LOL Button 样式 - 根据101.qq.com网站配色重新设计  -->
    <Style x:Key="LOLButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="{DynamicResource BackgroundCardBrush}" />
        <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource BorderDefaultBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Padding" Value="8,4" />
        <Setter Property="FontFamily" Value="{DynamicResource PrimaryFont}" />
        <Setter Property="FontSize" Value="{DynamicResource FontSizeNormal}" />
        <Setter Property="FontWeight" Value="{StaticResource FontWeightMedium}" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="TextOptions.TextFormattingMode" Value="Display" />
        <Setter Property="TextOptions.TextRenderingMode" Value="ClearType" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border
                        x:Name="border"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="{DynamicResource ButtonCornerRadius}"
                        SnapsToDevicePixels="True"
                        UseLayoutRounding="True">
                        <!--  添加LOL风格的内发光效果  -->
                        <Border
                            x:Name="glowBorder"
                            Margin="-2"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            BorderThickness="2"
                            CornerRadius="{DynamicResource ButtonCornerRadius}">
                            <ContentPresenter
                                Margin="{TemplateBinding Padding}"
                                HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                RecognizesAccessKey="True"
                                RenderOptions.ClearTypeHint="Enabled"
                                SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                TextOptions.TextFormattingMode="Display"
                                TextOptions.TextRenderingMode="ClearType" />
                        </Border>
                    </Border>
                    <ControlTemplate.Triggers>
                        <!--  MouseOver 状态 - 添加发光效果  -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="{DynamicResource BackgroundHoverBrush}" />
                            <Setter TargetName="border" Property="BorderBrush" Value="{DynamicResource BorderGoldBrush}" />
                            <Setter TargetName="glowBorder" Property="BorderBrush" Value="{DynamicResource GoldGlowGradient}" />
                            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}" />
                        </Trigger>

                        <!--  Pressed 状态 - 添加按下效果和强化发光  -->
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="border" Property="Background" Value="{DynamicResource BackgroundCardBrush}" />
                            <Setter TargetName="border" Property="BorderBrush" Value="{DynamicResource BorderGoldBrush}" />
                            <Setter TargetName="glowBorder" Property="BorderBrush" Value="{DynamicResource GoldGlowGradientIntense}" />
                            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}" />
                        </Trigger>

                        <!--  Normal 状态 - 移除发光效果  -->
                        <Trigger Property="IsMouseOver" Value="False">
                            <Setter TargetName="glowBorder" Property="BorderBrush" Value="Transparent" />
                        </Trigger>

                        <!--  Disabled 状态  -->
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="border" Property="Background" Value="{DynamicResource BackgroundCardBrush}" />
                            <Setter TargetName="border" Property="BorderBrush" Value="{DynamicResource BorderDefaultBrush}" />
                            <Setter TargetName="glowBorder" Property="BorderBrush" Value="Transparent" />
                            <Setter Property="Foreground" Value="{DynamicResource TextDisabledBrush}" />
                            <Setter TargetName="border" Property="Opacity" Value="0.5" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--  主要按钮样式（填充背景）  -->
    <Style
        x:Key="LOLPrimaryButtonStyle"
        BasedOn="{StaticResource LOLButtonStyle}"
        TargetType="Button">
        <Setter Property="Background" Value="{DynamicResource BorderGoldBrush}" />
        <Setter Property="Foreground" Value="{DynamicResource BackgroundDarkBrush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource BorderGoldBrush}" />
    </Style>

    <!--  次要按钮样式  -->
    <Style
        x:Key="LOLSecondaryButtonStyle"
        BasedOn="{StaticResource LOLButtonStyle}"
        TargetType="Button">
        <Setter Property="BorderBrush" Value="{DynamicResource BorderDefaultBrush}" />
        <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}" />
    </Style>

    <!--  成功按钮样式  -->
    <Style
        x:Key="LOLSuccessButtonStyle"
        BasedOn="{StaticResource LOLButtonStyle}"
        TargetType="Button">
        <Setter Property="BorderBrush" Value="{DynamicResource SuccessGreenBrush}" />
        <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}" />
    </Style>

    <!--  危险按钮样式  -->
    <Style
        x:Key="LOLDangerButtonStyle"
        BasedOn="{StaticResource LOLButtonStyle}"
        TargetType="Button">
        <Setter Property="BorderBrush" Value="{DynamicResource ErrorRedBrush}" />
        <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}" />
    </Style>

    <!--  默认 Button 样式  -->
    <Style BasedOn="{StaticResource LOLButtonStyle}" TargetType="Button" />

</ResourceDictionary>
