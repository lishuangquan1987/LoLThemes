<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:LOLThemes.Wpf.Controls">
    
    <!-- 合并基础资源，确保可以访问 Fonts -->
    <!-- 注意：Colors.xaml 和 Sizes.xaml 已通过 Generic.xaml 加载，无需直接引用 -->
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/LOLThemes.Wpf;component/Themes/Fonts.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <Style TargetType="{x:Type controls:ChampionCard}">
        <Setter Property="Width" Value="120"/>
        <Setter Property="Height" Value="160"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:ChampionCard}">
                    <Grid>
                        <Border x:Name="mainBorder"
                               Background="{DynamicResource BackgroundMediumBrush}"
                               BorderBrush="{DynamicResource BorderDarkBrush}"
                               BorderThickness="2"
                               CornerRadius="0">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- 英雄图片 -->
                                <Image Grid.Row="0"
                                      Source="{TemplateBinding ChampionImage}"
                                      Stretch="UniformToFill"
                                      VerticalAlignment="Center"
                                      HorizontalAlignment="Center"/>

                                <!-- 英雄名称 -->
                                <Border Grid.Row="1"
                                       Background="{DynamicResource BackgroundDarkBrush}"
                                       Padding="5">
                                    <TextBlock Text="{TemplateBinding ChampionName}"
                                             Foreground="{DynamicResource TextPrimaryBrush}"
                                             FontFamily="{StaticResource PrimaryFont}"
                                             FontSize="{DynamicResource FontSizeSmall}"
                                             FontWeight="{StaticResource FontWeightMedium}"
                                             HorizontalAlignment="Center"
                                             TextTrimming="CharacterEllipsis"/>
                                </Border>

                                <!-- 选中边框 -->
                                <Border x:Name="selectedBorder"
                                       Grid.RowSpan="2"
                                       BorderBrush="{DynamicResource BorderGoldBrush}"
                                       BorderThickness="3"
                                       CornerRadius="0"
                                       Visibility="Collapsed">
                                </Border>
                            </Grid>
                        </Border>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter TargetName="selectedBorder" Property="Visibility" Value="Visible"/>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="mainBorder" Property="BorderBrush" Value="{DynamicResource BorderGoldBrush}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
