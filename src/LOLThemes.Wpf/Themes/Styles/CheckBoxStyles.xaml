<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!--
        ===================================================================
        CheckBoxStyles.xaml - CheckBox 控件样式定义
        ===================================================================
        
        文件说明：
        - 定义 CheckBox 控件的视觉样式
        - 根据 101.qq.com 网站配色重新设计
        - 支持选中状态的勾选动画
        
        包含的样式：
        - LOLCheckBoxStyle: 基础复选框样式
        - 默认样式: 自动应用到所有 CheckBox 控件
        
        设计特点：
        - 使用纯色背景和边框，无渐变
        - 选中时显示青色边框和背景（AccentCyan）
        - 勾选标记使用白色，带缩放和透明度动画
        - 动画不影响字体清晰度，仅影响勾选标记
        - 移除所有阴影效果
        
        动画说明：
        - 勾选标记动画：选中时从 0.5 倍缩放到 1.0 倍，透明度从 0 到 1
        - 动画持续时间：0.2 秒
        - 动画不影响字体清晰度
        
        使用方式：
        - 默认样式会自动应用到所有 CheckBox 控件
    -->
    
    <!-- 合并基础资源，确保可以访问 Fonts -->
    <!-- 注意：Colors.xaml 和 Sizes.xaml 已通过 Generic.xaml 加载，无需直接引用 -->
    

    <!-- LOL CheckBox 样式 -->
    <Style x:Key="LOLCheckBoxStyle" TargetType="CheckBox">
        <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
        <Setter Property="FontFamily" Value="{StaticResource PrimaryFont}"/>
        <Setter Property="FontSize" Value="{DynamicResource FontSizeNormal}"/>
        <Setter Property="Cursor" Value="Hand"/>
        <!-- 添加自动化属性支持 -->
        <Setter Property="AutomationProperties.AutomationId" Value="CheckBox"/>
        <Setter Property="AutomationProperties.Name" Value="{Binding Content, RelativeSource={RelativeSource Self}}"/>
        <Setter Property="AutomationProperties.HelpText" Value="复选框控件"/>
        <!-- 添加键盘导航支持 -->
        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="CheckBox">
                    <Grid Background="Transparent" KeyboardNavigation.IsTabStop="True" KeyboardNavigation.TabNavigation="Local">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- 复选框容器 -->
                        <Grid Grid.Column="0" Width="20" Height="20" Margin="0,0,8,0">
                            <Border x:Name="CheckBoxBorder"
                                   Background="{DynamicResource BackgroundInputBrush}"
                                   BorderBrush="{DynamicResource BorderDefaultBrush}"
                                   BorderThickness="1"
                                   CornerRadius="3"
                                   SnapsToDevicePixels="True"
                                   UseLayoutRounding="True"/>
                            <!-- 焦点指示 -->
                            <Border x:Name="FocusBorder"
                                   Background="Transparent"
                                   BorderBrush="{DynamicResource BorderGoldBrush}"
                                   BorderThickness="2"
                                   CornerRadius="3"
                                   SnapsToDevicePixels="True"
                                   UseLayoutRounding="True"
                                   IsHitTestVisible="False"
                                   Opacity="0"/>
                            <!-- 选中标记（精确居中） -->
                            <Canvas Width="20" Height="20" 
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Center">
                                <Path x:Name="CheckMark"
                                     Data="M 5,10 L 9,14 L 15,6"
                                     Stroke="{DynamicResource BorderGoldBrush}"
                                     StrokeThickness="2"
                                     StrokeStartLineCap="Round"
                                     StrokeEndLineCap="Round"
                                     StrokeLineJoin="Round"
                                     Opacity="0"
                                     RenderTransformOrigin="0.5,0.5"
                                     SnapsToDevicePixels="True">
                                    <Path.RenderTransform>
                                        <ScaleTransform x:Name="CheckMarkScale" ScaleX="0" ScaleY="0"/>
                                    </Path.RenderTransform>
                                </Path>
                            </Canvas>
                        </Grid>
                        
                        <!-- 文本内容 -->
                        <ContentPresenter Grid.Column="1"
                                        VerticalAlignment="Center"
                                        RecognizesAccessKey="True"/>
                    </Grid>
                    
                    <ControlTemplate.Triggers>
                        <!-- 鼠标悬停 -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="CheckBoxBorder" Property="BorderBrush" 
                                   Value="{DynamicResource BorderGoldBrush}"/>
                            <Setter TargetName="CheckBoxBorder" Property="Background" 
                                   Value="{DynamicResource BackgroundInputBrush}"/>
                            <Setter TargetName="CheckBoxBorder" Property="BorderThickness" Value="1.5"/>
                        </Trigger>
                        
                        <!-- 键盘焦点 -->
                        <Trigger Property="IsKeyboardFocused" Value="True">
                            <Setter TargetName="FocusBorder" Property="Opacity" Value="1"/>
                        </Trigger>
                        
                        <!-- 选中状态 -->
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="CheckBoxBorder" Property="BorderBrush" 
                                   Value="{DynamicResource BorderGoldBrush}"/>
                            <Setter TargetName="CheckBoxBorder" Property="Background" 
                                   Value="{DynamicResource PrimaryGoldSemiBrush}"/>
                            <Setter TargetName="CheckBoxBorder" Property="BorderThickness" Value="2"/>
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="CheckMark"
                                                       Storyboard.TargetProperty="Opacity"
                                                       To="1"
                                                       Duration="0:0:0.2"/>
                                        <DoubleAnimation Storyboard.TargetName="CheckMarkScale"
                                                       Storyboard.TargetProperty="ScaleX"
                                                       To="1"
                                                       Duration="0:0:0.2">
                                            <DoubleAnimation.EasingFunction>
                                                <BackEase EasingMode="EaseOut" Amplitude="0.3"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <DoubleAnimation Storyboard.TargetName="CheckMarkScale"
                                                       Storyboard.TargetProperty="ScaleY"
                                                       To="1"
                                                       Duration="0:0:0.2">
                                            <DoubleAnimation.EasingFunction>
                                                <BackEase EasingMode="EaseOut" Amplitude="0.3"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="CheckMark"
                                                       Storyboard.TargetProperty="Opacity"
                                                       To="0"
                                                       Duration="0:0:0.15"/>
                                        <DoubleAnimation Storyboard.TargetName="CheckMarkScale"
                                                       Storyboard.TargetProperty="ScaleX"
                                                       To="0"
                                                       Duration="0:0:0.15"/>
                                        <DoubleAnimation Storyboard.TargetName="CheckMarkScale"
                                                       Storyboard.TargetProperty="ScaleY"
                                                       To="0"
                                                       Duration="0:0:0.15"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                        
                        <!-- 不确定状态 -->
                        <Trigger Property="IsChecked" Value="{x:Null}">
                            <Setter TargetName="CheckBoxBorder" Property="BorderBrush" 
                                   Value="{DynamicResource BorderGoldBrush}"/>
                            <Setter TargetName="CheckBoxBorder" Property="Background" 
                                   Value="{DynamicResource PrimaryGoldSemiBrush}"/>
                            <Setter TargetName="CheckBoxBorder" Property="BorderThickness" Value="2"/>
                            <Setter TargetName="CheckMark" Property="Data" Value="M 4,9 L 14,9"/>
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="CheckMark"
                                                       Storyboard.TargetProperty="Opacity"
                                                       To="1"
                                                       Duration="0:0:0.2"/>
                                        <DoubleAnimation Storyboard.TargetName="CheckMarkScale"
                                                       Storyboard.TargetProperty="ScaleX"
                                                       To="1"
                                                       Duration="0:0:0.2"/>
                                        <DoubleAnimation Storyboard.TargetName="CheckMarkScale"
                                                       Storyboard.TargetProperty="ScaleY"
                                                       To="1"
                                                       Duration="0:0:0.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="CheckMark"
                                                       Storyboard.TargetProperty="Opacity"
                                                       To="0"
                                                       Duration="0:0:0.15"/>
                                        <DoubleAnimation Storyboard.TargetName="CheckMarkScale"
                                                       Storyboard.TargetProperty="ScaleX"
                                                       To="0"
                                                       Duration="0:0:0.15"/>
                                        <DoubleAnimation Storyboard.TargetName="CheckMarkScale"
                                                       Storyboard.TargetProperty="ScaleY"
                                                       To="0"
                                                       Duration="0:0:0.15"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                        
                        <!-- 禁用状态 -->
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="CheckBoxBorder" Property="BorderBrush" 
                                   Value="{DynamicResource TextDisabledBrush}"/>
                            <Setter TargetName="CheckBoxBorder" Property="Background" 
                                   Value="{DynamicResource BackgroundInputBrush}"/>
                            <Setter TargetName="CheckMark" Property="Stroke" 
                                   Value="{DynamicResource TextDisabledBrush}"/>
                            <Setter Property="Foreground" 
                                   Value="{DynamicResource TextDisabledBrush}"/>
                            <Setter TargetName="FocusBorder" Property="Opacity" Value="0"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- 默认 CheckBox 样式 -->
    <Style TargetType="{x:Type CheckBox}" BasedOn="{StaticResource LOLCheckBoxStyle}"/>

</ResourceDictionary>
