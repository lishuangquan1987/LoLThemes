<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- 合并基础资源，确保可以访问 Colors、Fonts 和 ButtonStyles -->
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/LOLThemes.Wpf;component/Themes/Colors.xaml"/>
        <ResourceDictionary Source="/LOLThemes.Wpf;component/Themes/Fonts.xaml"/>
        <ResourceDictionary Source="/LOLThemes.Wpf;component/Themes/Styles/ButtonStyles.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <!-- 代码块容器样式 -->
    <Style x:Key="CodeBlockContainerStyle" TargetType="Border">
        <Setter Property="Background" Value="#1E1E1E"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderDarkBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="15"/>
        <Setter Property="CornerRadius" Value="4"/>
    </Style>

    <!-- 代码文本样式 -->
    <Style x:Key="CodeTextStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Consolas"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="Foreground" Value="#D4D4D4"/>
        <Setter Property="TextWrapping" Value="NoWrap"/>
        <Setter Property="LineHeight" Value="20"/>
    </Style>

    <!-- 代码块按钮样式 -->
    <Style x:Key="CodeBlockButtonStyle" TargetType="Button" BasedOn="{StaticResource LOLSecondaryButtonStyle}">
        <Setter Property="Padding" Value="8,4"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeSmall}"/>
        <Setter Property="MinWidth" Value="80"/>
    </Style>

</ResourceDictionary>

