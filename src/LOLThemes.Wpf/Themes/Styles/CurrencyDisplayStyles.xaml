<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:LOLThemes.Wpf.Controls"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">
    
    <!-- åˆå¹¶åŸºç¡€èµ„æºï¼Œç¡®ä¿å¯ä»¥è®¿é—® Colors å’Œ Fonts -->
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/LOLThemes.Wpf;component/Themes/Colors.xaml"/>
        <ResourceDictionary Source="/LOLThemes.Wpf;component/Themes/Fonts.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <Style TargetType="{x:Type controls:CurrencyDisplay}">
        <Setter Property="Padding" Value="12,6"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:CurrencyDisplay}">
                    <Border x:Name="currencyBorder"
                           Background="{StaticResource PrimaryCyanBrush}"
                           CornerRadius="3"
                           Padding="{TemplateBinding Padding}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock x:Name="currencyIcon"
                                      Text="ðŸ’Ž"
                                      FontSize="{StaticResource FontSizeNormal}"
                                      VerticalAlignment="Center"
                                      Margin="0,0,8,0"/>
                            <TextBlock Text="{Binding Amount, RelativeSource={RelativeSource TemplatedParent}, StringFormat='{}{0:N0}'}"
                                      FontSize="{StaticResource FontSizeNormal}"
                                      FontWeight="{StaticResource FontWeightBold}"
                                      Foreground="{StaticResource BackgroundDarkBrush}"
                                      VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="CurrencyType" Value="BlueEssence">
                            <Setter TargetName="currencyBorder" Property="Background" Value="{StaticResource PrimaryCyanBrush}"/>
                            <Setter TargetName="currencyIcon" Property="Text" Value="ðŸ’Ž"/>
                        </Trigger>
                        <Trigger Property="CurrencyType" Value="RiotPoints">
                            <Setter TargetName="currencyBorder" Property="Background" Value="{StaticResource PrimaryGoldBrush}"/>
                            <Setter TargetName="currencyIcon" Property="Text" Value="ðŸª™"/>
                        </Trigger>
                        <Trigger Property="CurrencyType" Value="OrangeEssence">
                            <Setter TargetName="currencyBorder" Property="Background" Value="#FF8C00"/>
                            <Setter TargetName="currencyIcon" Property="Text" Value="ðŸ§¡"/>
                        </Trigger>
                        <Trigger Property="CurrencyType" Value="Tokens">
                            <Setter TargetName="currencyBorder" Property="Background" Value="#9370DB"/>
                            <Setter TargetName="currencyIcon" Property="Text" Value="ðŸŽ«"/>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="currencyBorder" Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect Color="#0AC8B9" BlurRadius="10" ShadowDepth="0" Opacity="0.8"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>

