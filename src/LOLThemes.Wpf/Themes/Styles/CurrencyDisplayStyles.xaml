    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/LOLThemes.Wpf;component/Themes/Fonts.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style TargetType="{x:Type controls:CurrencyDisplay}">
        <Setter Property="Padding" Value="12,6" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:CurrencyDisplay}">
                    <Border
                        x:Name="currencyBorder"
                        Padding="{TemplateBinding Padding}"
                        Background="{DynamicResource CurrencyBlueEssenceBrush}"
                        BorderBrush="{DynamicResource BorderGoldBrush}"
                        BorderThickness="0.5"
                        CornerRadius="3"
                        SnapsToDevicePixels="True"
                        UseLayoutRounding="True">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock
                                x:Name="currencyIcon"
                                Margin="0,0,8,0"
                                VerticalAlignment="Center"
                                FontSize="{DynamicResource FontSizeNormal}"
                                SnapsToDevicePixels="True"
                                Text="ðŸ’Ž"
                                TextOptions.TextFormattingMode="Display"
                                TextOptions.TextRenderingMode="ClearType" />
                            <TextBlock
                                VerticalAlignment="Center"
                                FontSize="{DynamicResource FontSizeNormal}"
                                FontWeight="{StaticResource FontWeightBold}"
                                Foreground="{DynamicResource BackgroundDarkBrush}"
                                RenderOptions.ClearTypeHint="Enabled"
                                SnapsToDevicePixels="True"
                                Text="{Binding Amount, RelativeSource={RelativeSource TemplatedParent}, StringFormat='{}{0:N0}'}"
                                TextOptions.TextFormattingMode="Display"
                                TextOptions.TextRenderingMode="ClearType" />
                        </StackPanel>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="CurrencyType" Value="BlueEssence">
                            <Setter TargetName="currencyBorder" Property="Background" Value="{DynamicResource CurrencyBlueEssenceBrush}" />
                            <Setter TargetName="currencyIcon" Property="Text" Value="ðŸ’Ž" />
                        </Trigger>
                        <Trigger Property="CurrencyType" Value="RiotPoints">
                            <Setter TargetName="currencyBorder" Property="Background" Value="{DynamicResource CurrencyRiotPointsBrush}" />
                            <Setter TargetName="currencyIcon" Property="Text" Value="ðŸª™" />
                        </Trigger>
                        <Trigger Property="CurrencyType" Value="OrangeEssence">
                            <Setter TargetName="currencyBorder" Property="Background" Value="{DynamicResource CurrencyOrangeEssenceBrush}" />
                            <Setter TargetName="currencyIcon" Property="Text" Value="ðŸ§¡" />
                        </Trigger>
                        <Trigger Property="CurrencyType" Value="Tokens">
                            <Setter TargetName="currencyBorder" Property="Background" Value="{DynamicResource CurrencyTokensBrush}" />
                            <Setter TargetName="currencyIcon" Property="Text" Value="ðŸŽ«" />
                        </Trigger>
                        <!--  IsMouseOver çŠ¶æ€ - æ— åŠ¨ç”»ï¼Œå³æ—¶åˆ‡æ¢  -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="currencyBorder" Property="Opacity" Value="0.8" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>

