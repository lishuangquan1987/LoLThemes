<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:LOLThemes.Wpf.Controls">
    
    <!-- 合并基础资源，确保可以访问 Fonts -->
    <!-- 注意：Colors.xaml 和 Sizes.xaml 已通过 Generic.xaml 加载，无需直接引用 -->
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/LOLThemes.Wpf;component/Themes/Fonts.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <Style TargetType="{x:Type controls:HexagonButton}">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{DynamicResource TextBrightBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource BorderGoldBrush}"/>
        <Setter Property="BorderThickness" Value="{DynamicResource BorderThickness}"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="UseLayoutRounding" Value="True"/>
        <Setter Property="FontFamily" Value="{StaticResource PrimaryFont}"/>
        <Setter Property="FontSize" Value="{DynamicResource FontSizeMedium}"/>
        <Setter Property="FontWeight" Value="{StaticResource FontWeightBold}"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Width" Value="100"/>
        <Setter Property="Height" Value="100"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:HexagonButton}">
                    <Grid>
                        <Path x:Name="hexagonPath"
                              Data="{TemplateBinding HexagonGeometry}"
                              Fill="{TemplateBinding Background}"
                              Stroke="{TemplateBinding BorderBrush}"
                              StrokeThickness="{TemplateBinding BorderThickness}"
                              Stretch="Fill"
                              SnapsToDevicePixels="True">
                            <Path.Effect>
                                <DropShadowEffect Color="#C8AA6E"
                                                BlurRadius="5"
                                                ShadowDepth="0"
                                                Opacity="0"/>
                            </Path.Effect>
                        </Path>
                        <!-- 内层高光边框 -->
                        <Path x:Name="highlightPath"
                              Data="{TemplateBinding HexagonGeometry}"
                              Stroke="#40F0E6D2"
                              StrokeThickness="0.5"
                              Stretch="Fill"
                              Opacity="0"
                              IsHitTestVisible="False"
                              SnapsToDevicePixels="True"/>
                        <ContentPresenter HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        TextElement.Foreground="{TemplateBinding Foreground}"
                                        Clip="{TemplateBinding HexagonGeometry}"
                                        TextOptions.TextFormattingMode="Display"
                                        TextOptions.TextRenderingMode="ClearType"
                                        RenderOptions.ClearTypeHint="Enabled"
                                        SnapsToDevicePixels="True"/>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="hexagonPath"
                                                       Storyboard.TargetProperty="(Path.Effect).(DropShadowEffect.Opacity)"
                                                       To="0.5"
                                                       Duration="0:0:0.15">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <DoubleAnimation Storyboard.TargetName="hexagonPath"
                                                       Storyboard.TargetProperty="(Path.Effect).(DropShadowEffect.BlurRadius)"
                                                       To="10"
                                                       Duration="0:0:0.15">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="hexagonPath"
                                                       Storyboard.TargetProperty="(Path.Effect).(DropShadowEffect.Opacity)"
                                                       To="0"
                                                       Duration="0:0:0.15">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <DoubleAnimation Storyboard.TargetName="hexagonPath"
                                                       Storyboard.TargetProperty="(Path.Effect).(DropShadowEffect.BlurRadius)"
                                                       To="5"
                                                       Duration="0:0:0.15">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                            <Setter TargetName="hexagonPath" Property="Fill">
                                <Setter.Value>
                                    <RadialGradientBrush>
                                        <GradientStop Color="#E6C8AA6E" Offset="0"/>
                                        <GradientStop Color="#CCC8AA6E" Offset="1"/>
                                    </RadialGradientBrush>
                                </Setter.Value>
                            </Setter>
                            <Setter TargetName="highlightPath" Property="Opacity" Value="1"/>
                            <Setter Property="Foreground" Value="#010A13"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="hexagonPath" Property="Fill">
                                <Setter.Value>
                                    <RadialGradientBrush>
                                        <GradientStop Color="#CC785A28" Offset="0"/>
                                        <GradientStop Color="#99785A28" Offset="1"/>
                                    </RadialGradientBrush>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="hexagonPath" Property="Stroke" Value="{DynamicResource TextDisabledBrush}"/>
                            <Setter Property="Foreground" Value="{DynamicResource TextDisabledBrush}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
