<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--  合并基础资源，确保可以访问 Fonts  -->
    <!--  注意：Colors.xaml 和 Sizes.xaml 已通过 Generic.xaml 加载，无需直接引用  -->
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/LOLThemes.Wpf;component/Themes/Fonts.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <!--  GridViewColumnHeader 样式  -->
    <Style x:Key="LOLGridViewColumnHeaderStyle" TargetType="GridViewColumnHeader">
        <Setter Property="Background" Value="{DynamicResource BackgroundLightBrush}" />
        <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource BorderDarkBrush}" />
        <Setter Property="BorderThickness" Value="{DynamicResource ListViewItemBorderThickness}" />
        <Setter Property="Padding" Value="10,8" />
        <Setter Property="FontFamily" Value="{StaticResource PrimaryFont}" />
        <Setter Property="FontSize" Value="{DynamicResource FontSizeNormal}" />
        <Setter Property="FontWeight" Value="{StaticResource FontWeightMedium}" />
        <Setter Property="HorizontalContentAlignment" Value="Left" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="GridViewColumnHeader">
                    <Border
                        x:Name="border"
                        Padding="{TemplateBinding Padding}"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}">
                        <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="{DynamicResource Gray300Brush}" />
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="border" Property="Background" Value="{DynamicResource Gray400Brush}" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--  ListViewItem 样式  -->
    <Style x:Key="LOLListViewItemStyle" TargetType="ListViewItem">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}" />
        <Setter Property="Padding" Value="10,8" />
        <Setter Property="FontFamily" Value="{StaticResource PrimaryFont}" />
        <Setter Property="FontSize" Value="{DynamicResource FontSizeNormal}" />
        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ListViewItem">
                    <Grid>
                        <Border
                            x:Name="border"
                            Padding="{TemplateBinding Padding}"
                            BorderThickness="0"
                            CornerRadius="3,0,0,3"
                            SnapsToDevicePixels="True"
                            TextElement.Foreground="{TemplateBinding Foreground}"
                            UseLayoutRounding="True">
                            <Border.Background>
                                <SolidColorBrush Color="Transparent" />
                            </Border.Background>
                            <GridViewRowPresenter
                                HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                RenderOptions.ClearTypeHint="Enabled"
                                TextOptions.TextFormattingMode="Display"
                                TextOptions.TextRenderingMode="ClearType" />
                        </Border>
                        <!--  左边框高光  -->
                        <Border
                            x:Name="LeftBorder"
                            Margin="0"
                            BorderBrush="{DynamicResource SelectedAccentBrush}"
                            BorderThickness="2,0,0,0"
                            CornerRadius="3,0,0,3"
                            IsHitTestVisible="False"
                            Opacity="0"
                            SnapsToDevicePixels="True" />
                    </Grid>
                    <ControlTemplate.Triggers>
                        <!--  MouseOver 状态 - 无动画，即时切换  -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="{DynamicResource BackgroundHoverBrush}" />
                            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}" />
                        </Trigger>
                        <!--  IsSelected 状态 - 左侧竖条效果  -->
                        <Trigger Property="IsSelected" Value="True">
                            <Setter TargetName="border" Property="Background" Value="{DynamicResource SelectedBackgroundBrush}" />
                            <Setter TargetName="LeftBorder" Property="Opacity" Value="1" />
                            <Setter TargetName="LeftBorder" Property="BorderBrush" Value="{DynamicResource SelectedAccentBrush}" />
                            <Setter Property="Foreground" Value="{DynamicResource SelectedTextBrush}" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--  LOL ListView 样式  -->
    <Style x:Key="LOLListViewStyle" TargetType="ListView">
        <Setter Property="Background" Value="{DynamicResource BackgroundDarkBrush}" />
        <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource BorderDarkBrush}" />
        <Setter Property="BorderThickness" Value="0.5" />
        <Setter Property="FontFamily" Value="{StaticResource PrimaryFont}" />
        <Setter Property="FontSize" Value="{DynamicResource FontSizeNormal}" />
        <Setter Property="ItemContainerStyle" Value="{StaticResource LOLListViewItemStyle}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ListView">
                    <Border
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        SnapsToDevicePixels="True">
                        <ScrollViewer>
                            <ItemsPresenter />
                        </ScrollViewer>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--  默认 ListView 样式  -->
    <Style BasedOn="{StaticResource LOLListViewStyle}" TargetType="{x:Type ListView}" />
    <!--  默认 ListViewItem 样式  -->
    <Style BasedOn="{StaticResource LOLListViewItemStyle}" TargetType="{x:Type ListViewItem}" />
    <!--  默认 GridViewColumnHeader 样式  -->
    <Style BasedOn="{StaticResource LOLGridViewColumnHeaderStyle}" TargetType="{x:Type GridViewColumnHeader}" />

</ResourceDictionary>
