<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- 合并基础资源，确保可以访问 Fonts -->
    <!-- 注意：Colors.xaml 和 Sizes.xaml 已通过 Generic.xaml 加载，无需直接引用 -->
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/LOLThemes.Wpf;component/Themes/Fonts.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <!-- GridViewColumnHeader 样式 -->
    <Style x:Key="LOLGridViewColumnHeaderStyle" TargetType="GridViewColumnHeader">
        <Setter Property="Background" Value="{DynamicResource BackgroundLightBrush}"/>
        <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource BorderDarkBrush}"/>
        <Setter Property="BorderThickness" Value="{DynamicResource ListViewItemBorderThickness}"/>
        <Setter Property="Padding" Value="10,8"/>
        <Setter Property="FontFamily" Value="{StaticResource PrimaryFont}"/>
        <Setter Property="FontSize" Value="{DynamicResource FontSizeNormal}"/>
        <Setter Property="FontWeight" Value="{StaticResource FontWeightMedium}"/>
        <Setter Property="HorizontalContentAlignment" Value="Left"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="GridViewColumnHeader">
                    <Border x:Name="border"
                           Background="{TemplateBinding Background}"
                           BorderBrush="{TemplateBinding BorderBrush}"
                           BorderThickness="{TemplateBinding BorderThickness}"
                           Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                        VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" 
                                   Value="{DynamicResource Gray300Brush}"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="border" Property="Background" 
                                   Value="{DynamicResource Gray400Brush}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ListViewItem 样式 -->
    <Style x:Key="LOLListViewItemStyle" TargetType="ListViewItem">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{DynamicResource TextBrightBrush}"/>
        <Setter Property="Padding" Value="10,8"/>
        <Setter Property="FontFamily" Value="{StaticResource PrimaryFont}"/>
        <Setter Property="FontSize" Value="{DynamicResource FontSizeNormal}"/>
        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ListViewItem">
                    <Grid>
                        <Border x:Name="border"
                               BorderThickness="0"
                               Padding="{TemplateBinding Padding}"
                               CornerRadius="3,0,0,3"
                               SnapsToDevicePixels="True"
                               UseLayoutRounding="True"
                               TextElement.Foreground="{TemplateBinding Foreground}">
                            <Border.Background>
                                <DynamicResource ResourceKey="DarkGradientBrush"/>
                            </Border.Background>
                            <Border.Effect>
                                <DropShadowEffect x:Name="ItemShadow"
                                                Color="#C8AA6E"
                                                BlurRadius="5"
                                                ShadowDepth="0"
                                                Opacity="0"/>
                            </Border.Effect>
                            <GridViewRowPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                TextOptions.TextFormattingMode="Display"
                                                TextOptions.TextRenderingMode="ClearType"
                                                RenderOptions.ClearTypeHint="Enabled"/>
                        </Border>
                        <!-- 左边框高光 -->
                        <Border x:Name="LeftBorder"
                               BorderBrush="{DynamicResource PrimaryGoldBrush}"
                               BorderThickness="2,0,0,0"
                               CornerRadius="3,0,0,3"
                               Margin="0"
                               Opacity="0"
                               IsHitTestVisible="False"
                               SnapsToDevicePixels="True"/>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="{DynamicResource GoldGradientBrush}"/>
                            <Setter TargetName="border" Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect Color="#C8AA6E"
                                                    BlurRadius="5"
                                                    ShadowDepth="0"
                                                    Opacity="0.15"/>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="Foreground" 
                                   Value="{DynamicResource BackgroundDarkBrush}"/>
                        </Trigger>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter TargetName="border" Property="Background">
                                <Setter.Value>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                        <GradientStop Color="#E6C8AA6E" Offset="0"/>
                                        <GradientStop Color="#D4C8AA6E" Offset="0.5"/>
                                        <GradientStop Color="#CCC8AA6E" Offset="1"/>
                                    </LinearGradientBrush>
                                </Setter.Value>
                            </Setter>
                            <Setter TargetName="LeftBorder" Property="Opacity" Value="1"/>
                            <Setter TargetName="border" Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect Color="#C8AA6E"
                                                    BlurRadius="5"
                                                    ShadowDepth="0"
                                                    Opacity="0.2"/>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="Foreground" 
                                   Value="{DynamicResource BackgroundDarkBrush}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- LOL ListView 样式 -->
    <Style x:Key="LOLListViewStyle" TargetType="ListView">
        <Setter Property="Background" Value="{DynamicResource BackgroundMediumBrush}"/>
        <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource BorderDarkBrush}"/>
        <Setter Property="BorderThickness" Value="0.5"/>
        <Setter Property="FontFamily" Value="{StaticResource PrimaryFont}"/>
        <Setter Property="FontSize" Value="{DynamicResource FontSizeNormal}"/>
        <Setter Property="ItemContainerStyle" Value="{StaticResource LOLListViewItemStyle}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ListView">
                    <Border Background="{TemplateBinding Background}"
                           BorderBrush="{TemplateBinding BorderBrush}"
                           BorderThickness="{TemplateBinding BorderThickness}"
                           SnapsToDevicePixels="True">
                        <ScrollViewer>
                            <ItemsPresenter/>
                        </ScrollViewer>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- 默认 ListView 样式 -->
    <Style TargetType="{x:Type ListView}" BasedOn="{StaticResource LOLListViewStyle}"/>
    <!-- 默认 ListViewItem 样式 -->
    <Style TargetType="{x:Type ListViewItem}" BasedOn="{StaticResource LOLListViewItemStyle}"/>
    <!-- 默认 GridViewColumnHeader 样式 -->
    <Style TargetType="{x:Type GridViewColumnHeader}" BasedOn="{StaticResource LOLGridViewColumnHeaderStyle}"/>

</ResourceDictionary>
