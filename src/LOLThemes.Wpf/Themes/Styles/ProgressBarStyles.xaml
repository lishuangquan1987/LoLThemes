<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!--
        ===================================================================
        ProgressBarStyles.xaml - ProgressBar 控件样式定义
        ===================================================================
        
        文件说明：
        - 定义 ProgressBar 控件的视觉样式
        - 根据 101.qq.com 网站配色重新设计
        - 使用青色填充色（AccentCyan）
        
        包含的样式：
        - LOLProgressBarStyle: 基础进度条样式
        - 默认样式: 自动应用到所有 ProgressBar 控件
        
        设计特点：
        - 使用纯色背景和边框，无渐变
        - 进度填充使用青色（AccentCyan）
        - 移除所有动画效果和阴影
        - 支持不确定状态（IsIndeterminate）
        
        使用方式：
        - 默认样式会自动应用到所有 ProgressBar 控件
    -->
    
    <!-- 合并基础资源，确保可以访问 Fonts -->
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/LOLThemes.Wpf;component/Themes/Fonts.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <!-- LOL ProgressBar 样式 -->
    <Style x:Key="LOLProgressBarStyle" TargetType="ProgressBar">
        <Setter Property="Height" Value="20"/>
        <Setter Property="Background" Value="{DynamicResource BackgroundCardBrush}"/>
        <Setter Property="Foreground" Value="{DynamicResource ProgressFillBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource BorderDefaultBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ProgressBar">
                    <Grid>
                        <!-- 背景边框 -->
                        <Border Background="{TemplateBinding Background}"
                               BorderBrush="{TemplateBinding BorderBrush}"
                               BorderThickness="{TemplateBinding BorderThickness}"
                               CornerRadius="3"
                               SnapsToDevicePixels="True"/>
                        
                        <!-- 进度条容器 -->
                        <Border x:Name="PART_Track"
                               Margin="2"
                               CornerRadius="2">
                            <Grid>
                                <!-- 进度指示器 - 纯色填充 -->
                                <Border x:Name="PART_Indicator"
                                       HorizontalAlignment="Left"
                                       CornerRadius="2"
                                       Background="{TemplateBinding Foreground}"/>
                            </Grid>
                        </Border>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <!-- 不确定模式 - 保留动画（用于加载状态） -->
                        <Trigger Property="IsIndeterminate" Value="True">
                            <Setter TargetName="PART_Indicator" Property="Visibility" Value="Collapsed"/>
                            <Trigger.EnterActions>
                                <BeginStoryboard Name="IndeterminateStoryboard">
                                    <Storyboard RepeatBehavior="Forever">
                                        <DoubleAnimation Storyboard.TargetName="PART_Indicator"
                                                       Storyboard.TargetProperty="Width"
                                                       From="0"
                                                       To="100"
                                                       Duration="0:0:1.5"
                                                       AutoReverse="True">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseInOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <StopStoryboard BeginStoryboardName="IndeterminateStoryboard"/>
                            </Trigger.ExitActions>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- 垂直 ProgressBar 样式 -->
    <Style x:Key="LOLVerticalProgressBarStyle" TargetType="ProgressBar">
        <Setter Property="Width" Value="20"/>
        <Setter Property="Background" Value="{DynamicResource BackgroundCardBrush}"/>
        <Setter Property="Foreground" Value="{DynamicResource ProgressFillBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource BorderDefaultBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Orientation" Value="Vertical"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ProgressBar">
                    <Grid>
                        <!-- 背景边框 -->
                        <Border Background="{TemplateBinding Background}"
                               BorderBrush="{TemplateBinding BorderBrush}"
                               BorderThickness="{TemplateBinding BorderThickness}"
                               CornerRadius="3"
                               SnapsToDevicePixels="True"/>
                        
                        <!-- 进度条容器 -->
                        <Border x:Name="PART_Track"
                               Margin="2"
                               CornerRadius="2">
                            <Grid>
                                <!-- 进度指示器 - 纯色填充 -->
                                <Border x:Name="PART_Indicator"
                                       VerticalAlignment="Bottom"
                                       CornerRadius="2"
                                       Background="{TemplateBinding Foreground}"/>
                            </Grid>
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- 默认 ProgressBar 样式 -->
    <Style TargetType="{x:Type ProgressBar}" BasedOn="{StaticResource LOLProgressBarStyle}"/>

</ResourceDictionary>
