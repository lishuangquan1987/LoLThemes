<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Fonts.xaml 已通过 Generic.xaml 加载，无需直接引用 -->

    <!-- LOL RadioButton 样式 -->
    <Style x:Key="LOLRadioButtonStyle" TargetType="RadioButton">
        <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
        <Setter Property="FontFamily" Value="{StaticResource PrimaryFont}"/>
        <Setter Property="FontSize" Value="{DynamicResource FontSizeNormal}"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="AutomationProperties.AutomationId" Value="RadioButton"/>
        <Setter Property="AutomationProperties.Name" Value="{Binding Content, RelativeSource={RelativeSource Self}}"/>
        <Setter Property="AutomationProperties.HelpText" Value="单选按钮控件"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="RadioButton">
                    <Grid Background="Transparent">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- 单选按钮容器 -->
                        <Border x:Name="RadioBorder"
                               Grid.Column="0"
                               Width="20"
                               Height="20"
                               Background="{DynamicResource BackgroundInputBrush}"
                               BorderBrush="{DynamicResource BorderDefaultBrush}"
                               BorderThickness="1"
                               CornerRadius="10"
                               Margin="0,0,8,0">
                            <!-- 选中圆点 -->
                            <Ellipse x:Name="RadioDot"
                                    Width="8"
                                    Height="8"
                                    Fill="{DynamicResource BorderGoldBrush}"
                                    Opacity="0"
                                    RenderTransformOrigin="0.5,0.5">
                                <Ellipse.RenderTransform>
                                    <ScaleTransform x:Name="RadioDotScale" ScaleX="0" ScaleY="0"/>
                                </Ellipse.RenderTransform>
                            </Ellipse>
                        </Border>
                        
                        <!-- 文本内容 -->
                        <ContentPresenter Grid.Column="1"
                                        VerticalAlignment="Center"
                                        RecognizesAccessKey="True"/>
                    </Grid>
                    
                    <ControlTemplate.Triggers>
                        <!-- 鼠标悬停 -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="RadioBorder" Property="BorderBrush" 
                                   Value="{DynamicResource BorderGoldBrush}"/>
                            <Setter TargetName="RadioBorder" Property="Background" 
                                   Value="{DynamicResource BackgroundInputBrush}"/>
                            <Setter TargetName="RadioBorder" Property="BorderThickness" Value="1.5"/>
                        </Trigger>
                        
                        <!-- 选中状态 -->
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="RadioBorder" Property="BorderBrush" 
                                   Value="{DynamicResource BorderGoldBrush}"/>
                            <Setter TargetName="RadioBorder" Property="Background" 
                                   Value="{DynamicResource PrimaryGoldSemiBrush}"/>
                            <Setter TargetName="RadioBorder" Property="BorderThickness" Value="2"/>
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="RadioDot"
                                                       Storyboard.TargetProperty="Opacity"
                                                       To="1"
                                                       Duration="0:0:0.2"/>
                                        <DoubleAnimation Storyboard.TargetName="RadioDotScale"
                                                       Storyboard.TargetProperty="ScaleX"
                                                       To="1"
                                                       Duration="0:0:0.25">
                                            <DoubleAnimation.EasingFunction>
                                                <ElasticEase EasingMode="EaseOut" Oscillations="1" Springiness="5"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <DoubleAnimation Storyboard.TargetName="RadioDotScale"
                                                       Storyboard.TargetProperty="ScaleY"
                                                       To="1"
                                                       Duration="0:0:0.25">
                                            <DoubleAnimation.EasingFunction>
                                                <ElasticEase EasingMode="EaseOut" Oscillations="1" Springiness="5"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="RadioDot"
                                                       Storyboard.TargetProperty="Opacity"
                                                       To="0"
                                                       Duration="0:0:0.15"/>
                                        <DoubleAnimation Storyboard.TargetName="RadioDotScale"
                                                       Storyboard.TargetProperty="ScaleX"
                                                       To="0"
                                                       Duration="0:0:0.15"/>
                                        <DoubleAnimation Storyboard.TargetName="RadioDotScale"
                                                       Storyboard.TargetProperty="ScaleY"
                                                       To="0"
                                                       Duration="0:0:0.15"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                        
                        <!-- 禁用状态 -->
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="RadioBorder" Property="BorderBrush" 
                                   Value="{DynamicResource TextDisabledBrush}"/>
                            <Setter TargetName="RadioBorder" Property="Background" 
                                   Value="{DynamicResource BackgroundInputBrush}"/>
                            <Setter TargetName="RadioDot" Property="Fill" 
                                   Value="{DynamicResource TextDisabledBrush}"/>
                            <Setter Property="Foreground" 
                                   Value="{DynamicResource TextDisabledBrush}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- 默认 RadioButton 样式 -->
    <Style TargetType="{x:Type RadioButton}" BasedOn="{StaticResource LOLRadioButtonStyle}"/>

</ResourceDictionary>
