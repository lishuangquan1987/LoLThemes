<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:LOLThemes.Wpf.Controls">
    
    <!-- 合并基础资源，确保可以访问 Colors 和 Fonts -->
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/LOLThemes.Wpf;component/Themes/Colors.xaml"/>
        <ResourceDictionary Source="/LOLThemes.Wpf;component/Themes/Fonts.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <Style TargetType="{x:Type controls:RankBadge}">
        <Setter Property="Width" Value="80"/>
        <Setter Property="Height" Value="80"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:RankBadge}">
                    <Grid>
                        <Border x:Name="rankBorder"
                               Background="{DynamicResource BackgroundMediumBrush}"
                               BorderBrush="{DynamicResource BorderGoldBrush}"
                               BorderThickness="2"
                               CornerRadius="4">
                            <StackPanel VerticalAlignment="Center"
                                       HorizontalAlignment="Center">
                                <TextBlock x:Name="rankIcon"
                                          Text="🏆"
                                          FontSize="32"
                                          HorizontalAlignment="Center"
                                          Margin="0,0,0,5"/>
                                <TextBlock Text="{Binding RankText, RelativeSource={RelativeSource TemplatedParent}}"
                                          Foreground="{DynamicResource TextPrimaryBrush}"
                                          FontFamily="{StaticResource PrimaryFont}"
                                          FontSize="{StaticResource FontSizeSmall}"
                                          FontWeight="{StaticResource FontWeightMedium}"
                                          HorizontalAlignment="Center"
                                          TextAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="RankType" Value="Iron">
                            <Setter TargetName="rankBorder" Property="BorderBrush" Value="#5B5A56"/>
                            <Setter TargetName="rankIcon" Property="Text" Value="🥉"/>
                        </Trigger>
                        <Trigger Property="RankType" Value="Bronze">
                            <Setter TargetName="rankBorder" Property="BorderBrush" Value="#CD7F32"/>
                            <Setter TargetName="rankIcon" Property="Text" Value="🥉"/>
                        </Trigger>
                        <Trigger Property="RankType" Value="Silver">
                            <Setter TargetName="rankBorder" Property="BorderBrush" Value="#C0C0C0"/>
                            <Setter TargetName="rankIcon" Property="Text" Value="🥈"/>
                        </Trigger>
                        <Trigger Property="RankType" Value="Gold">
                            <Setter TargetName="rankBorder" Property="BorderBrush" Value="#C8AA6E"/>
                            <Setter TargetName="rankIcon" Property="Text" Value="🥇"/>
                        </Trigger>
                        <Trigger Property="RankType" Value="Platinum">
                            <Setter TargetName="rankBorder" Property="BorderBrush" Value="#0AC8B9"/>
                            <Setter TargetName="rankIcon" Property="Text" Value="💎"/>
                        </Trigger>
                        <Trigger Property="RankType" Value="Diamond">
                            <Setter TargetName="rankBorder" Property="BorderBrush" Value="#B9F2FF"/>
                            <Setter TargetName="rankIcon" Property="Text" Value="💠"/>
                        </Trigger>
                        <Trigger Property="RankType" Value="Master">
                            <Setter TargetName="rankBorder" Property="BorderBrush" Value="#FF6B9D"/>
                            <Setter TargetName="rankIcon" Property="Text" Value="👑"/>
                        </Trigger>
                        <Trigger Property="RankType" Value="Grandmaster">
                            <Setter TargetName="rankBorder" Property="BorderBrush" Value="#FF0000"/>
                            <Setter TargetName="rankIcon" Property="Text" Value="👑"/>
                        </Trigger>
                        <Trigger Property="RankType" Value="Challenger">
                            <Setter TargetName="rankBorder" Property="BorderBrush" Value="#FFD700"/>
                            <Setter TargetName="rankIcon" Property="Text" Value="👑"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
