<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- 水平 Separator 样式 -->
    <Style x:Key="LOLSeparatorStyle" TargetType="Separator">
        <Setter Property="Background" Value="{StaticResource BorderDarkBrush}"/>
        <Setter Property="Margin" Value="0,4"/>
        <Setter Property="Focusable" Value="False"/>
        <Setter Property="Height" Value="1"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Separator">
                    <Border Background="{TemplateBinding Background}"
                           BorderBrush="{TemplateBinding BorderBrush}"
                           BorderThickness="{TemplateBinding BorderThickness}"
                           Height="{TemplateBinding Height}"
                           SnapsToDevicePixels="True"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- 垂直 Separator 样式 -->
    <Style x:Key="VerticalSeparator" TargetType="Separator" BasedOn="{StaticResource LOLSeparatorStyle}">
        <Setter Property="Margin" Value="4,0"/>
        <Setter Property="Width" Value="1"/>
        <Setter Property="Height" Value="Auto"/>
        <Setter Property="VerticalAlignment" Value="Stretch"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Separator">
                    <Border Background="{TemplateBinding Background}"
                           BorderBrush="{TemplateBinding BorderBrush}"
                           BorderThickness="{TemplateBinding BorderThickness}"
                           Width="{TemplateBinding Width}"
                           SnapsToDevicePixels="True"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- 金色 Separator 样式 -->
    <Style x:Key="GoldSeparator" TargetType="Separator" BasedOn="{StaticResource LOLSeparatorStyle}">
        <Setter Property="Background" Value="{StaticResource BorderGoldBrush}"/>
    </Style>

    <!-- 粗 Separator 样式 -->
    <Style x:Key="ThickSeparator" TargetType="Separator" BasedOn="{StaticResource LOLSeparatorStyle}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Separator">
                    <Border Background="{TemplateBinding Background}"
                           BorderBrush="{TemplateBinding BorderBrush}"
                           BorderThickness="{TemplateBinding BorderThickness}"
                           Height="2"
                           SnapsToDevicePixels="True"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- 设置为默认样式 -->
    <Style TargetType="Separator" BasedOn="{StaticResource LOLSeparatorStyle}"/>

</ResourceDictionary>
