<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:LOLThemes.Wpf.Controls"
    xmlns:converters="clr-namespace:LOLThemes.Wpf.Converters">

    <!--  合并基础资源，确保可以访问 Fonts  -->
    <!--  注意：Colors.xaml 和 Sizes.xaml 已通过 Generic.xaml 加载，无需直接引用  -->
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/LOLThemes.Wpf;component/Themes/Fonts.xaml" />
        <ResourceDictionary Source="pack://application:,,,/LOLThemes.Wpf;component/Themes/Animations.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <!--  辅助转换器：检查值是否大于零  -->
    <converters:GreaterThanZeroConverter x:Key="GreaterThanZeroConverter" />
    <!--  辅助转换器：处理null值的可见性  -->
    <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />

    <Style x:Key="SkillButtonStyle" TargetType="{x:Type controls:SkillButton}">
        <Style.Resources>
            <!--  为了解决InitializeComponent错误，添加必要的资源  -->
            <SolidColorBrush x:Key="BackgroundMediumBrush" Color="#FF2A2A2A" />
            <SolidColorBrush x:Key="BorderGoldBrush" Color="#FFD4AF37" />
            <SolidColorBrush x:Key="HoverGoldBrush" Color="#FFF4D03F" />
            <SolidColorBrush x:Key="TextPrimaryBrush" Color="#FFFFFFFF" />
            <SolidColorBrush x:Key="TextDisabledBrush" Color="#FF888888" />
        </Style.Resources>
        <Setter Property="Width" Value="60" />
        <Setter Property="Height" Value="60" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:SkillButton}">
                    <Grid>
                        <!--  简化的圆形背景  -->
                        <Ellipse
                            x:Name="background"
                            Fill="{DynamicResource BackgroundMediumBrush}"
                            Stroke="{DynamicResource BorderGoldBrush}"
                            StrokeThickness="2" />

                        <!--  快捷键文本  -->
                        <TextBlock
                            Margin="0,0,0,5"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Bottom"
                            FontSize="12"
                            FontWeight="Bold"
                            Foreground="{DynamicResource TextPrimaryBrush}"
                            Text="{TemplateBinding HotkeyText}" />
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="background" Property="Stroke" Value="{DynamicResource HoverGoldBrush}" />
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="background" Property="Fill" Value="{DynamicResource BackgroundDarkBrush}" />
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="background" Property="Stroke" Value="{DynamicResource TextDisabledBrush}" />
                            <Setter TargetName="background" Property="Opacity" Value="0.5" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
