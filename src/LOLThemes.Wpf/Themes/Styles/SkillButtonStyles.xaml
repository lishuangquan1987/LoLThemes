<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:LOLThemes.Wpf.Controls"
                    xmlns:converters="clr-namespace:LOLThemes.Wpf.Converters">
    
    <!-- 合并基础资源，确保可以访问 Colors 和 Fonts -->
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/LOLThemes.Wpf;component/Themes/Colors.xaml"/>
        <ResourceDictionary Source="/LOLThemes.Wpf;component/Themes/Fonts.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <!-- 辅助转换器：检查值是否大于0 -->
    <converters:GreaterThanZeroConverter x:Key="GreaterThanZeroConverter"/>

    <Style TargetType="{x:Type controls:SkillButton}">
        <Setter Property="Width" Value="60"/>
        <Setter Property="Height" Value="60"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:SkillButton}">
                    <Grid>
                        <!-- 圆形背景 -->
                        <Ellipse x:Name="background"
                                Fill="{StaticResource BackgroundMediumBrush}"
                                Stroke="{StaticResource BorderGoldBrush}"
                                StrokeThickness="2"/>

                        <!-- 技能图标 -->
                        <Ellipse>
                            <Ellipse.Fill>
                                <ImageBrush ImageSource="{TemplateBinding SkillIcon}"
                                          Stretch="UniformToFill"/>
                            </Ellipse.Fill>
                        </Ellipse>

                        <!-- 冷却遮罩 -->
                        <Grid x:Name="cooldownMask"
                             Visibility="Collapsed">
                            <Ellipse Fill="#80000000"/>
                            <Path x:Name="cooldownPath"
                                 Fill="{StaticResource BackgroundDarkBrush}"
                                 Opacity="0.8"
                                 Stretch="Fill">
                                <Path.Data>
                                    <PathGeometry>
                                        <PathFigure StartPoint="30,30">
                                            <LineSegment Point="30,0"/>
                                            <ArcSegment x:Name="cooldownArc"
                                                      Size="30,30"
                                                      SweepDirection="Clockwise"
                                                      IsLargeArc="False"
                                                      Point="30,0"/>
                                        </PathFigure>
                                    </PathGeometry>
                                </Path.Data>
                            </Path>
                        </Grid>

                        <!-- 快捷键文本 -->
                        <TextBlock Text="{TemplateBinding HotkeyText}"
                                  Foreground="{StaticResource TextPrimaryBrush}"
                                  FontFamily="{StaticResource PrimaryFont}"
                                  FontSize="{StaticResource FontSizeSmall}"
                                  FontWeight="{StaticResource FontWeightBold}"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Bottom"
                                  Margin="0,0,0,5"/>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="background" Property="Stroke" Value="{StaticResource HoverGoldBrush}"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="background" Property="Fill" Value="{StaticResource BackgroundDarkBrush}"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="background" Property="Stroke" Value="{StaticResource TextDisabledBrush}"/>
                            <Setter TargetName="background" Property="Opacity" Value="0.5"/>
                        </Trigger>
                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=CooldownProgress, Converter={StaticResource GreaterThanZeroConverter}}" Value="True">
                            <Setter TargetName="cooldownMask" Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
