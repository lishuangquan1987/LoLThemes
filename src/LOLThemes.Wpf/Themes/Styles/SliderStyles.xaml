<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--  基础资源已通过 Generic.xaml 加载，无需直接引用  -->

    <!--  Slider Thumb 样式 - 简化为基本圆形设计  -->
    <Style x:Key="SliderThumbStyle" TargetType="Thumb">
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Setter Property="OverridesDefaultStyle" Value="True" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Thumb">
                    <!--  简化的主滑块  -->
                    <Ellipse
                        x:Name="MainEllipse"
                        Fill="{DynamicResource AccentGoldBrush}"
                        SnapsToDevicePixels="True"
                        Stroke="{DynamicResource AccentGoldBrush}"
                        StrokeThickness="2"
                        UseLayoutRounding="True" />
                    <ControlTemplate.Triggers>
                        <!--  鼠标悬停状态  -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="MainEllipse" Property="Stroke" Value="{DynamicResource AccentGoldLightBrush}" />
                        </Trigger>

                        <!--  拖拽状态  -->
                        <Trigger Property="IsDragging" Value="True">
                            <Setter TargetName="MainEllipse" Property="Fill" Value="{DynamicResource AccentGoldBrush}" />
                            <Setter TargetName="MainEllipse" Property="Stroke" Value="{DynamicResource AccentGoldBrightBrush}" />
                        </Trigger>

                        <!--  禁用状态  -->
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="MainEllipse" Property="Fill" Value="{DynamicResource BackgroundPanelBrush}" />
                            <Setter TargetName="MainEllipse" Property="Stroke" Value="{DynamicResource TextDisabledBrush}" />
                            <Setter TargetName="MainEllipse" Property="StrokeThickness" Value="1" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--  Slider RepeatButton 样式（轨道填充）- 简化为纯色填充  -->
    <Style x:Key="SliderRepeatButtonStyle_Horizontal" TargetType="RepeatButton">
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Setter Property="OverridesDefaultStyle" Value="True" />

        <Setter Property="IsTabStop" Value="False" />
        <Setter Property="Focusable" Value="False" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="RepeatButton">
                    <Border
                        Margin="0,0,-5,0"
                        Background="{DynamicResource AccentGoldBrush}"
                        CornerRadius="3" />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="SliderRepeatButtonStyle_Vertical" TargetType="RepeatButton">
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Setter Property="OverridesDefaultStyle" Value="True" />

        <Setter Property="IsTabStop" Value="False" />
        <Setter Property="Focusable" Value="False" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="RepeatButton">
                    <Border
                        Margin="0,-5,0,0"
                        Background="{DynamicResource AccentGoldBrush}"
                        CornerRadius="3" />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--  水平 Slider ControlTemplate - 优化为更现代的设计  -->
    <ControlTemplate x:Key="LOLHorizontalSliderTemplate" TargetType="Slider">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" MinHeight="{TemplateBinding MinHeight}" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!--  刻度（上方）  -->
            <TickBar
                x:Name="TopTick"
                Grid.Row="0"
                Height="4"
                Fill="{DynamicResource TextSecondaryBrush}"
                Placement="Top"
                Visibility="Collapsed" />

            <!--  轨道背景 - 优化为更简洁的深色设计  -->
            <!--<Border
                x:Name="TrackBackground"
                Grid.Row="1"
                Background="{DynamicResource BackgroundInputBrush}"
                BorderBrush="{DynamicResource BorderMediumBrush}"
                BorderThickness="1"
                CornerRadius="3"
                SnapsToDevicePixels="True"
                UseLayoutRounding="True" />-->

            <Track x:Name="PART_Track" Grid.Row="1">
                <Track.DecreaseRepeatButton>
                    <RepeatButton
                        Height="5"
                        Command="Slider.DecreaseLarge"
                        Focusable="False"
                        IsTabStop="True"
                        OverridesDefaultStyle="True"
                        SnapsToDevicePixels="True">
                        <RepeatButton.Template>
                            <ControlTemplate>
                                <Border
                                    Margin="0,0,-5,0"
                                    Background="{DynamicResource AccentGoldBrush}"
                                    CornerRadius="3" />
                            </ControlTemplate>
                        </RepeatButton.Template>
                    </RepeatButton>
                </Track.DecreaseRepeatButton>
                <Track.Thumb>
                    <Thumb
                        Width="15"
                        Height="15"
                        Style="{StaticResource SliderThumbStyle}" />
                </Track.Thumb>
                <Track.IncreaseRepeatButton>
                    <!--  右侧未填充区域使用透明背景  -->
                    <RepeatButton
                        Height="5"
                        Command="Slider.IncreaseLarge"
                        Focusable="False"
                        IsTabStop="True"
                        OverridesDefaultStyle="True"
                        SnapsToDevicePixels="True">
                        <RepeatButton.Template>
                            <ControlTemplate>
                                <Border
                                    Margin="-5,0,0,0"
                                    BorderBrush="{DynamicResource AccentGoldBrush}"
                                    BorderThickness="1"
                                    CornerRadius="3" />
                            </ControlTemplate>
                        </RepeatButton.Template>
                    </RepeatButton>
                </Track.IncreaseRepeatButton>
            </Track>

            <!--  刻度（下方）  -->
            <TickBar
                x:Name="BottomTick"
                Grid.Row="2"
                Height="4"
                Fill="{DynamicResource TextSecondaryBrush}"
                Placement="Bottom"
                Visibility="Collapsed" />
        </Grid>
        <ControlTemplate.Triggers>
            <!--  启用刻度显示  -->
            <Trigger Property="TickPlacement" Value="TopLeft">
                <Setter TargetName="TopTick" Property="Visibility" Value="Visible" />
            </Trigger>
            <Trigger Property="TickPlacement" Value="BottomRight">
                <Setter TargetName="BottomTick" Property="Visibility" Value="Visible" />
            </Trigger>
            <Trigger Property="TickPlacement" Value="Both">
                <Setter TargetName="TopTick" Property="Visibility" Value="Visible" />
                <Setter TargetName="BottomTick" Property="Visibility" Value="Visible" />
            </Trigger>

            <!--  禁用状态  -->
            <!--<Trigger Property="IsEnabled" Value="False">
                <Setter TargetName="TrackBackground" Property="Background" Value="{DynamicResource BackgroundDarkBrush}" />
                <Setter TargetName="TrackBackground" Property="BorderBrush" Value="{DynamicResource BorderDarkBrush}" />
            </Trigger>-->
        </ControlTemplate.Triggers>
    </ControlTemplate>

    <!--  垂直 Slider ControlTemplate - 优化为更现代的设计  -->
    <ControlTemplate x:Key="LOLVerticalSliderTemplate" TargetType="Slider">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" MinWidth="{TemplateBinding MinWidth}" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!--  刻度（左侧）  -->
            <TickBar
                x:Name="LeftTick"
                Grid.Column="0"
                Width="4"
                Fill="{DynamicResource TextSecondaryBrush}"
                Placement="Left"
                Visibility="Collapsed" />

            <!--  轨道背景 - 优化为更简洁的深色设计  -->
            <!--<Border
                x:Name="TrackBackground"
                Grid.Column="1"
                Background="{DynamicResource BackgroundInputBrush}"
                BorderBrush="{DynamicResource BorderMediumBrush}"
                BorderThickness="1"
                CornerRadius="3" />-->

            <Track x:Name="PART_Track" Grid.Column="1">
                <Track.DecreaseRepeatButton>
                    <RepeatButton
                        Width="5"
                        Command="Slider.DecreaseLarge"
                        Focusable="False"
                        IsTabStop="True"
                        OverridesDefaultStyle="True"
                        SnapsToDevicePixels="True">
                        <RepeatButton.Template>
                            <ControlTemplate>
                                <Border
                                    Margin="0,-5,0,0"
                                    Background="{DynamicResource AccentGoldBrush}"
                                    CornerRadius="3" />
                            </ControlTemplate>
                        </RepeatButton.Template>
                    </RepeatButton>
                </Track.DecreaseRepeatButton>
                <Track.Thumb>
                    <Thumb
                        Width="15"
                        Height="15"
                        Style="{StaticResource SliderThumbStyle}" />
                </Track.Thumb>
                <Track.IncreaseRepeatButton>
                    <!--  右侧未填充区域使用透明背景  -->
                    <RepeatButton
                        Width="5"
                        HorizontalAlignment="Center"
                        Command="Slider.IncreaseLarge"
                        Focusable="False"
                        IsTabStop="True"
                        OverridesDefaultStyle="True"
                        SnapsToDevicePixels="True">
                        <RepeatButton.Template>
                            <ControlTemplate>
                                <Border
                                    Margin="0,0,0,-5"
                                    BorderBrush="{DynamicResource AccentGoldBrush}"
                                    BorderThickness="1"
                                    CornerRadius="3" />
                            </ControlTemplate>
                        </RepeatButton.Template>
                    </RepeatButton>
                </Track.IncreaseRepeatButton>
            </Track>

            <!--  刻度（右侧）  -->
            <TickBar
                x:Name="RightTick"
                Grid.Column="2"
                Width="4"
                Fill="{DynamicResource TextSecondaryBrush}"
                Placement="Right"
                Visibility="Collapsed" />
        </Grid>
        <ControlTemplate.Triggers>
            <!--  启用刻度显示  -->
            <Trigger Property="TickPlacement" Value="TopLeft">
                <Setter TargetName="LeftTick" Property="Visibility" Value="Visible" />
            </Trigger>
            <Trigger Property="TickPlacement" Value="BottomRight">
                <Setter TargetName="RightTick" Property="Visibility" Value="Visible" />
            </Trigger>
            <Trigger Property="TickPlacement" Value="Both">
                <Setter TargetName="LeftTick" Property="Visibility" Value="Visible" />
                <Setter TargetName="RightTick" Property="Visibility" Value="Visible" />
            </Trigger>

            <!--  禁用状态  -->
            <!--<Trigger Property="IsEnabled" Value="False">
                <Setter TargetName="TrackBackground" Property="Background" Value="{DynamicResource BackgroundDarkBrush}" />
                <Setter TargetName="TrackBackground" Property="BorderBrush" Value="{DynamicResource BorderDarkBrush}" />
            </Trigger>-->
        </ControlTemplate.Triggers>
    </ControlTemplate>

    <!--  LOL Slider 样式（默认水平）  -->
    <Style x:Key="LOLSliderStyle" TargetType="Slider">
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Setter Property="OverridesDefaultStyle" Value="True" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Foreground" Value="{DynamicResource BorderGoldBrush}" />
        <Setter Property="Template" Value="{StaticResource LOLHorizontalSliderTemplate}" />
        <Style.Triggers>
            <Trigger Property="Orientation" Value="Vertical">
                <Setter Property="Template" Value="{StaticResource LOLVerticalSliderTemplate}" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <!--  默认 Slider 样式  -->
    <Style BasedOn="{StaticResource LOLSliderStyle}" TargetType="{x:Type Slider}" />
</ResourceDictionary>